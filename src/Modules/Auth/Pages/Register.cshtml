@page "/Auth/Register"
@model Gixat.Modules.Auth.Pages.RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gixat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        apple: {
                            blue: '#0071e3',
                            'blue-hover': '#0077ED',
                            gray: '#86868b',
                            dark: '#1d1d1f',
                            light: '#fbfbfd',
                        }
                    },
                    fontFamily: {
                        apple: ['-apple-system', 'BlinkMacSystemFont', 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', 'Helvetica', 'Arial', 'sans-serif'],
                    }
                }
            }
        }
    </script>
</head>
<body class="font-apple bg-apple-light min-h-screen flex flex-col antialiased">
    <a href="/" class="absolute top-5 left-5 text-apple-gray text-sm flex items-center gap-1.5 no-underline hover:text-apple-dark transition-colors z-10">
        <i class="bi bi-arrow-left"></i>
        Back to home
    </a>

    <div class="flex-1 flex items-center justify-center p-10 bg-gradient-to-b from-apple-light to-gray-100 relative overflow-hidden">
        <div class="absolute -top-1/2 -left-1/2 w-[200%] h-[200%] bg-[radial-gradient(circle_at_70%_30%,rgba(102,126,234,0.03)_0%,transparent_50%),radial-gradient(circle_at_30%_70%,rgba(118,75,162,0.03)_0%,transparent_50%)]"></div>
        
        <div class="bg-white rounded-2xl shadow-lg p-12 w-full max-w-lg relative z-10">
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-5">
                    <i class="bi bi-gear-wide-connected text-white text-3xl"></i>
                </div>
                <h1 class="text-3xl font-semibold text-apple-dark tracking-tight mb-2">Create your account</h1>
                <p class="text-apple-gray text-sm">Start managing your garage in minutes</p>
            </div>

            @if (Model.Errors.Any())
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3.5 rounded-xl mb-5 text-sm">
                    <div class="flex items-center gap-2 font-medium mb-2">
                        <i class="bi bi-exclamation-circle"></i>
                        Please fix the following errors:
                    </div>
                    <ul class="list-disc list-inside space-y-1">
                        @foreach (var error in Model.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-5">
                    <div>
                        <label asp-for="Input.FirstName" class="block text-sm font-medium text-apple-dark mb-2">First name</label>
                        <input asp-for="Input.FirstName" class="w-full py-3.5 px-4 text-base border border-gray-300 rounded-xl bg-apple-light text-apple-dark outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100 focus:bg-white transition-all placeholder:text-apple-gray" placeholder="John" />
                        <span asp-validation-for="Input.FirstName" class="text-red-600 text-xs mt-1.5 block"></span>
                    </div>
                    <div>
                        <label asp-for="Input.LastName" class="block text-sm font-medium text-apple-dark mb-2">Last name</label>
                        <input asp-for="Input.LastName" class="w-full py-3.5 px-4 text-base border border-gray-300 rounded-xl bg-apple-light text-apple-dark outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100 focus:bg-white transition-all placeholder:text-apple-gray" placeholder="Doe" />
                        <span asp-validation-for="Input.LastName" class="text-red-600 text-xs mt-1.5 block"></span>
                    </div>
                </div>

                <div class="mb-5">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-apple-dark mb-2">Email address</label>
                    <input asp-for="Input.Email" class="w-full py-3.5 px-4 text-base border border-gray-300 rounded-xl bg-apple-light text-apple-dark outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100 focus:bg-white transition-all placeholder:text-apple-gray" placeholder="you@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-600 text-xs mt-1.5 block"></span>
                </div>

                <div class="mb-5">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-apple-dark mb-2">Password</label>
                    <input asp-for="Input.Password" class="w-full py-3.5 px-4 text-base border border-gray-300 rounded-xl bg-apple-light text-apple-dark outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100 focus:bg-white transition-all placeholder:text-apple-gray" placeholder="Create a strong password" />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-xs mt-1.5 block"></span>
                    <div class="bg-apple-light rounded-lg px-4 py-3 mt-2 text-xs text-apple-gray">
                        <strong class="text-apple-dark">Password must contain:</strong>
                        <ul class="list-disc list-inside mt-2 space-y-1">
                            <li>At least 8 characters</li>
                            <li>Upper and lowercase letters</li>
                            <li>At least one number and symbol</li>
                        </ul>
                    </div>
                </div>

                <div class="mb-5">
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-apple-dark mb-2">Confirm password</label>
                    <input asp-for="Input.ConfirmPassword" class="w-full py-3.5 px-4 text-base border border-gray-300 rounded-xl bg-apple-light text-apple-dark outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100 focus:bg-white transition-all placeholder:text-apple-gray" placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs mt-1.5 block"></span>
                </div>

                <button type="submit" class="w-full py-3.5 px-6 text-base font-medium text-white bg-apple-blue border-none rounded-xl cursor-pointer hover:bg-apple-blue-hover hover:scale-[1.01] active:scale-[0.99] transition-all mt-2">
                    Create account
                </button>

                <p class="text-xs text-apple-gray text-center mt-4">
                    By creating an account, you agree to our 
                    <a href="#" class="text-apple-blue no-underline hover:underline">Terms of Service</a> and 
                    <a href="#" class="text-apple-blue no-underline hover:underline">Privacy Policy</a>
                </p>
            </form>

            <div class="flex items-center my-6 text-apple-gray text-xs">
                <div class="flex-1 h-px bg-gray-300"></div>
                <span class="px-4">or sign up with</span>
                <div class="flex-1 h-px bg-gray-300"></div>
            </div>

            <div class="flex gap-3 mb-6">
                <button type="button" class="flex-1 py-3 border border-gray-300 rounded-xl bg-white flex items-center justify-center gap-2 text-sm text-apple-dark cursor-pointer hover:bg-apple-light hover:border-apple-gray transition-all">
                    <i class="bi bi-google text-xl"></i>
                    Google
                </button>
                <button type="button" class="flex-1 py-3 border border-gray-300 rounded-xl bg-white flex items-center justify-center gap-2 text-sm text-apple-dark cursor-pointer hover:bg-apple-light hover:border-apple-gray transition-all">
                    <i class="bi bi-apple text-xl"></i>
                    Apple
                </button>
            </div>

            <div class="text-center text-apple-gray text-sm">
                Already have an account? <a href="/Auth/Login" class="text-apple-blue font-medium no-underline hover:underline">Sign in</a>
            </div>
        </div>
    </div>
</body>
</html>
