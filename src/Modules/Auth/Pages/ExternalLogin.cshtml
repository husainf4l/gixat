@page "/Auth/ExternalLogin"
@model Gixat.Modules.Auth.Pages.ExternalLoginModel
@{
    ViewData["Title"] = "External Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gixat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-md text-center">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3.5 rounded-xl mb-5 text-sm flex items-center gap-2">
                <i class="bi bi-exclamation-circle"></i>@Model.ErrorMessage
            </div>
            <a href="/Auth/Login" class="text-blue-600 hover:underline">Return to Login</a>
        }
        else
        {
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
            <p class="text-gray-600">Processing your login...</p>
        }
    </div>
</body>
</html>
