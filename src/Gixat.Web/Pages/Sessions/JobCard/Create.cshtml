@page "/Sessions/{id:guid}/JobCard/Create"
@model Gixat.Web.Pages.Sessions.JobCard.CreateModel
@using Gixat.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Create Job Card";
    Layout = "_AppLayout";
}

<div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
        <a href="/Sessions/@Model.Session?.Id" class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
            <i class="bi bi-arrow-left text-gray-500"></i>
        </a>
        <div>
            <h1 class="text-2xl font-semibold text-gray-900">Create Job Card</h1>
            <p class="text-sm text-gray-500">Session #@Model.Session?.SessionNumber â€¢ @Model.Session?.VehicleDisplayName</p>
        </div>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <form method="post">
            <div class="space-y-6">
                <!-- Title -->
                <div>
                    <label asp-for="Input.Title" class="block text-sm font-medium text-gray-700 mb-1.5">Job Card Title <span class="text-red-500">*</span></label>
                    <input asp-for="Input.Title" class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" required />
                    <span asp-validation-for="Input.Title" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <!-- Priority -->
                    <div>
                        <label asp-for="Input.Priority" class="block text-sm font-medium text-gray-700 mb-1.5">Priority</label>
                        <select asp-for="Input.Priority" class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 bg-white">
                            <option value="@Priority.Low">Low</option>
                            <option value="@Priority.Normal" selected>Normal</option>
                            <option value="@Priority.High">High</option>
                            <option value="@Priority.Urgent">Urgent</option>
                        </select>
                    </div>

                    <!-- Estimated Hours -->
                    <div>
                        <label asp-for="Input.EstimatedHours" class="block text-sm font-medium text-gray-700 mb-1.5">Estimated Hours</label>
                        <input asp-for="Input.EstimatedHours" type="number" step="0.5" min="0" class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" placeholder="e.g., 2.5" />
                    </div>
                </div>

                <!-- Description -->
                <div>
                    <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700 mb-1.5">Description</label>
                    <textarea asp-for="Input.Description" rows="4" class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 resize-none" placeholder="Describe the work to be performed..."></textarea>
                </div>

                <!-- Info Box -->
                <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                    <div class="flex gap-3">
                        <i class="bi bi-info-circle text-green-500 text-lg"></i>
                        <div>
                            <h4 class="text-sm font-medium text-green-800">What happens next?</h4>
                            <p class="text-sm text-green-700 mt-1">After creating the job card, you can add work items, assign technicians, and track progress. The job card will need customer approval before work can begin.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-3 mt-8 pt-6 border-t border-gray-200">
                <a href="/Sessions/@Model.Session?.Id" class="px-5 py-2.5 border border-gray-300 rounded-lg bg-white text-gray-700 text-sm font-medium hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-2.5 bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-lg text-sm font-semibold hover:from-indigo-600 hover:to-purple-700 transition-all flex items-center gap-2">
                    <i class="bi bi-card-checklist"></i> Create Job Card
                </button>
            </div>
        </form>
    </div>
</div>
