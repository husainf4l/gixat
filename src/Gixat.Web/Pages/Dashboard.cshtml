@page
@model Gixat.Web.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AppLayout";
}

<!-- Welcome Card -->
<div class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-xl p-8 mb-6">
    <h2 class="text-2xl font-semibold mb-2">Welcome back, @User.Identity?.Name! ðŸ‘‹</h2>
    <p class="opacity-75">Here's what's happening with your garage today.</p>
</div>

<!-- Stats Row -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200">
        <div class="flex items-center">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center">
                <i class="bi bi-clipboard-check text-white text-2xl"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-2xl font-bold text-apple-dark">@Model.ActiveSessions</h3>
                <span class="text-sm text-apple-gray">Active Sessions</span>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200">
        <div class="flex items-center">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-r from-teal-500 to-green-400 flex items-center justify-center">
                <i class="bi bi-wrench-adjustable text-white text-2xl"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-2xl font-bold text-apple-dark">@Model.InProgressSessions</h3>
                <span class="text-sm text-apple-gray">In Progress</span>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200">
        <div class="flex items-center">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-r from-pink-400 to-rose-500 flex items-center justify-center">
                <i class="bi bi-check2-circle text-white text-2xl"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-2xl font-bold text-apple-dark">@Model.AwaitingPickup</h3>
                <span class="text-sm text-apple-gray">Ready for Pickup</span>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200">
        <div class="flex items-center">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-r from-cyan-400 to-sky-500 flex items-center justify-center">
                <i class="bi bi-people text-white text-2xl"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-2xl font-bold text-apple-dark">@Model.TotalClients</h3>
                <span class="text-sm text-apple-gray">Total Clients</span>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 bg-white rounded-xl p-6 shadow-sm">
        <div class="flex justify-between items-center mb-4">
            <h5 class="text-lg font-semibold text-apple-dark flex items-center gap-2">
                <i class="bi bi-clipboard-check"></i>Recent Sessions
            </h5>
            <a href="/Sessions" class="px-4 py-2 text-sm border border-indigo-500 text-indigo-500 rounded-lg hover:bg-indigo-50 transition-colors">View All</a>
        </div>
        @if (Model.RecentSessions.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-200">
                            <th class="text-left py-3 px-2 text-sm font-semibold text-apple-gray">Session #</th>
                            <th class="text-left py-3 px-2 text-sm font-semibold text-apple-gray">Vehicle</th>
                            <th class="text-left py-3 px-2 text-sm font-semibold text-apple-gray">Status</th>
                            <th class="text-left py-3 px-2 text-sm font-semibold text-apple-gray">Check-In</th>
                            <th class="text-left py-3 px-2 text-sm font-semibold text-apple-gray"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model.RecentSessions)
                        {
                            <tr class="border-b border-gray-100 hover:bg-gray-50">
                                <td class="py-3 px-2 font-semibold">@session.SessionNumber</td>
                                <td class="py-3 px-2">@session.VehicleDisplayName</td>
                                <td class="py-3 px-2">
                                    @{
                                        var badgeClass = session.Status switch
                                        {
                                            Gixat.Modules.Sessions.Enums.SessionStatus.CheckedIn => "bg-cyan-100 text-cyan-700",
                                            Gixat.Modules.Sessions.Enums.SessionStatus.InProgress => "bg-indigo-100 text-indigo-700",
                                            Gixat.Modules.Sessions.Enums.SessionStatus.Completed => "bg-green-100 text-green-700",
                                            Gixat.Modules.Sessions.Enums.SessionStatus.ReadyForPickup => "bg-yellow-100 text-yellow-700",
                                            Gixat.Modules.Sessions.Enums.SessionStatus.Closed => "bg-gray-100 text-gray-700",
                                            _ => "bg-gray-100 text-gray-700"
                                        };
                                    }
                                    <span class="px-2.5 py-1 rounded-full text-xs font-medium @badgeClass">@session.Status</span>
                                </td>
                                <td class="py-3 px-2 text-sm text-apple-gray">@session.CheckInAt.ToString("MMM dd, HH:mm")</td>
                                <td class="py-3 px-2">
                                    <a href="/Sessions/Details/@session.Id" class="p-2 text-gray-500 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors inline-flex">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-apple-gray py-12">
                <i class="bi bi-inbox text-5xl mb-4 block"></i>
                <p class="mb-4">No active sessions</p>
                <a href="/Sessions/Create" class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600 transition-colors">
                    <i class="bi bi-plus-lg"></i>Create New Session
                </a>
            </div>
        }
    </div>
    <div class="space-y-6">
        <div class="bg-white rounded-xl p-6 shadow-sm">
            <h5 class="text-lg font-semibold text-apple-dark flex items-center gap-2 mb-4">
                <i class="bi bi-plus-circle"></i>Quick Actions
            </h5>
            <div class="flex flex-col gap-3">
                <a href="/Sessions/Create" class="flex items-center justify-center gap-2 px-4 py-3 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600 transition-colors">
                    <i class="bi bi-car-front"></i>New Check-In
                </a>
                <a href="/Clients/Create" class="flex items-center justify-center gap-2 px-4 py-3 border border-indigo-500 text-indigo-500 rounded-lg hover:bg-indigo-50 transition-colors">
                    <i class="bi bi-person-plus"></i>Add Client
                </a>
                <a href="/Sessions" class="flex items-center justify-center gap-2 px-4 py-3 border border-gray-300 text-gray-600 rounded-lg hover:bg-gray-50 transition-colors">
                    <i class="bi bi-list-ul"></i>All Sessions
                </a>
            </div>
        </div>
        <div class="bg-white rounded-xl p-6 shadow-sm">
            <h5 class="text-lg font-semibold text-apple-dark flex items-center gap-2 mb-4">
                <i class="bi bi-graph-up"></i>Today's Stats
            </h5>
            <div class="flex justify-between py-3 border-b border-gray-100">
                <span class="text-apple-gray">Sessions Today</span>
                <strong class="text-apple-dark">@Model.TodaySessions</strong>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-100">
                <span class="text-apple-gray">Total Vehicles</span>
                <strong class="text-apple-dark">@Model.TotalVehicles</strong>
            </div>
            <div class="flex justify-between py-3">
                <span class="text-apple-gray">VIP Clients</span>
                <strong class="text-apple-dark">@Model.VipClients</strong>
            </div>
        </div>
    </div>
</div>
