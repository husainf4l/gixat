@{
    Layout = "_Layout";
    var currentPath = Context.Request.Path.ToString().ToLower();
}

<style>
    /* Layout */
    .app-container {
        display: flex;
        min-height: calc(100vh - 56px);
    }

    /* Sidebar */
    .sidebar {
        width: 260px;
        background: white;
        border-right: 1px solid #e5e5e5;
        padding: 24px 0;
        position: fixed;
        height: calc(100vh - 56px);
        overflow-y: auto;
    }

    .sidebar-header {
        padding: 0 20px 20px;
        border-bottom: 1px solid #e5e5e5;
        margin-bottom: 16px;
    }

    .sidebar-header h6 {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--apple-gray);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .nav-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .nav-menu li {
        margin: 2px 12px;
    }

    .nav-menu a {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 16px;
        color: var(--apple-dark);
        text-decoration: none;
        border-radius: 10px;
        font-size: 0.9375rem;
        transition: all 0.2s ease;
    }

    .nav-menu a:hover {
        background: #f5f5f7;
    }

    .nav-menu a.active {
        background: var(--primary-gradient);
        color: white;
    }

    .nav-menu a i {
        font-size: 1.125rem;
        width: 24px;
        text-align: center;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        margin-left: 260px;
        padding: 32px;
        min-height: calc(100vh - 56px);
    }

    @@media (max-width: 992px) {
        .sidebar {
            display: none;
        }
        .main-content {
            margin-left: 0;
        }
    }
</style>

@RenderSection("Styles", required: false)

<!-- Navbar -->
<nav class="navbar navbar-apple navbar-expand-lg">
    <div class="container-fluid px-4">
        <a class="navbar-brand" href="/Dashboard">
            <i class="bi bi-gear-wide-connected me-2"></i>Gixat
        </a>
        <div class="navbar-nav ms-auto">
            <span class="nav-link">
                <i class="bi bi-bell me-1"></i>
            </span>
            <span class="nav-link">
                <i class="bi bi-person-circle me-1"></i>
                @User.Identity?.Name
            </span>
            <a class="nav-link" href="/Auth/Logout">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        </div>
    </div>
</nav>

<div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h6>Main Menu</h6>
        </div>
        <ul class="nav-menu">
            <li>
                <a href="/Dashboard" class="@(currentPath == "/dashboard" ? "active" : "")">
                    <i class="bi bi-grid-1x2"></i>
                    Dashboard
                </a>
            </li>
            <li>
                <a href="/Clients" class="@(currentPath.StartsWith("/clients") ? "active" : "")">
                    <i class="bi bi-people"></i>
                    Clients
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-car-front"></i>
                    Vehicles
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-wrench"></i>
                    Services
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-calendar-check"></i>
                    Appointments
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-receipt"></i>
                    Invoices
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-box-seam"></i>
                    Inventory
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-graph-up"></i>
                    Reports
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-gear"></i>
                    Settings
                </a>
            </li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>
</div>

@RenderSection("Scripts", required: false)
