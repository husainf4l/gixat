@page "/Clients/{id:guid}"
@model Gixat.Web.Pages.Clients.DetailsModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = $"{Model.Client.FirstName} {Model.Client.LastName}";
}

<a href="/Clients" class="inline-flex items-center gap-2 text-apple-gray hover:text-indigo-500 no-underline mb-6 transition-colors">
    <i class="bi bi-arrow-left"></i>
    Back to Clients
</a>

<!-- Client Header -->
<div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl p-8 text-white mb-8">
    <div class="flex flex-col lg:flex-row lg:items-center gap-6">
        <div class="flex items-center gap-6">
            <div class="w-24 h-24 rounded-full bg-white/20 flex items-center justify-center text-4xl font-semibold border-4 border-white/30 flex-shrink-0">
                @Model.Client.FirstName[0]@Model.Client.LastName[0]
            </div>
            <div>
                <div class="flex items-center gap-3 mb-2 flex-wrap">
                    <h1 class="text-2xl font-bold">@Model.Client.FirstName @Model.Client.LastName</h1>
                    @if (Model.Client.IsVip)
                    {
                        <span class="bg-gradient-to-r from-amber-400 to-orange-500 px-3 py-1 rounded-full text-sm font-semibold">
                            <i class="bi bi-star-fill mr-1"></i>VIP
                        </span>
                    }
                </div>
                <div class="flex gap-4 flex-wrap opacity-90 text-sm">
                    @if (!string.IsNullOrEmpty(Model.Client.Phone))
                    {
                        <span><i class="bi bi-telephone mr-2"></i>@Model.Client.Phone</span>
                    }
                    @if (!string.IsNullOrEmpty(Model.Client.Email))
                    {
                        <span><i class="bi bi-envelope mr-2"></i>@Model.Client.Email</span>
                    }
                </div>
            </div>
        </div>
        <div class="lg:ml-auto">
            <div class="flex gap-3 flex-wrap">
                <div class="bg-white/15 rounded-xl p-4 text-center min-w-[100px]">
                    <div class="text-2xl font-bold">@Model.Client.TotalVisits</div>
                    <div class="text-xs uppercase tracking-wider opacity-80">Total Visits</div>
                </div>
                <div class="bg-white/15 rounded-xl p-4 text-center min-w-[100px]">
                    <div class="text-2xl font-bold">$@Model.Client.TotalSpent.ToString("N0")</div>
                    <div class="text-xs uppercase tracking-wider opacity-80">Total Spent</div>
                </div>
                <div class="bg-white/15 rounded-xl p-4 text-center min-w-[100px]">
                    <div class="text-2xl font-bold">@Model.Vehicles.Count()</div>
                    <div class="text-xs uppercase tracking-wider opacity-80">Vehicles</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Vehicles Section -->
<div class="flex justify-between items-center mb-6">
    <h3 class="text-xl font-bold text-apple-dark flex items-center gap-2">
        <i class="bi bi-car-front text-indigo-500"></i>Vehicles
    </h3>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
    @foreach (var vehicle in Model.Vehicles)
    {
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg hover:-translate-y-0.5 transition-all relative h-full">
            @if (vehicle.IsPrimary)
            {
                <span class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-xs font-semibold">Primary</span>
            }
            <div class="flex gap-4 mb-4">
                <div class="w-14 h-14 rounded-xl bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center text-white text-xl flex-shrink-0">
                    <i class="bi bi-car-front-fill"></i>
                </div>
                <div class="overflow-hidden">
                    <h5 class="font-semibold text-apple-dark truncate">@vehicle.Year @vehicle.Make @vehicle.Model</h5>
                    <span class="text-apple-gray text-sm">
                        <i class="bi bi-card-text mr-1"></i>@vehicle.LicensePlate
                    </span>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-3 mb-4">
                @if (!string.IsNullOrEmpty(vehicle.Color))
                {
                    <div>
                        <span class="block text-[10px] text-apple-gray uppercase tracking-wide">Color</span>
                        <span class="text-sm font-medium text-apple-dark">@vehicle.Color</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(vehicle.EngineType))
                {
                    <div>
                        <span class="block text-[10px] text-apple-gray uppercase tracking-wide">Engine</span>
                        <span class="text-sm font-medium text-apple-dark">@vehicle.EngineType</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(vehicle.Transmission))
                {
                    <div>
                        <span class="block text-[10px] text-apple-gray uppercase tracking-wide">Transmission</span>
                        <span class="text-sm font-medium text-apple-dark">@vehicle.Transmission</span>
                    </div>
                }
                @if (vehicle.Mileage.HasValue)
                {
                    <div>
                        <span class="block text-[10px] text-apple-gray uppercase tracking-wide">Mileage</span>
                        <span class="text-sm font-medium text-apple-dark">@vehicle.Mileage.Value.ToString("N0") mi</span>
                    </div>
                }
            </div>
            @if (!string.IsNullOrEmpty(vehicle.Vin))
            {
                <div class="mb-4">
                    <span class="block text-[10px] text-apple-gray uppercase tracking-wide">VIN</span>
                    <div class="text-xs font-medium text-apple-dark font-mono truncate">@vehicle.Vin</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(vehicle.Notes))
            {
                <div class="bg-gray-50 rounded-lg px-3 py-2 mb-4 text-xs text-apple-gray">
                    <i class="bi bi-sticky mr-1"></i>@vehicle.Notes
                </div>
            }
            <div class="flex justify-end gap-2 mt-auto">
                <form method="post" asp-page-handler="DeleteVehicle" asp-route-id="@Model.Client.Id" asp-route-vehicleId="@vehicle.Id" class="inline">
                    <button type="submit" class="px-3 py-1.5 border border-red-200 text-red-500 rounded-lg hover:bg-red-50 transition-colors text-sm" onclick="return confirm('Are you sure you want to delete this vehicle?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            </div>
        </div>
    }
    <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-2xl p-8 flex flex-col items-center justify-center cursor-pointer hover:border-indigo-500 hover:bg-indigo-50/30 transition-all min-h-[200px]" onclick="openModal()">
        <div class="w-14 h-14 rounded-full bg-gray-200 flex items-center justify-center text-apple-gray text-xl mb-4">
            <i class="bi bi-plus-lg"></i>
        </div>
        <span class="text-apple-gray font-medium">Add New Vehicle</span>
    </div>
</div>

<!-- Add Vehicle Modal -->
<div id="addVehicleModal" class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center p-4">
    <div class="bg-white rounded-2xl w-full max-w-2xl max-h-[90vh] overflow-auto">
        <div class="px-6 py-5 flex justify-between items-center">
            <h5 class="text-xl font-bold text-apple-dark flex items-center gap-2">
                <i class="bi bi-car-front-fill text-indigo-500"></i>Add New Vehicle
            </h5>
            <button onclick="closeModal()" class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-all">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <form method="post" asp-page-handler="AddVehicle" asp-route-id="@Model.Client.Id">
            <div class="px-6 pb-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Make <span class="text-red-500">*</span></label>
                        <input type="text" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" asp-for="NewVehicle.Make" placeholder="e.g., Toyota" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Model <span class="text-red-500">*</span></label>
                        <input type="text" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" asp-for="NewVehicle.Model" placeholder="e.g., Camry" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Year</label>
                        <input type="number" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" asp-for="NewVehicle.Year" placeholder="e.g., 2023" min="1900" max="2030">
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">License Plate <span class="text-red-500">*</span></label>
                        <input type="text" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" asp-for="NewVehicle.LicensePlate" placeholder="e.g., ABC-1234" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Color</label>
                        <input type="text" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" asp-for="NewVehicle.Color" placeholder="e.g., Silver">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-apple-dark mb-1.5">VIN (Vehicle Identification Number)</label>
                    <input type="text" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" asp-for="NewVehicle.Vin" placeholder="e.g., 1HGBH41JXMN109186" maxlength="17">
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Engine Type</label>
                        <select class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 bg-white" asp-for="NewVehicle.EngineType">
                            <option value="">Select...</option>
                            <option value="Gasoline">Gasoline</option>
                            <option value="Diesel">Diesel</option>
                            <option value="Hybrid">Hybrid</option>
                            <option value="Electric">Electric</option>
                            <option value="Plug-in Hybrid">Plug-in Hybrid</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Transmission</label>
                        <select class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 bg-white" asp-for="NewVehicle.Transmission">
                            <option value="">Select...</option>
                            <option value="Automatic">Automatic</option>
                            <option value="Manual">Manual</option>
                            <option value="CVT">CVT</option>
                            <option value="Semi-Automatic">Semi-Automatic</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Mileage</label>
                        <input type="number" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100" asp-for="NewVehicle.Mileage" placeholder="e.g., 50000" min="0">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-apple-dark mb-1.5">Notes</label>
                    <textarea class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 resize-none" asp-for="NewVehicle.Notes" rows="2" placeholder="Any additional notes about the vehicle..."></textarea>
                </div>
            </div>
            <div class="border-t border-gray-200 px-6 py-4 flex justify-end gap-3">
                <button type="button" onclick="closeModal()" class="px-5 py-2.5 border border-gray-300 rounded-lg bg-white text-apple-dark text-sm cursor-pointer hover:bg-gray-50">Cancel</button>
                <button type="submit" class="inline-flex items-center gap-2 px-6 py-2.5 bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-lg text-sm font-semibold hover:from-indigo-600 hover:to-purple-700 transition-all">
                    <i class="bi bi-plus-lg"></i>Add Vehicle
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    function openModal() {
        document.getElementById('addVehicleModal').classList.remove('hidden');
        document.getElementById('addVehicleModal').classList.add('flex');
        document.body.style.overflow = 'hidden';
    }
    
    function closeModal() {
        document.getElementById('addVehicleModal').classList.add('hidden');
        document.getElementById('addVehicleModal').classList.remove('flex');
        document.body.style.overflow = '';
    }
    
    // Close modal on backdrop click
    document.getElementById('addVehicleModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });
    
    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });
</script>
}
