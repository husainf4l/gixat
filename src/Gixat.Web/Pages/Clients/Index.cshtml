@page "/Clients"
@model Gixat.Web.Pages.Clients.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Clients";
}

<!-- Page Header -->
<div class="flex justify-between items-center mb-8 flex-wrap gap-4">
    <div>
        <h1 class="text-3xl font-semibold text-apple-dark tracking-tight">Clients</h1>
        <p class="text-apple-gray text-sm mt-1">Manage your garage clients and their vehicles</p>
    </div>
    <button class="inline-flex items-center gap-2 bg-apple-blue text-white border-none rounded-lg px-6 py-3 text-sm font-medium cursor-pointer hover:bg-apple-blue-hover hover:scale-102 transition-all" onclick="openModal()">
        <i class="bi bi-plus-lg"></i>
        Add Client
    </button>
</div>

<!-- Search Bar -->
<div class="flex gap-3 mb-6 flex-wrap">
    <div class="flex-1 max-w-md min-w-[200px] relative">
        <i class="bi bi-search absolute left-4 top-1/2 -translate-y-1/2 text-apple-gray"></i>
        <form method="get">
            <input type="text" name="search" placeholder="Search clients..." value="@Model.SearchTerm" 
                   class="w-full py-3 px-4 pl-11 border border-gray-300 rounded-lg text-sm bg-white focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100 transition-all" />
        </form>
    </div>
    <button class="flex items-center gap-2 px-5 py-3 border border-gray-300 rounded-lg bg-white text-apple-dark text-sm cursor-pointer hover:bg-gray-50">
        <i class="bi bi-funnel"></i>
        Filters
    </button>
</div>

<!-- Clients Table -->
<div class="bg-white rounded-2xl shadow-sm overflow-hidden">
    @if (Model.Clients.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full border-collapse">
                <thead>
                    <tr>
                        <th class="text-left py-4 px-5 text-xs font-semibold text-apple-gray uppercase tracking-wide border-b border-gray-200">Client</th>
                        <th class="text-left py-4 px-5 text-xs font-semibold text-apple-gray uppercase tracking-wide border-b border-gray-200">Phone</th>
                        <th class="text-left py-4 px-5 text-xs font-semibold text-apple-gray uppercase tracking-wide border-b border-gray-200">Vehicles</th>
                        <th class="text-left py-4 px-5 text-xs font-semibold text-apple-gray uppercase tracking-wide border-b border-gray-200">Total Visits</th>
                        <th class="text-left py-4 px-5 text-xs font-semibold text-apple-gray uppercase tracking-wide border-b border-gray-200">Total Spent</th>
                        <th class="text-left py-4 px-5 text-xs font-semibold text-apple-gray uppercase tracking-wide border-b border-gray-200">Status</th>
                        <th class="text-left py-4 px-5 text-xs font-semibold text-apple-gray uppercase tracking-wide border-b border-gray-200">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr class="hover:bg-gray-50 border-b border-gray-100 last:border-b-0">
                            <td class="py-4 px-5">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
                                        @client.FirstName[0]@client.LastName[0]
                                    </div>
                                    <div>
                                        <h6 class="text-sm font-medium text-apple-dark flex items-center gap-2">
                                            @client.FullName
                                            @if (client.IsVip)
                                            {
                                                <span class="bg-gradient-to-r from-amber-400 to-orange-500 text-white text-[10px] px-2 py-0.5 rounded-full font-semibold">VIP</span>
                                            }
                                        </h6>
                                        <span class="text-xs text-apple-gray">@client.Email</span>
                                    </div>
                                </div>
                            </td>
                            <td class="py-4 px-5 text-sm">@client.Phone</td>
                            <td class="py-4 px-5 text-sm">@client.Vehicles.Count vehicles</td>
                            <td class="py-4 px-5 text-sm">@client.TotalVisits</td>
                            <td class="py-4 px-5 text-sm">$@client.TotalSpent.ToString("N2")</td>
                            <td class="py-4 px-5">
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium @(client.IsActive ? "bg-green-50 text-green-700" : "bg-gray-100 text-apple-gray")">
                                    <span class="w-1.5 h-1.5 rounded-full bg-current"></span>
                                    @(client.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="py-4 px-5">
                                <div class="flex gap-1">
                                    <a href="/Clients/@client.Id" class="w-9 h-9 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-all" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button class="w-9 h-9 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-all" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="w-9 h-9 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-all" title="More">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-16 px-5">
            <div class="w-20 h-20 rounded-full bg-gray-100 flex items-center justify-center mx-auto mb-6 text-3xl text-apple-gray">
                <i class="bi bi-people"></i>
            </div>
            <h3 class="text-xl font-semibold text-apple-dark mb-2">No clients yet</h3>
            <p class="text-apple-gray mb-6">Start by adding your first client to manage their vehicles and services.</p>
            <button class="inline-flex items-center gap-2 bg-apple-blue text-white border-none rounded-lg px-6 py-3 text-sm font-medium cursor-pointer hover:bg-apple-blue-hover transition-all" onclick="openModal()">
                <i class="bi bi-plus-lg"></i>
                Add Your First Client
            </button>
        </div>
    }
</div>

<!-- Add Client Modal -->
<div id="addClientModal" class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center p-4">
    <div class="bg-white rounded-2xl w-full max-w-2xl max-h-[90vh] overflow-auto">
        <div class="border-b border-gray-200 px-6 py-5 flex justify-between items-center">
            <h5 class="text-xl font-semibold text-apple-dark">Add New Client</h5>
            <button onclick="closeModal()" class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-all">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <form method="post" asp-page-handler="AddClient">
            @Html.AntiForgeryToken()
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">First Name *</label>
                        <input type="text" name="FirstName" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Last Name *</label>
                        <input type="text" name="LastName" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" required />
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Phone *</label>
                        <input type="tel" name="Phone" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Email</label>
                        <input type="email" name="Email" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" />
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-apple-dark mb-1.5">Address</label>
                    <input type="text" name="Address" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" />
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">City</label>
                        <input type="text" name="City" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">State</label>
                        <input type="text" name="State" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Postal Code</label>
                        <input type="text" name="PostalCode" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100" />
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-apple-dark mb-1.5">Notes</label>
                    <textarea name="Notes" rows="3" class="w-full border border-gray-300 rounded-lg px-3.5 py-2.5 text-sm focus:outline-none focus:border-apple-blue focus:ring-4 focus:ring-blue-100 resize-none"></textarea>
                </div>
                <div class="flex items-center gap-2">
                    <input type="checkbox" name="IsVip" id="isVip" class="w-4 h-4 text-apple-blue border-gray-300 rounded focus:ring-apple-blue" />
                    <label for="isVip" class="text-sm text-apple-dark">Mark as VIP client</label>
                </div>
            </div>
            <div class="border-t border-gray-200 px-6 py-4 flex justify-end gap-3">
                <button type="button" onclick="closeModal()" class="px-5 py-2.5 border border-gray-300 rounded-lg bg-white text-apple-dark text-sm cursor-pointer hover:bg-gray-50">Cancel</button>
                <button type="submit" class="px-6 py-2.5 border-none rounded-lg bg-apple-blue text-white text-sm cursor-pointer hover:bg-apple-blue-hover">Add Client</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    function openModal() {
        document.getElementById('addClientModal').classList.remove('hidden');
        document.getElementById('addClientModal').classList.add('flex');
        document.body.style.overflow = 'hidden';
    }
    
    function closeModal() {
        document.getElementById('addClientModal').classList.add('hidden');
        document.getElementById('addClientModal').classList.remove('flex');
        document.body.style.overflow = '';
    }
    
    // Close modal on backdrop click
    document.getElementById('addClientModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });
    
    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });
</script>
}
