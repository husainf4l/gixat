@{
    var pricingPlans = new[]
    {
        new
        {
            Name = "Starter",
            Price = "$29",
            Period = "/month",
            Description = "Perfect for small garages",
            IsPopular = false,
            Features = new[]
            {
                "Up to 50 customers",
                "Basic scheduling",
                "Invoice generation",
                "Email support",
                "Mobile app access"
            },
            ButtonText = "Start Free Trial"
        },
        new
        {
            Name = "Professional",
            Price = "$79",
            Period = "/month",
            Description = "Ideal for growing garages",
            IsPopular = true,
            Features = new[]
            {
                "Up to 500 customers",
                "Advanced scheduling",
                "Inventory management",
                "Business analytics",
                "Priority support",
                "API access"
            },
            ButtonText = "Start Free Trial"
        },
        new
        {
            Name = "Enterprise",
            Price = "Custom",
            Period = "",
            Description = "For large garage networks",
            IsPopular = false,
            Features = new[]
            {
                "Unlimited customers",
                "All features included",
                "Custom integrations",
                "Dedicated account manager",
                "24/7 phone support",
                "On-premise deployment"
            },
            ButtonText = "Contact Sales"
        }
    };
}

<!-- Pricing Section -->
<section id="pricing" class="py-32 bg-gradient-to-b from-white to-slate-50">
    <div class="container mx-auto px-6 max-w-7xl">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">Simple, transparent pricing</h2>
            <p class="text-xl text-slate-600">Choose the perfect plan for your garage business</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var plan in pricingPlans)
            {
                <div class="@(plan.IsPopular ? "relative bg-white rounded-3xl shadow-2xl p-8 border-2 border-primary-600 transform lg:scale-105" : "bg-white rounded-3xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300")">
                    @if (plan.IsPopular)
                    {
                        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-primary-600 to-purple-600 text-white px-6 py-2 rounded-full text-sm font-semibold">
                            Most Popular
                        </div>
                    }
                    
                    <div class="mb-8">
                        <h3 class="text-2xl font-bold text-slate-900 mb-4">@plan.Name</h3>
                        <div class="mb-2">
                            <span class="text-5xl font-bold text-slate-900">@plan.Price</span>
                            @if (!string.IsNullOrEmpty(plan.Period))
                            {
                                <span class="text-slate-600 text-lg">@plan.Period</span>
                            }
                        </div>
                        <p class="text-slate-600">@plan.Description</p>
                    </div>
                    
                    <div class="space-y-4 mb-8">
                        @foreach (var feature in plan.Features)
                        {
                            <div class="flex items-start gap-3">
                                <i class="bi bi-check-circle-fill text-primary-600 text-xl flex-shrink-0 mt-0.5"></i>
                                <span class="text-slate-700">@feature</span>
                            </div>
                        }
                    </div>
                    
                    <a href="/Auth/Register" class="@(plan.IsPopular ? "block w-full text-center bg-gradient-to-r from-primary-600 to-purple-600 text-white py-4 px-6 rounded-full font-semibold hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300" : "block w-full text-center bg-slate-900 text-white py-4 px-6 rounded-full font-semibold hover:bg-slate-800 transition-colors duration-300")">
                        @plan.ButtonText
                    </a>
                </div>
            }
        </div>
    </div>
</section>
