@page
@model Gixat.Web.Pages.Inventory.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Inventory";
}

<!-- Header -->
<div class="mb-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-slate-900 via-blue-900 to-slate-900 bg-clip-text text-transparent mb-2">Inventory</h1>
            <p class="text-slate-600 flex items-center gap-2">
                <i class="bi bi-box-seam text-sm"></i>
                <span>Track parts, supplies, and stock levels</span>
            </p>
        </div>
        <a asp-page="Create" class="inline-flex items-center justify-center gap-2 px-6 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]">
            <i class="bi bi-plus-circle-fill text-lg"></i>
            <span>Add Item</span>
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 lg:gap-6 mb-8">
    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-blue-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-blue-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">Total Items</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white shadow-lg shadow-blue-500/30">
                    <i class="bi bi-boxes text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@Model.AllItems.Count</p>
        </div>
    </div>

    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-red-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-red-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">Low Stock</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-red-500 to-red-600 flex items-center justify-center text-white shadow-lg shadow-red-500/30">
                    <i class="bi bi-exclamation-triangle-fill text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@Model.LowStockItems.Count</p>
        </div>
    </div>

    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-green-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-green-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">Active</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center text-white shadow-lg shadow-green-500/30">
                    <i class="bi bi-check-circle-fill text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@Model.AllItems.Count(i => i.IsActive)</p>
        </div>
    </div>

    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-purple-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-purple-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">Total Value</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center text-white shadow-lg shadow-purple-500/30">
                    <i class="bi bi-currency-dollar text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@Model.AllItems.Sum(i => i.QuantityOnHand * i.CostPrice).ToString("C0")</p>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-2 inline-flex gap-2 mb-8">
    <button onclick="showAll()" id="btnAll" class="px-6 py-3 rounded-xl font-semibold text-sm transition-all bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg">
        All Items
    </button>
    <button onclick="showLowStock()" id="btnLowStock" class="px-6 py-3 rounded-xl font-semibold text-sm transition-all text-slate-600 hover:bg-slate-100">
        Low Stock
    </button>
    <button onclick="showInactive()" id="btnInactive" class="px-6 py-3 rounded-xl font-semibold text-sm transition-all text-slate-600 hover:bg-slate-100">
        Inactive
    </button>
</div>

<!-- Low Stock Alert -->
@if (Model.LowStockItems.Any())
{
    <div class="bg-gradient-to-r from-red-50 to-orange-50 border-l-4 border-red-500 rounded-xl p-6 mb-8 shadow-sm">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-red-500 flex items-center justify-center text-white shadow-lg">
                <i class="bi bi-exclamation-circle-fill text-2xl"></i>
            </div>
            <div>
                <h3 class="font-bold text-slate-900 text-lg">Low Stock Alert</h3>
                <p class="text-sm text-slate-600 mt-1">@Model.LowStockItems.Count item(s) need restocking</p>
            </div>
        </div>
    </div>
}

<!-- Items Table -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-slate-50 to-slate-100">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Item</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Category</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Stock</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Location</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Price</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-slate-700 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
                @foreach (var item in Model.AllItems)
                {
                    var isLowStock = item.QuantityOnHand <= item.ReorderPoint;
                    var rowClass = !item.IsActive ? "inactive-row bg-gray-50" : isLowStock ? "low-stock-row" : "all-row";
                    
                    <tr class="@rowClass hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 bg-blue-50 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-box text-blue-600 text-sm"></i>
                                </div>
                                <div>
                                    <div class="font-medium text-gray-900">@item.Name</div>
                                    <div class="text-xs text-gray-500">@item.ItemNumber</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2.5 py-1 inline-flex text-xs font-medium rounded-full bg-blue-100 text-blue-700">
                                @item.Category
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm">
                                <div class="font-medium @(isLowStock ? "text-red-600" : "text-gray-900")">
                                    @item.QuantityOnHand @item.Unit
                                </div>
                                <div class="text-xs text-gray-500">Min: @item.MinimumQuantity</div>
                            </div>
                            @if (isLowStock)
                            {
                                <div class="mt-1">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-700">
                                        <i class="bi bi-arrow-down mr-1"></i>Low Stock
                                    </span>
                                </div>
                            }
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            @if (!string.IsNullOrEmpty(item.StorageLocation))
                            {
                                <div>@item.StorageLocation</div>
                                @if (!string.IsNullOrEmpty(item.Shelf))
                                {
                                    <div class="text-xs text-gray-500">Shelf: @item.Shelf</div>
                                }
                            }
                            else
                            {
                                <span class="text-gray-400">-</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm">
                                <div class="font-medium text-gray-900">@item.SellingPrice.ToString("C")</div>
                                <div class="text-xs text-gray-500">Cost: @item.CostPrice.ToString("C")</div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            @if (item.IsActive)
                            {
                                <span class="px-2.5 py-1 inline-flex text-xs font-medium rounded-full bg-green-100 text-green-700">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span class="px-2.5 py-1 inline-flex text-xs font-medium rounded-full bg-gray-100 text-gray-700">
                                    Inactive
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 text-right text-sm font-medium space-x-3">
                            <a asp-page="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-800 font-medium">
                                <i class="bi bi-eye mr-1"></i>View
                            </a>
                            @if (isLowStock)
                            {
                                <a asp-page="Restock" asp-route-id="@item.Id" class="text-green-600 hover:text-green-800 font-medium">
                                    <i class="bi bi-truck mr-1"></i>Restock
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.AllItems.Any())
{
    <div class="apple-card text-center py-12">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="bi bi-boxes text-gray-400 text-2xl"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No Inventory Items</h3>
        <p class="text-sm text-gray-500 mb-6">Get started by adding your first inventory item</p>
        <a asp-page="Create" class="apple-btn inline-flex items-center gap-2">
            <i class="bi bi-plus-lg"></i>
            <span>Add First Item</span>
        </a>
    </div>
}

@section Scripts {
    <script>
        function showAll() {
            document.querySelectorAll('tr').forEach(row => {
                row.style.display = '';
            });
            setActiveTab('btnAll');
        }

        function showLowStock() {
            document.querySelectorAll('tr').forEach(row => {
                if (row.classList.contains('low-stock-row')) {
                    row.style.display = '';
                } else if (!row.querySelector('th')) {
                    row.style.display = 'none';
                }
            });
            setActiveTab('btnLowStock');
        }

        function showInactive() {
            document.querySelectorAll('tr').forEach(row => {
                if (row.classList.contains('inactive-row')) {
                    row.style.display = '';
                } else if (!row.querySelector('th')) {
                    row.style.display = 'none';
                }
            });
            setActiveTab('btnInactive');
        }

        function setActiveTab(activeId) {
            ['btnAll', 'btnLowStock', 'btnInactive'].forEach(id => {
                const btn = document.getElementById(id);
                if (id === activeId) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
        }
    </script>
}
