@page
@model Gixat.Web.Pages.Inventory.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Inventory";
}

<div class="bg-gradient-to-br from-gray-50 via-white to-gray-50">
    <div class="px-4 py-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2">
                    Inventory Management
                </h1>
                <p class="text-gray-600">Track parts, supplies, and stock levels</p>
            </div>
            <a asp-page="Create" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                <i class="fas fa-plus mr-2"></i>Add Item
            </a>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 p-6 border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600 mb-1">Total Items</p>
                        <p class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">@Model.AllItems.Count</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-100 to-purple-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-boxes text-blue-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 p-6 border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600 mb-1">Low Stock Items</p>
                        <p class="text-3xl font-bold bg-gradient-to-r from-red-600 to-orange-600 bg-clip-text text-transparent">@Model.LowStockItems.Count</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-red-100 to-orange-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 p-6 border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600 mb-1">Active Items</p>
                        <p class="text-3xl font-bold bg-gradient-to-r from-green-600 to-teal-600 bg-clip-text text-transparent">@Model.AllItems.Count(i => i.IsActive)</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-green-100 to-teal-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-check-circle text-green-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 p-6 border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600 mb-1">Total Value</p>
                        <p class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">@Model.AllItems.Sum(i => i.QuantityOnHand * i.CostPrice).ToString("C0")</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-purple-100 to-pink-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-dollar-sign text-purple-600 text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Tabs -->
        <div class="bg-white rounded-2xl shadow-sm p-2 mb-6 inline-flex gap-2">
            <button onclick="showAll()" id="btnAll" class="px-6 py-2 rounded-xl font-semibold transition-all duration-200 bg-gradient-to-r from-blue-500 to-purple-600 text-white">
                All Items
            </button>
            <button onclick="showLowStock()" id="btnLowStock" class="px-6 py-2 rounded-xl font-semibold transition-all duration-200 text-gray-600 hover:bg-gray-100">
                Low Stock
            </button>
            <button onclick="showInactive()" id="btnInactive" class="px-6 py-2 rounded-xl font-semibold transition-all duration-200 text-gray-600 hover:bg-gray-100">
                Inactive
            </button>
        </div>

        <!-- Low Stock Alert Banner -->
        @if (Model.LowStockItems.Any())
        {
            <div class="bg-gradient-to-r from-red-50 to-orange-50 border-l-4 border-red-500 rounded-xl p-4 mb-6">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-circle text-red-600 text-2xl mr-3"></i>
                    <div>
                        <h3 class="font-bold text-red-800">Low Stock Alert</h3>
                        <p class="text-red-700">@Model.LowStockItems.Count item(s) need restocking</p>
                    </div>
                </div>
            </div>
        }

        <!-- Items Table -->
        <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Item</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Category</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Stock</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Location</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Price</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model.AllItems)
                        {
                            var isLowStock = item.QuantityOnHand <= item.ReorderPoint;
                            var rowClass = !item.IsActive ? "inactive-row bg-gray-50" : isLowStock ? "low-stock-row" : "all-row";
                            
                            <tr class="@rowClass hover:bg-gray-50 transition-colors duration-150">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-gradient-to-br from-blue-100 to-purple-100 rounded-lg flex items-center justify-center mr-3">
                                            <i class="fas fa-box text-blue-600"></i>
                                        </div>
                                        <div>
                                            <div class="font-semibold text-gray-900">@item.Name</div>
                                            <div class="text-sm text-gray-500">@item.ItemNumber</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                        @item.Category
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm">
                                        <div class="font-semibold @(isLowStock ? "text-red-600" : "text-gray-900")">
                                            @item.QuantityOnHand @item.Unit
                                        </div>
                                        <div class="text-gray-500">Min: @item.MinimumQuantity</div>
                                    </div>
                                    @if (isLowStock)
                                    {
                                        <div class="mt-1">
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                                                <i class="fas fa-arrow-down mr-1"></i>Low Stock
                                            </span>
                                        </div>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">
                                    @if (!string.IsNullOrEmpty(item.StorageLocation))
                                    {
                                        <div>@item.StorageLocation</div>
                                        @if (!string.IsNullOrEmpty(item.Shelf))
                                        {
                                            <div class="text-gray-500">Shelf: @item.Shelf</div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm">
                                        <div class="font-semibold text-gray-900">@item.SellingPrice.ToString("C")</div>
                                        <div class="text-gray-500">Cost: @item.CostPrice.ToString("C")</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    @if (item.IsActive)
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                            Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                                            Inactive
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-right text-sm font-medium space-x-2">
                                    <a asp-page="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 font-semibold">
                                        <i class="fas fa-eye mr-1"></i>View
                                    </a>
                                    @if (isLowStock)
                                    {
                                        <a asp-page="Restock" asp-route-id="@item.Id" class="text-green-600 hover:text-green-900 font-semibold">
                                            <i class="fas fa-truck mr-1"></i>Restock
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!Model.AllItems.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-boxes text-gray-300 text-6xl mb-4"></i>
                <p class="text-gray-500 text-lg mb-4">No inventory items found</p>
                <a asp-page="Create" class="inline-block px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                    <i class="fas fa-plus mr-2"></i>Add First Item
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function showAll() {
            document.querySelectorAll('tr').forEach(row => {
                row.style.display = '';
            });
            setActiveTab('btnAll');
        }

        function showLowStock() {
            document.querySelectorAll('tr').forEach(row => {
                if (row.classList.contains('low-stock-row')) {
                    row.style.display = '';
                } else if (!row.querySelector('th')) {
                    row.style.display = 'none';
                }
            });
            setActiveTab('btnLowStock');
        }

        function showInactive() {
            document.querySelectorAll('tr').forEach(row => {
                if (row.classList.contains('inactive-row')) {
                    row.style.display = '';
                } else if (!row.querySelector('th')) {
                    row.style.display = 'none';
                }
            });
            setActiveTab('btnInactive');
        }

        function setActiveTab(activeId) {
            ['btnAll', 'btnLowStock', 'btnInactive'].forEach(id => {
                const btn = document.getElementById(id);
                if (id === activeId) {
                    btn.className = 'px-6 py-2 rounded-xl font-semibold transition-all duration-200 bg-gradient-to-r from-blue-500 to-purple-600 text-white';
                } else {
                    btn.className = 'px-6 py-2 rounded-xl font-semibold transition-all duration-200 text-gray-600 hover:bg-gray-100';
                }
            });
        }
    </script>
}
