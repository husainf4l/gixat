@page
@model Gixat.Web.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AppLayout";
}

<!-- Welcome Section -->
<div class="mb-8 animate-fade-in">
    <h1 class="text-2xl lg:text-3xl font-semibold text-apple-dark tracking-tight">
        Good @(DateTime.Now.Hour < 12 ? "morning" : DateTime.Now.Hour < 17 ? "afternoon" : "evening"), @User.Identity?.Name üëã
    </h1>
    <p class="text-apple-gray mt-1">Here's what's happening with your garage today.</p>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 mb-8">
    <!-- Active Sessions -->
    <div class="card-apple p-5 animate-slide-up" style="animation-delay: 0.05s;">
        <div class="flex items-center justify-between mb-4">
            <div class="w-10 h-10 rounded-xl bg-apple-blue/10 flex items-center justify-center">
                <i class="bi bi-clipboard-check text-apple-blue text-lg"></i>
            </div>
            @if(Model.ActiveSessions > 0)
            {
                <span class="badge-apple-green">
                    <i class="bi bi-arrow-up text-xxs"></i> Active
                </span>
            }
        </div>
        <p class="text-2xl lg:text-3xl font-semibold text-apple-dark">@Model.ActiveSessions</p>
        <p class="text-sm text-apple-gray mt-1">Active Sessions</p>
    </div>

    <!-- In Progress -->
    <div class="card-apple p-5 animate-slide-up" style="animation-delay: 0.1s;">
        <div class="flex items-center justify-between mb-4">
            <div class="w-10 h-10 rounded-xl bg-apple-orange/10 flex items-center justify-center">
                <i class="bi bi-wrench-adjustable text-apple-orange text-lg"></i>
            </div>
            <span class="badge-apple-orange">In Progress</span>
        </div>
        <p class="text-2xl lg:text-3xl font-semibold text-apple-dark">@Model.InProgressSessions</p>
        <p class="text-sm text-apple-gray mt-1">Being Worked On</p>
    </div>

    <!-- Ready for Pickup -->
    <div class="card-apple p-5 animate-slide-up" style="animation-delay: 0.15s;">
        <div class="flex items-center justify-between mb-4">
            <div class="w-10 h-10 rounded-xl bg-apple-green/10 flex items-center justify-center">
                <i class="bi bi-check2-circle text-apple-green text-lg"></i>
            </div>
            @if(Model.AwaitingPickup > 0)
            {
                <span class="badge-apple-red">
                    <span class="w-1.5 h-1.5 rounded-full bg-apple-red animate-pulse-soft"></span>
                    Action
                </span>
            }
        </div>
        <p class="text-2xl lg:text-3xl font-semibold text-apple-dark">@Model.AwaitingPickup</p>
        <p class="text-sm text-apple-gray mt-1">Ready for Pickup</p>
    </div>

    <!-- Total Clients -->
    <div class="card-apple p-5 animate-slide-up" style="animation-delay: 0.2s;">
        <div class="flex items-center justify-between mb-4">
            <div class="w-10 h-10 rounded-xl bg-apple-purple/10 flex items-center justify-center">
                <i class="bi bi-people text-apple-purple text-lg"></i>
            </div>
        </div>
        <p class="text-2xl lg:text-3xl font-semibold text-apple-dark">@Model.TotalClients</p>
        <p class="text-sm text-apple-gray mt-1">Total Clients</p>
    </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 animate-slide-up" style="animation-delay: 0.25s;">
    <!-- Recent Sessions -->
    <div class="lg:col-span-2 card-apple overflow-hidden">
        <div class="flex items-center justify-between p-5 border-b border-gray-100">
            <div>
                <h2 class="text-lg font-semibold text-apple-dark">Recent Sessions</h2>
                <p class="text-sm text-apple-gray">Latest vehicle check-ins</p>
            </div>
            <a href="/Sessions" class="btn-apple-ghost text-sm py-2 px-4">
                View All
                <i class="bi bi-arrow-right text-xs"></i>
            </a>
        </div>
        
        @if (Model.RecentSessions.Any())
        {
            <div class="divide-y divide-gray-100">
                @foreach (var session in Model.RecentSessions.Take(5))
                {
                    <a href="/Sessions/Details/@session.Id" class="flex items-center gap-4 p-4 hover:bg-gray-50 transition-colors group">
                        <!-- Status Indicator -->
                        <div class="relative">
                            <div class="w-12 h-12 rounded-xl bg-gray-100 flex items-center justify-center">
                                <i class="bi bi-car-front text-apple-gray text-lg"></i>
                            </div>
                            @{
                                var dotColor = session.Status switch
                                {
                                    Gixat.Web.Modules.Sessions.Enums.SessionStatus.InProgress => "bg-apple-orange",
                                    Gixat.Web.Modules.Sessions.Enums.SessionStatus.Completed or Gixat.Web.Modules.Sessions.Enums.SessionStatus.ReadyForPickup => "bg-apple-green",
                                    Gixat.Web.Modules.Sessions.Enums.SessionStatus.Closed => "bg-apple-gray",
                                    _ => "bg-apple-blue"
                                };
                            }
                            <span class="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 @dotColor rounded-full border-2 border-white"></span>
                        </div>
                        
                        <!-- Info -->
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2">
                                <span class="font-medium text-apple-dark">@session.SessionNumber</span>
                                @{
                                    var badgeClass = session.Status switch
                                    {
                                        Gixat.Web.Modules.Sessions.Enums.SessionStatus.CheckedIn => "badge-apple-blue",
                                        Gixat.Web.Modules.Sessions.Enums.SessionStatus.InProgress => "badge-apple-orange",
                                        Gixat.Web.Modules.Sessions.Enums.SessionStatus.Completed or Gixat.Web.Modules.Sessions.Enums.SessionStatus.ReadyForPickup => "badge-apple-green",
                                        Gixat.Web.Modules.Sessions.Enums.SessionStatus.Closed => "badge-apple-gray",
                                        _ => "badge-apple-gray"
                                    };
                                }
                                <span class="@badgeClass">@session.Status</span>
                            </div>
                            <p class="text-sm text-apple-gray truncate">@session.VehicleDisplayName</p>
                        </div>
                        
                        <!-- Time & Arrow -->
                        <div class="flex items-center gap-3">
                            <span class="text-sm text-apple-gray">@session.CheckInAt.ToString("MMM dd, HH:mm")</span>
                            <i class="bi bi-chevron-right text-apple-gray opacity-0 group-hover:opacity-100 transition-opacity"></i>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="p-8 text-center">
                <div class="w-16 h-16 rounded-2xl bg-gray-100 flex items-center justify-center mx-auto mb-4">
                    <i class="bi bi-inbox text-2xl text-apple-gray"></i>
                </div>
                <h3 class="font-medium text-apple-dark mb-1">No active sessions</h3>
                <p class="text-sm text-apple-gray mb-4">Get started by creating a new check-in</p>
                <a href="/Sessions/Create" class="btn-apple-primary">
                    <i class="bi bi-plus-lg"></i>
                    New Check-In
                </a>
            </div>
        }
    </div>

    <!-- Right Column -->
    <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="card-apple p-5">
            <h3 class="font-semibold text-apple-dark mb-4">Quick Actions</h3>
            <div class="space-y-2">
                <a href="/Sessions/Create" class="flex items-center gap-3 p-3 rounded-apple hover:bg-apple-blue/5 transition-colors group">
                    <div class="w-10 h-10 rounded-xl bg-apple-blue/10 flex items-center justify-center group-hover:bg-apple-blue group-hover:text-white transition-colors">
                        <i class="bi bi-plus-lg text-apple-blue group-hover:text-white"></i>
                    </div>
                    <div class="flex-1">
                        <span class="font-medium text-apple-dark text-sm">New Check-In</span>
                        <p class="text-xs text-apple-gray">Start a new service session</p>
                    </div>
                    <i class="bi bi-chevron-right text-apple-gray text-sm"></i>
                </a>
                
                <a href="/Clients" class="flex items-center gap-3 p-3 rounded-apple hover:bg-gray-50 transition-colors group">
                    <div class="w-10 h-10 rounded-xl bg-gray-100 flex items-center justify-center">
                        <i class="bi bi-person-plus text-apple-gray"></i>
                    </div>
                    <div class="flex-1">
                        <span class="font-medium text-apple-dark text-sm">Add Client</span>
                        <p class="text-xs text-apple-gray">Register a new customer</p>
                    </div>
                    <i class="bi bi-chevron-right text-apple-gray text-sm"></i>
                </a>
                
                <a href="/Sessions" class="flex items-center gap-3 p-3 rounded-apple hover:bg-gray-50 transition-colors group">
                    <div class="w-10 h-10 rounded-xl bg-gray-100 flex items-center justify-center">
                        <i class="bi bi-list-ul text-apple-gray"></i>
                    </div>
                    <div class="flex-1">
                        <span class="font-medium text-apple-dark text-sm">All Sessions</span>
                        <p class="text-xs text-apple-gray">View and manage sessions</p>
                    </div>
                    <i class="bi bi-chevron-right text-apple-gray text-sm"></i>
                </a>
            </div>
        </div>

        <!-- Today's Overview -->
        <div class="card-apple-elevated p-5 bg-gradient-to-br from-apple-gray-6 to-apple-gray-5 text-white">
            <h3 class="font-semibold mb-5 flex items-center gap-2">
                <i class="bi bi-calendar-check"></i>
                Today's Overview
            </h3>
            <div class="space-y-4">
                <div>
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-white/70 text-sm">Sessions Today</span>
                        <span class="font-semibold text-lg">@Model.TodaySessions</span>
                    </div>
                    <div class="h-1.5 bg-white/20 rounded-full overflow-hidden">
                        <div class="h-full bg-apple-blue rounded-full transition-all" style="width: @(Math.Min(Model.TodaySessions * 10, 100))%"></div>
                    </div>
                </div>
                
                <div>
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-white/70 text-sm">Total Vehicles</span>
                        <span class="font-semibold text-lg">@Model.TotalVehicles</span>
                    </div>
                    <div class="h-1.5 bg-white/20 rounded-full overflow-hidden">
                        <div class="h-full bg-apple-teal rounded-full" style="width: 60%"></div>
                    </div>
                </div>

                <div class="pt-2 border-t border-white/10">
                    <div class="flex justify-between items-center">
                        <span class="text-white/70 text-sm">VIP Clients</span>
                        <span class="font-semibold text-lg text-apple-yellow">@Model.VipClients ‚≠ê</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
