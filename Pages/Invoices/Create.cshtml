@page
@model Gixat.Web.Pages.Invoices.CreateModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Create Invoice";
}

<!-- Header -->
<div class="mb-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-slate-900 via-blue-900 to-slate-900 bg-clip-text text-transparent mb-2">Create Invoice</h1>
            <p class="text-slate-600 flex items-center gap-2">
                <i class="bi bi-receipt text-sm"></i>
                <span>Create a new invoice for your client</span>
            </p>
        </div>
        <a asp-page="Index" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-semibold text-slate-700 bg-white hover:bg-slate-50 rounded-xl shadow-sm border border-slate-200 transition-all duration-200 hover:scale-[1.02]">
            <i class="bi bi-arrow-left"></i>
            <span>Back to Invoices</span>
        </a>
    </div>
</div>

<form method="post" class="space-y-6">
    <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-4 rounded-lg"></div>

    <!-- Invoice Details Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 lg:p-8">
        <h2 class="text-xl font-bold text-slate-900 mb-6 flex items-center gap-2">
            <i class="bi bi-info-circle text-blue-600"></i>
            Invoice Details
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Client Selection -->
            <div>
                <label asp-for="Input.ClientId" class="block text-sm font-semibold text-slate-700 mb-2">Client *</label>
                <select asp-for="Input.ClientId" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" required>
                    <option value="">Select a client</option>
                    @foreach (var client in Model.Clients)
                    {
                        <option value="@client.Id">@client.Name @(!string.IsNullOrEmpty(client.Phone) ? $"- {client.Phone}" : "")</option>
                    }
                </select>
                <span asp-validation-for="Input.ClientId" class="text-red-600 text-sm"></span>
            </div>

            <!-- Invoice Date -->
            <div>
                <label asp-for="Input.InvoiceDate" class="block text-sm font-semibold text-slate-700 mb-2">Invoice Date *</label>
                <input asp-for="Input.InvoiceDate" type="date" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" required />
                <span asp-validation-for="Input.InvoiceDate" class="text-red-600 text-sm"></span>
            </div>

            <!-- Due Date -->
            <div>
                <label asp-for="Input.DueDate" class="block text-sm font-semibold text-slate-700 mb-2">Due Date *</label>
                <input asp-for="Input.DueDate" type="date" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" required />
                <span asp-validation-for="Input.DueDate" class="text-red-600 text-sm"></span>
            </div>

            <!-- Tax Rate -->
            <div>
                <label asp-for="Input.TaxRate" class="block text-sm font-semibold text-slate-700 mb-2">Tax Rate (%)</label>
                <input asp-for="Input.TaxRate" type="number" step="0.01" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" />
                <span asp-validation-for="Input.TaxRate" class="text-red-600 text-sm"></span>
            </div>
        </div>
    </div>

    <!-- Invoice Items Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 lg:p-8">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-slate-900 flex items-center gap-2">
                <i class="bi bi-card-list text-blue-600"></i>
                Invoice Items
            </h2>
            <button type="button" onclick="addInvoiceItem()" class="inline-flex items-center gap-2 px-4 py-2 text-sm font-semibold text-blue-600 bg-blue-50 hover:bg-blue-100 rounded-lg transition-all">
                <i class="bi bi-plus-circle"></i>
                Add Item
            </button>
        </div>

        <div id="invoiceItems" class="space-y-4">
            <!-- Initial empty item -->
            <div class="invoice-item grid grid-cols-1 md:grid-cols-12 gap-4 p-4 bg-slate-50 rounded-xl">
                <div class="md:col-span-5">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Description</label>
                    <input type="text" name="Input.Items[0].Description" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" placeholder="Service or product description" required />
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Quantity</label>
                    <input type="number" name="Input.Items[0].Quantity" value="1" min="1" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" required />
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Unit Price</label>
                    <input type="number" name="Input.Items[0].UnitPrice" step="0.01" min="0" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" placeholder="0.00" required />
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Type</label>
                    <select name="Input.Items[0].Type" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all">
                        <option value="0">Service</option>
                        <option value="1">Part</option>
                        <option value="2">Labor</option>
                    </select>
                </div>
                <div class="md:col-span-1 flex items-end">
                    <button type="button" onclick="removeInvoiceItem(this)" class="w-full px-3 py-2.5 text-red-600 hover:bg-red-50 rounded-lg transition-all">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Information -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 lg:p-8">
        <h2 class="text-xl font-bold text-slate-900 mb-6 flex items-center gap-2">
            <i class="bi bi-file-text text-blue-600"></i>
            Additional Information
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Discount -->
            <div>
                <label asp-for="Input.DiscountAmount" class="block text-sm font-semibold text-slate-700 mb-2">Discount Amount</label>
                <input asp-for="Input.DiscountAmount" type="number" step="0.01" min="0" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" placeholder="0.00" />
            </div>

            <!-- Notes -->
            <div class="md:col-span-2">
                <label asp-for="Input.Notes" class="block text-sm font-semibold text-slate-700 mb-2">Notes</label>
                <textarea asp-for="Input.Notes" rows="3" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" placeholder="Internal notes (not visible to client)"></textarea>
            </div>

            <!-- Terms and Conditions -->
            <div class="md:col-span-2">
                <label asp-for="Input.TermsAndConditions" class="block text-sm font-semibold text-slate-700 mb-2">Terms and Conditions</label>
                <textarea asp-for="Input.TermsAndConditions" rows="3" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" placeholder="Payment terms, conditions, etc."></textarea>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-end gap-4">
        <a asp-page="Index" class="px-6 py-3 text-sm font-semibold text-slate-700 bg-white hover:bg-slate-50 rounded-xl shadow-sm border border-slate-200 transition-all">
            Cancel
        </a>
        <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all duration-200 hover:scale-[1.02]">
            <i class="bi bi-check-circle"></i>
            Create Invoice
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let itemIndex = 1;

        function addInvoiceItem() {
            const container = document.getElementById('invoiceItems');
            const itemHtml = `
                <div class="invoice-item grid grid-cols-1 md:grid-cols-12 gap-4 p-4 bg-slate-50 rounded-xl">
                    <div class="md:col-span-5">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Description</label>
                        <input type="text" name="Input.Items[${itemIndex}].Description" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" placeholder="Service or product description" required />
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Quantity</label>
                        <input type="number" name="Input.Items[${itemIndex}].Quantity" value="1" min="1" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" required />
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Unit Price</label>
                        <input type="number" name="Input.Items[${itemIndex}].UnitPrice" step="0.01" min="0" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all" placeholder="0.00" required />
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Type</label>
                        <select name="Input.Items[${itemIndex}].Type" class="w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all">
                            <option value="0">Service</option>
                            <option value="1">Part</option>
                            <option value="2">Labor</option>
                        </select>
                    </div>
                    <div class="md:col-span-1 flex items-end">
                        <button type="button" onclick="removeInvoiceItem(this)" class="w-full px-3 py-2.5 text-red-600 hover:bg-red-50 rounded-lg transition-all">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', itemHtml);
            itemIndex++;
        }

        function removeInvoiceItem(button) {
            const items = document.querySelectorAll('.invoice-item');
            if (items.length > 1) {
                button.closest('.invoice-item').remove();
            } else {
                alert('You must have at least one item in the invoice');
            }
        }
    </script>
}
