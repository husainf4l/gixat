@using Microsoft.AspNetCore.Identity
@inject SignInManager<Gixat.Web.Modules.Auth.Entities.ApplicationUser> SignInManager

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-white">
    <!-- Background Gradient -->
    <div class="absolute inset-0 opacity-20">
        <div class="absolute bottom-0 left-[-20%] right-0 top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(128,90,213,0.3),rgba(255,255,255,0))]"></div>
        <div class="absolute bottom-0 right-[-20%] top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(0,123,255,0.3),rgba(255,255,255,0))]"></div>
    </div>

    <div class="relative z-10 w-full max-w-7xl mx-auto px-6 sm:px-8 lg:px-12 py-16">
        <div class="flex flex-col items-center text-center space-y-8 md:space-y-12">
            
            <!-- Header Section -->
            <div class="space-y-4 max-w-4xl">
                <h1 class="text-[2.5rem] sm:text-5xl md:text-6xl font-semibold tracking-tight leading-[1.1] text-slate-900">
                    Manage Your <span class="text-blue-600">Garage</span> Efficiently
                </h1>
                <p class="text-sm sm:text-base md:text-lg text-slate-600 font-normal max-w-2xl mx-auto leading-relaxed">
                    Smart scheduling, automated reminders, and powerful tools designed specifically for automotive service centers
                </p>
            </div>

            <!-- 3D Carousel Section -->
            <div class="relative w-full h-[350px] md:h-[450px] flex items-center justify-center">
                <div class="relative w-full h-full flex items-center justify-center" style="perspective: 1000px;">
                    <!-- Carousel Items -->
                    <div id="carousel-item-0" class="absolute w-[350px] h-[350px] md:w-[450px] md:h-[450px] transition-all duration-500 ease-in-out flex items-center justify-center">
                        <img src="https://images.unsplash.com/photo-1486262715619-67b85e0b08d3?w=900&auto=format&fit=crop&q=80" 
                             alt="Car maintenance service" 
                             class="object-cover w-full h-full rounded-3xl border-2 border-slate-200 shadow-2xl" />
                    </div>
                    <div id="carousel-item-1" class="absolute w-[350px] h-[350px] md:w-[450px] md:h-[450px] transition-all duration-500 ease-in-out flex items-center justify-center">
                        <img src="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?w=900&auto=format&fit=crop&q=80" 
                             alt="Professional auto repair" 
                             class="object-cover w-full h-full rounded-3xl border-2 border-slate-200 shadow-2xl" />
                    </div>
                    <div id="carousel-item-2" class="absolute w-[350px] h-[350px] md:w-[450px] md:h-[450px] transition-all duration-500 ease-in-out flex items-center justify-center">
                        <img src="https://images.unsplash.com/photo-1619642751034-765dfdf7c58e?w=900&auto=format&fit=crop&q=80" 
                             alt="Modern garage workshop" 
                             class="object-cover w-full h-full rounded-3xl border-2 border-slate-200 shadow-2xl" />
                    </div>
                    <div id="carousel-item-3" class="absolute w-[350px] h-[350px] md:w-[450px] md:h-[450px] transition-all duration-500 ease-in-out flex items-center justify-center">
                        <img src="https://images.unsplash.com/photo-1580273916550-e323be2ae537?w=900&auto=format&fit=crop&q=80" 
                             alt="Auto technician at work" 
                             class="object-cover w-full h-full rounded-3xl border-2 border-slate-200 shadow-2xl" />
                    </div>
                    <div id="carousel-item-4" class="absolute w-[350px] h-[350px] md:w-[450px] md:h-[450px] transition-all duration-500 ease-in-out flex items-center justify-center">
                        <img src="https://images.unsplash.com/photo-1487754180451-c456f719a1fc?w=900&auto=format&fit=crop&q=80" 
                             alt="Vehicle inspection service" 
                             class="object-cover w-full h-full rounded-3xl border-2 border-slate-200 shadow-2xl" />
                    </div>
                </div>

                <!-- Navigation Buttons -->
                <button id="carousel-prev" class="absolute left-2 sm:left-8 top-1/2 -translate-y-1/2 rounded-full h-10 w-10 z-20 bg-white/50 backdrop-blur-sm border border-slate-200 flex items-center justify-center hover:bg-white/80 transition-all duration-150">
                    <svg class="w-5 h-5 text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
                <button id="carousel-next" class="absolute right-2 sm:right-8 top-1/2 -translate-y-1/2 rounded-full h-10 w-10 z-20 bg-white/50 backdrop-blur-sm border border-slate-200 flex items-center justify-center hover:bg-white/80 transition-all duration-150">
                    <svg class="w-5 h-5 text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </button>
            </div>

            <!-- CTA Section -->
            <div class="flex flex-col sm:flex-row items-center gap-2">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="/Dashboard" class="inline-flex items-center justify-center gap-1.5 px-4 py-2 bg-sky-600 text-white text-[13px] font-normal rounded-lg hover:bg-sky-700 transition-all duration-150 w-full sm:w-auto">
                        <span>Go to Dashboard</span>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                        </svg>
                    </a>
                }
                else
                {
                    <a href="/Auth/Register" class="inline-flex items-center justify-center px-4 py-2 bg-sky-600 text-white text-[13px] font-normal rounded-lg hover:bg-sky-700 transition-all duration-150 w-full sm:w-auto">
                        <span>Try it free for 14 days</span>
                    </a>
                    <a href="#features" class="inline-flex items-center justify-center gap-1.5 px-4 py-2 text-sky-600 text-[13px] font-normal rounded-lg hover:bg-slate-50 transition-all duration-150 w-full sm:w-auto">
                        <span>See how it works</span>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                        </svg>
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<script>
    (function() {
        const images = [0, 1, 2, 3, 4];
        let currentIndex = 2;
        
        function updateCarousel() {
            images.forEach((_, index) => {
                const element = document.getElementById(`carousel-item-${index}`);
                const offset = index - currentIndex;
                const total = images.length;
                let pos = (offset + total) % total;
                if (pos > Math.floor(total / 2)) {
                    pos = pos - total;
                }
                
                const isCenter = pos === 0;
                const isAdjacent = Math.abs(pos) === 1;
                
                const translateX = pos * 45;
                const scale = isCenter ? 1 : isAdjacent ? 0.85 : 0.7;
                const rotateY = pos * -10;
                const zIndex = isCenter ? 10 : isAdjacent ? 5 : 1;
                const opacity = isCenter ? 1 : isAdjacent ? 0.4 : 0;
                const blur = isCenter ? 0 : 4;
                const visibility = Math.abs(pos) > 1 ? 'hidden' : 'visible';
                
                element.style.transform = `translateX(${translateX}%) scale(${scale}) rotateY(${rotateY}deg)`;
                element.style.zIndex = zIndex;
                element.style.opacity = opacity;
                element.style.filter = `blur(${blur}px)`;
                element.style.visibility = visibility;
            });
        }
        
        function handleNext() {
            currentIndex = (currentIndex + 1) % images.length;
            updateCarousel();
        }
        
        function handlePrev() {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            updateCarousel();
        }
        
        document.getElementById('carousel-next').addEventListener('click', handleNext);
        document.getElementById('carousel-prev').addEventListener('click', handlePrev);
        
        // Auto-rotate every 4 seconds
        setInterval(handleNext, 4000);
        
        // Initialize
        updateCarousel();
    })();
</script>
