@page "/Sessions/{id:guid}/JobCard/Create"
@model Gixat.Web.Pages.Sessions.JobCard.CreateModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Create Job Card";
    Layout = "_AppLayout";
}

<div class="max-w-3xl mx-auto animate-fade-in">
    <!-- Header with gradient -->
    <div class="bg-gradient-to-r from-apple-indigo to-apple-purple rounded-2xl p-6 mb-6 animate-slide-up">
        <div class="flex items-center gap-4">
            <a href="/Sessions/Details/@Model.Session?.Id" class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center hover:bg-white/30 transition-all">
                <i class="bi bi-arrow-left text-white text-lg"></i>
            </a>
            <div class="flex-1">
                <h1 class="text-2xl font-semibold text-white">Create Job Card</h1>
                <p class="text-white/80 text-sm mt-1">Session #@Model.Session?.SessionNumber â€¢ @Model.Session?.VehicleDisplayName</p>
            </div>
            <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center">
                <i class="bi bi-clipboard-check text-white text-2xl"></i>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="card-apple p-8 animate-slide-up" style="animation-delay: 0.1s">
        <form method="post">
            <div class="space-y-6">
                <!-- Title -->
                <div class="animate-slide-up" style="animation-delay: 0.15s">
                    <label asp-for="Input.Title" class="block text-sm font-medium text-apple-dark mb-2">Job Card Title <span class="text-apple-red">*</span></label>
                    <input asp-for="Input.Title" class="input-apple-outlined" placeholder="e.g., Major Engine Service" required />
                    <span asp-validation-for="Input.Title" class="text-apple-red text-xs mt-1.5 block"></span>
                </div>

                <div class="grid grid-cols-2 gap-4 animate-slide-up" style="animation-delay: 0.2s">
                    <!-- Priority -->
                    <div>
                        <label asp-for="Input.Priority" class="block text-sm font-medium text-apple-dark mb-2">Priority Level</label>
                        <div class="relative">
                            <i class="bi bi-flag absolute left-4 top-1/2 -translate-y-1/2 text-apple-gray"></i>
                            <select asp-for="Input.Priority" class="input-apple-outlined pl-11 appearance-none bg-[url('data:image/svg+xml;charset=UTF-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2212%22%20height%3D%2212%22%20viewBox%3D%220%200%2012%2012%22%3E%3Cpath%20fill%3D%22%2386868b%22%20d%3D%22M6%208L1%203h10z%22%2F%3E%3C%2Fsvg%3E')] bg-no-repeat bg-[right_1rem_center]">
                                <option value="@Priority.Low">Low Priority</option>
                                <option value="@Priority.Normal" selected>Normal Priority</option>
                                <option value="@Priority.High">High Priority</option>
                                <option value="@Priority.Urgent">Urgent</option>
                            </select>
                        </div>
                    </div>

                    <!-- Estimated Hours -->
                    <div>
                        <label asp-for="Input.EstimatedHours" class="block text-sm font-medium text-apple-dark mb-2">Estimated Hours</label>
                        <div class="relative">
                            <i class="bi bi-clock absolute left-4 top-1/2 -translate-y-1/2 text-apple-gray"></i>
                            <input asp-for="Input.EstimatedHours" type="number" step="0.5" min="0" class="input-apple-outlined pl-11" placeholder="e.g., 2.5" />
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="animate-slide-up" style="animation-delay: 0.25s">
                    <label asp-for="Input.Description" class="block text-sm font-medium text-apple-dark mb-2">Description</label>
                    <textarea asp-for="Input.Description" rows="4" class="input-apple-outlined resize-none" placeholder="Describe the work to be performed in detail..."></textarea>
                </div>

                <!-- What happens next info box -->
                <div class="bg-gradient-to-r from-apple-green/10 to-apple-teal/5 border border-apple-green/20 rounded-2xl p-5 animate-slide-up" style="animation-delay: 0.3s">
                    <div class="flex gap-4">
                        <div class="w-10 h-10 bg-apple-green/20 rounded-xl flex items-center justify-center flex-shrink-0">
                            <i class="bi bi-rocket-takeoff text-apple-green text-lg"></i>
                        </div>
                        <div>
                            <h4 class="font-semibold text-apple-dark mb-2">What happens next?</h4>
                            <ul class="space-y-2 text-sm text-apple-gray">
                                <li class="flex items-center gap-2">
                                    <i class="bi bi-1-circle text-apple-green"></i>
                                    Add work items and assign technicians
                                </li>
                                <li class="flex items-center gap-2">
                                    <i class="bi bi-2-circle text-apple-green"></i>
                                    Get customer approval before starting work
                                </li>
                                <li class="flex items-center gap-2">
                                    <i class="bi bi-3-circle text-apple-green"></i>
                                    Track progress and complete the job
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-3 mt-8 pt-6 border-t border-gray-100 animate-slide-up" style="animation-delay: 0.35s">
                <a href="/Sessions/Details/@Model.Session?.Id" class="btn-apple-secondary">
                    Cancel
                </a>
                <button type="submit" class="btn-apple-primary bg-gradient-to-r from-apple-indigo to-apple-purple hover:shadow-lg hover:shadow-apple-indigo/25">
                    <i class="bi bi-clipboard-check mr-2"></i> Create Job Card
                </button>
            </div>
        </form>
    </div>
</div>
