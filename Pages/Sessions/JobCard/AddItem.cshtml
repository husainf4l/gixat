@page "/Sessions/{id:guid}/JobCard/AddItem"
@model Gixat.Web.Pages.Sessions.JobCard.AddItemModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Add Work Item";
    Layout = "_AppLayout";
}

<div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center gap-3 mb-2">
            <a href="/Sessions/@Model.SessionId/JobCard" class="inline-flex items-center justify-center w-10 h-10 rounded-xl bg-slate-100 hover:bg-slate-200 text-slate-600 hover:text-slate-900 transition-all duration-200">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="text-3xl font-bold bg-gradient-to-r from-slate-900 via-blue-900 to-slate-900 bg-clip-text text-transparent">
                    Add Work Item
                </h1>
                <p class="text-slate-600 mt-1">Add a new task to the job card</p>
            </div>
        </div>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-8">
        <form method="post">
            <div class="space-y-6">
                <!-- Title -->
                <div>
                    <label asp-for="Title" class="block text-sm font-semibold text-slate-900 mb-2">
                        Task Title <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Title" 
                           class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all outline-none"
                           placeholder="e.g., Replace brake pads"
                           required />
                    <span asp-validation-for="Title" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Description -->
                <div>
                    <label asp-for="Description" class="block text-sm font-semibold text-slate-900 mb-2">
                        Description
                    </label>
                    <textarea asp-for="Description" 
                              rows="4"
                              class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all outline-none"
                              placeholder="Detailed description of the work to be done..."></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Category and Priority Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Category -->
                    <div>
                        <label asp-for="Category" class="block text-sm font-semibold text-slate-900 mb-2">
                            Category
                        </label>
                        <input asp-for="Category" 
                               class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all outline-none"
                               placeholder="e.g., Brakes, Engine, etc." />
                        <span asp-validation-for="Category" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Priority -->
                    <div>
                        <label asp-for="Priority" class="block text-sm font-semibold text-slate-900 mb-2">
                            Priority
                        </label>
                        <select asp-for="Priority" 
                                asp-items="Html.GetEnumSelectList<Priority>()"
                                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all outline-none">
                        </select>
                        <span asp-validation-for="Priority" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Estimated Hours -->
                <div>
                    <label asp-for="EstimatedHours" class="block text-sm font-semibold text-slate-900 mb-2">
                        Estimated Hours
                    </label>
                    <input asp-for="EstimatedHours" 
                           type="number" 
                           step="0.25" 
                           min="0"
                           class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all outline-none"
                           placeholder="0.00" />
                    <span asp-validation-for="EstimatedHours" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3 pt-6 border-t border-slate-100">
                    <button type="submit" 
                            class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]">
                        <i class="bi bi-plus-circle-fill text-lg"></i>
                        Add Work Item
                    </button>
                    <a href="/Sessions/@Model.SessionId/JobCard" 
                       class="inline-flex items-center justify-center gap-2 px-6 py-3.5 text-sm font-semibold text-slate-700 bg-slate-100 hover:bg-slate-200 rounded-xl transition-all duration-200">
                        <i class="bi bi-x-circle"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
