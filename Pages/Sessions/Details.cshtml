            <!-- Session Stats -->
            <div class="bg-gradient-to-br from-slate-50 to-slate-100 rounded-2xl shadow-sm border border-slate-200 p-6">
                <h3 class="font-bold text-slate-900 mb-4 flex items-center gap-2">
                    <i class="bi bi-bar-chart text-primary-600"></i>
                    Statistics
                </h3>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-slate-600">Completion</span>
                        <span class="font-bold text-primary-600">@(GetProgressWidth())%</span>
                    </div>
                    <div class="w-full bg-slate-200 rounded-full h-2.5">
                        <div class="bg-gradient-to-r from-primary-600 to-green-500 h-2.5 rounded-full transition-all duration-700" style="width: @(GetProgressWidth())%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private int GetProgressWidth()
    {
        int completed = 0;
        if (Model.CustomerRequest != null) completed++;
        if (Model.Inspection != null) completed++;
        if (Model.TestDrive != null) completed++;
        if (Model.JobCard != null) completed++;
        
        return completed switch
        {
            0 => 0,
            1 => 25,
            2 => 50,
            3 => 75,
            4 => 100,
            _ => 0
        };
    }
}

<!-- Test Drive Complete Modal -->
<div id="testDriveCompleteModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-6 transform transition-all">
        <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-check-circle text-3xl text-white"></i>
            </div>
            <h2 class="text-2xl font-bold text-slate-900 mb-2">Complete Test Drive</h2>
            <p class="text-slate-600">Enter the ending mileage to complete this test drive</p>
        </div>

        <form id="testDriveCompleteForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">
                    Ending Mileage (Optional)
                </label>
                <div class="relative">
                    <input 
                        type="number" 
                        id="testDriveMileageEnd" 
                        class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                        placeholder="Enter ending mileage"
                        min="@Model.TestDrive?.MileageStart">
                    <span class="absolute right-4 top-3.5 text-slate-400 text-sm">km</span>
                </div>
                @if (Model.TestDrive?.MileageStart.HasValue == true)
                {
                    <p class="mt-2 text-sm text-slate-500">
                        Start mileage: <span class="font-semibold">@Model.TestDrive.MileageStart.Value.ToString("N0") km</span>
                    </p>
                }
            </div>

            <div class="flex gap-3 pt-4">
                <button 
                    type="button" 
                    onclick="closeTestDriveCompleteModal()" 
                    class="flex-1 px-4 py-3 border border-slate-300 rounded-lg text-slate-700 font-semibold hover:bg-slate-50 transition-all">
                    Cancel
                </button>
                <button 
                    type="button" 
                    onclick="submitTestDriveComplete()" 
                    class="flex-1 px-4 py-3 bg-gradient-to-r from-orange-600 to-red-600 text-white rounded-lg font-semibold hover:from-orange-700 hover:to-red-700 shadow-lg transition-all">
                    Complete
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    const sessionId = '@Model.Session.Id';
    const testDriveMileageStart = @(Model.TestDrive?.MileageStart ?? 0);

    function openTestDriveCompleteModal() {
        document.getElementById('testDriveCompleteModal').classList.remove('hidden');
    }

    function closeTestDriveCompleteModal() {
        document.getElementById('testDriveCompleteModal').classList.add('hidden');
        document.getElementById('testDriveMileageEnd').value = '';
    }

    async function submitTestDriveComplete() {
        const mileageEndInput = document.getElementById('testDriveMileageEnd');
        const mileageEnd = mileageEndInput.value ? parseInt(mileageEndInput.value) : null;

        if (testDriveMileageStart > 0 && mileageEnd && mileageEnd < testDriveMileageStart) {
            alert(`End mileage cannot be less than start mileage (${testDriveMileageStart.toLocaleString()} km)`);
            return;
        }

        if (!confirm('Are you sure you want to complete this test drive?')) {
            return;
        }

        try {
            const formData = new FormData();
            if (mileageEnd) {
                formData.append('mileageEnd', mileageEnd);
            }
            formData.append('id', sessionId);
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (token) {
                formData.append('__RequestVerificationToken', token);
            }

            const response = await fetch(`?handler=CompleteTestDrive`, {
                method: 'POST',
                body: formData
            });

            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }

            const result = await response.json();
            if (result.success) {
                window.location.reload();
            } else {
                alert('Failed to complete test drive: ' + (result.error || 'Unknown error'));
            }
        } catch (error) {
            console.error('Error completing test drive:', error);
            alert('Error completing test drive: ' + error.message);
        }
    }

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            closeTestDriveCompleteModal();
        }
    });
</script>
