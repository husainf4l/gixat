@page "{id:guid}"
@model Gixat.Web.Pages.Sessions.DetailsModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Session Details";
    Layout = "_AppLayout";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <a href="/Sessions" class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
                <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">Session #@Model.Session!.SessionNumber</h1>
                <p class="text-sm text-gray-500">@Model.Session.ClientName • @Model.Session.VehicleDisplayName</p>
            </div>
        </div>
        <div class="flex items-center space-x-3">
            @{
                var statusColor = Model.Session!.Status switch
                {
                    SessionStatus.CheckedIn => "bg-green-100 text-green-800",
                    SessionStatus.InProgress => "bg-blue-100 text-blue-800",
                    SessionStatus.Completed => "bg-purple-100 text-purple-800",
                    SessionStatus.Cancelled => "bg-red-100 text-red-800",
                    _ => "bg-gray-100 text-gray-800"
                };
            }
            <span class="px-3 py-1 text-sm font-medium rounded-full @statusColor">
                @Model.Session.Status
            </span>
        </div>
    </div>

    <!-- Session Info Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Session Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <p class="text-sm text-gray-500">Client</p>
                <p class="text-base font-medium text-gray-900">@Model.Session.ClientName</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Vehicle</p>
                <p class="text-base font-medium text-gray-900">@Model.Session.VehicleDisplayName</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Check-In Mileage</p>
                <p class="text-base font-medium text-gray-900">@Model.Session.MileageIn?.ToString("N0") km</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Check-In Time</p>
                <p class="text-base font-medium text-gray-900">@Model.Session.CheckInAt.ToString("MMM dd, yyyy HH:mm")</p>
            </div>
            @if (Model.Session.CheckOutAt.HasValue)
            {
                <div>
                    <p class="text-sm text-gray-500">Check-Out Time</p>
                    <p class="text-base font-medium text-gray-900">@Model.Session.CheckOutAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">Check-Out Mileage</p>
                    <p class="text-base font-medium text-gray-900">@Model.Session.MileageOut?.ToString("N0") km</p>
                </div>
            }
        </div>
    </div>

    <!-- Workflow Progress -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-6">Workflow Progress</h2>
        
        <div class="flex items-center justify-between relative">
            <!-- Progress Line -->
            <div class="absolute top-6 left-0 right-0 h-0.5 bg-gray-200 z-0"></div>
            <div class="absolute top-6 left-0 h-0.5 bg-blue-500 z-0 transition-all" 
                 style="width: @(GetProgressWidth())%"></div>

            <!-- Steps -->
            <div class="relative z-10 flex flex-col items-center">
                <div class="w-12 h-12 rounded-full @(Model.CustomerRequest != null ? "bg-green-500" : "bg-gray-200") flex items-center justify-center">
                    @if (Model.CustomerRequest != null)
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    }
                    else
                    {
                        <span class="text-gray-500 font-semibold">1</span>
                    }
                </div>
                <span class="mt-2 text-sm font-medium @(Model.CustomerRequest != null ? "text-green-600" : "text-gray-500")">Customer Request</span>
            </div>

            <div class="relative z-10 flex flex-col items-center">
                <div class="w-12 h-12 rounded-full @(Model.Inspection != null ? "bg-green-500" : "bg-gray-200") flex items-center justify-center">
                    @if (Model.Inspection != null)
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    }
                    else
                    {
                        <span class="text-gray-500 font-semibold">2</span>
                    }
                </div>
                <span class="mt-2 text-sm font-medium @(Model.Inspection != null ? "text-green-600" : "text-gray-500")">Inspection</span>
            </div>

            <div class="relative z-10 flex flex-col items-center">
                <div class="w-12 h-12 rounded-full @(Model.TestDrive != null ? "bg-green-500" : "bg-gray-200") flex items-center justify-center">
                    @if (Model.TestDrive != null)
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    }
                    else
                    {
                        <span class="text-gray-500 font-semibold">3</span>
                    }
                </div>
                <span class="mt-2 text-sm font-medium @(Model.TestDrive != null ? "text-green-600" : "text-gray-500")">Test Drive</span>
            </div>

            <div class="relative z-10 flex flex-col items-center">
                <div class="w-12 h-12 rounded-full @(Model.JobCard != null ? "bg-green-500" : "bg-gray-200") flex items-center justify-center">
                    @if (Model.JobCard != null)
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    }
                    else
                    {
                        <span class="text-gray-500 font-semibold">4</span>
                    }
                </div>
                <span class="mt-2 text-sm font-medium @(Model.JobCard != null ? "text-green-600" : "text-gray-500")">Job Card</span>
            </div>
        </div>
    </div>

    <!-- Workflow Modules -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Customer Request -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Customer Request</h3>
                @if (Model.CustomerRequest == null)
                {
                    <a href="/Sessions/@Model.Session.Id/CustomerRequest/Create" 
                       class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 transition-colors">
                        Add Request
                    </a>
                }
                else
                {
                    <a href="/Sessions/@Model.Session.Id/CustomerRequest" 
                       class="text-blue-500 hover:text-blue-600 text-sm font-medium">
                        View Details →
                    </a>
                }
            </div>
            @if (Model.CustomerRequest != null)
            {
                <div class="space-y-3">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-500">Title</span>
                        <span class="font-medium text-gray-900">@Model.CustomerRequest.Title</span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-500">Priority</span>
                        <span class="px-2 py-0.5 text-xs font-medium rounded-full @(Model.CustomerRequest.Priority == Priority.High || Model.CustomerRequest.Priority == Priority.Urgent ? "bg-red-100 text-red-700" : Model.CustomerRequest.Priority == Priority.Normal ? "bg-yellow-100 text-yellow-700" : "bg-green-100 text-green-700")">
                            @Model.CustomerRequest.Priority
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.CustomerRequest.Description))
                    {
                        <div>
                            <span class="text-gray-500 text-sm">Description</span>
                            <p class="text-sm text-gray-900 mt-1">@Model.CustomerRequest.Description</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-sm text-gray-500">No customer request recorded yet.</p>
            }
        </div>

        <!-- Inspection -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Inspection</h3>
                @if (Model.Inspection == null && Model.CustomerRequest != null)
                {
                    <a href="/Sessions/@Model.Session.Id/Inspection/Create" 
                       class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 transition-colors">
                        Start Inspection
                    </a>
                }
                else if (Model.Inspection != null)
                {
                    <a href="/Sessions/@Model.Session.Id/Inspection" 
                       class="text-blue-500 hover:text-blue-600 text-sm font-medium">
                        View Details →
                    </a>
                }
            </div>
            @if (Model.Inspection != null)
            {
                <div class="space-y-3">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-500">Status</span>
                        <span class="font-medium text-gray-900">@Model.Inspection.Status</span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-500">Title</span>
                        <span class="font-medium text-gray-900">@Model.Inspection.Title</span>
                    </div>
                    @if (Model.Inspection.InspectionStartedAt.HasValue)
                    {
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-500">Started</span>
                            <span class="font-medium text-gray-900">@Model.Inspection.InspectionStartedAt.Value.ToString("MMM dd, yyyy")</span>
                        </div>
                    }
                </div>
            }
            else if (Model.CustomerRequest == null)
            {
                <p class="text-sm text-gray-500">Complete customer request first.</p>
            }
            else
            {
                <p class="text-sm text-gray-500">No inspection recorded yet.</p>
            }
        </div>

        <!-- Test Drive -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Test Drive</h3>
                @if (Model.TestDrive == null && Model.Inspection != null)
                {
                    <a href="/Sessions/@Model.Session.Id/TestDrive/Create" 
                       class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 transition-colors">
                        Record Test Drive
                    </a>
                }
                else if (Model.TestDrive != null)
                {
                    <a href="/Sessions/@Model.Session.Id/TestDrive" 
                       class="text-blue-500 hover:text-blue-600 text-sm font-medium">
                        View Details →
                    </a>
                }
            </div>
            @if (Model.TestDrive != null)
            {
                <div class="space-y-3">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-500">Status</span>
                        <span class="font-medium text-gray-900">@Model.TestDrive.Status</span>
                    </div>
                    @if (Model.TestDrive.MileageStart.HasValue && Model.TestDrive.MileageEnd.HasValue)
                    {
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-500">Distance</span>
                            <span class="font-medium text-gray-900">@((Model.TestDrive.MileageEnd.Value - Model.TestDrive.MileageStart.Value).ToString("N0")) km</span>
                        </div>
                    }
                    @if (Model.TestDrive.StartedAt.HasValue && Model.TestDrive.CompletedAt.HasValue)
                    {
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-500">Duration</span>
                            <span class="font-medium text-gray-900">@((Model.TestDrive.CompletedAt.Value - Model.TestDrive.StartedAt.Value).TotalMinutes.ToString("N0")) min</span>
                        </div>
                    }
                </div>
            }
            else if (Model.Inspection == null)
            {
                <p class="text-sm text-gray-500">Complete inspection first.</p>
            }
            else
            {
                <p class="text-sm text-gray-500">No test drive recorded yet.</p>
            }
        </div>

        <!-- Job Card -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Job Card</h3>
                @if (Model.JobCard == null && Model.Inspection != null)
                {
                    <a href="/Sessions/@Model.Session.Id/JobCard/Create" 
                       class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 transition-colors">
                        Create Job Card
                    </a>
                }
                else if (Model.JobCard != null)
                {
                    <a href="/Sessions/@Model.Session.Id/JobCard" 
                       class="text-blue-500 hover:text-blue-600 text-sm font-medium">
                        View Details →
                    </a>
                }
            </div>
            @if (Model.JobCard != null)
            {
                <div class="space-y-3">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-500">Status</span>
                        <span class="px-2 py-0.5 text-xs font-medium rounded-full @(Model.JobCard.Status == JobCardStatus.Completed ? "bg-green-100 text-green-700" : Model.JobCard.Status == JobCardStatus.InProgress ? "bg-blue-100 text-blue-700" : "bg-yellow-100 text-yellow-700")">
                            @Model.JobCard.Status
                        </span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-gray-500">Estimated Hours</span>
                        <span class="font-medium text-gray-900">@Model.JobCard.EstimatedHours.ToString("N1") hrs</span>
                    </div>
                    @if (Model.JobCard.ActualHours > 0)
                    {
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-500">Actual Hours</span>
                            <span class="font-medium text-gray-900">@Model.JobCard.ActualHours.ToString("N1") hrs</span>
                        </div>
                    }
                </div>
            }
            else if (Model.Inspection == null)
            {
                <p class="text-sm text-gray-500">Complete inspection first.</p>
            }
            else
            {
                <p class="text-sm text-gray-500">No job card created yet.</p>
            }
        </div>
    </div>

    <!-- Reports Section -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Reports</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <a href="/Sessions/@Model.Session.Id/Reports/Initial" 
               class="flex items-center p-4 border border-gray-200 rounded-xl hover:border-blue-300 hover:bg-blue-50 transition-all group">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4 group-hover:bg-blue-200">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                </div>
                <div>
                    <h4 class="font-medium text-gray-900">Initial Report</h4>
                    <p class="text-sm text-gray-500">View check-in report</p>
                </div>
            </a>

            <a href="/Sessions/@Model.Session.Id/Reports/Final" 
               class="flex items-center p-4 border border-gray-200 rounded-xl hover:border-green-300 hover:bg-green-50 transition-all group @(Model.Session.Status != SessionStatus.Completed ? "opacity-50 pointer-events-none" : "")">
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4 group-hover:bg-green-200">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div>
                    <h4 class="font-medium text-gray-900">Final Report</h4>
                    <p class="text-sm text-gray-500">@(Model.Session.Status == SessionStatus.Completed ? "View completion report" : "Available after checkout")</p>
                </div>
            </a>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-between items-center">
        <a href="/Sessions" class="px-4 py-2 text-gray-600 hover:text-gray-900 font-medium">
            ← Back to Sessions
        </a>
        @if (Model.Session.Status != SessionStatus.Completed && Model.Session.Status != SessionStatus.Cancelled)
        {
            <div class="flex space-x-3">
                @if (Model.JobCard != null && Model.JobCard.Status == JobCardStatus.Completed)
                {
                    <a href="/Sessions/@Model.Session.Id/Checkout" 
                       class="px-6 py-2.5 bg-green-500 text-white font-medium rounded-xl hover:bg-green-600 transition-colors">
                        Complete & Check Out
                    </a>
                }
                <form method="post" asp-page-handler="Cancel" class="inline">
                    <button type="submit" 
                            class="px-6 py-2.5 bg-red-100 text-red-700 font-medium rounded-xl hover:bg-red-200 transition-colors"
                            onclick="return confirm('Are you sure you want to cancel this session?')">
                        Cancel Session
                    </button>
                </form>
            </div>
        }
    </div>
</div>

@functions {
    private int GetProgressWidth()
    {
        int completed = 0;
        if (Model.CustomerRequest != null) completed++;
        if (Model.Inspection != null) completed++;
        if (Model.TestDrive != null) completed++;
        if (Model.JobCard != null) completed++;
        
        return completed switch
        {
            0 => 0,
            1 => 25,
            2 => 50,
            3 => 75,
            4 => 100,
            _ => 0
        };
    }
}
