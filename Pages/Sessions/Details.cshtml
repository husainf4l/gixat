                    {
                        <div class="flex gap-3">
                            <div class="flex flex-col items-center">
                                <div class="w-8 h-8 bg-green-100 text-green-600 rounded-full flex items-center justify-center">
                                    <i class="bi bi-check-lg text-sm"></i>
                                </div>
                            </div>
                            <div>
                                <div class="font-semibold text-slate-900 text-sm">Check-Out</div>
                                <div class="text-xs text-slate-600">@Model.Session.CheckOutAt.Value.ToString("MMM dd, yyyy • h:mm tt")</div>
