                    {
                        <div class="flex gap-3">
                            <div class="flex flex-col items-center">
                                <div class="w-8 h-8 bg-green-100 text-green-600 rounded-full flex items-center justify-center">
                                    <i class="bi bi-check-lg text-sm"></i>
                                </div>
                                @if (Model.Inspection != null || Model.TestDrive != null)
                                {
                                    <div class="w-0.5 h-full bg-slate-200 mt-2"></div>
                                }
                            </div>
                            <div class="pb-4">
                                <div class="font-semibold text-slate-900 text-sm">Customer Request</div>
                                <div class="text-xs text-slate-600">Request recorded</div>
                            </div>
                        </div>
                    }

                    @if (Model.Inspection != null)
                    {
                        <div class="flex gap-3">
                            <div class="flex flex-col items-center">
                                <div class="w-8 h-8 bg-green-100 text-green-600 rounded-full flex items-center justify-center">
                                    <i class="bi bi-check-lg text-sm"></i>
                                </div>
                                @if (Model.TestDrive != null)
                                {
                                    <div class="w-0.5 h-full bg-slate-200 mt-2"></div>
                                }
                            </div>
                            <div class="pb-4">
                                <div class="font-semibold text-slate-900 text-sm">Inspection</div>
                                <div class="text-xs text-slate-600">@(Model.Inspection.InspectionStartedAt?.ToString("MMM dd, yyyy") ?? "Started")</div>
                            </div>
                        </div>
                    }

                    @if (Model.TestDrive != null)
                    {
                        <div class="flex gap-3">
                            <div class="flex flex-col items-center">
                                <div class="w-8 h-8 bg-green-100 text-green-600 rounded-full flex items-center justify-center">
                                    <i class="bi bi-check-lg text-sm"></i>
                                </div>
                            </div>
                            <div>
                                <div class="font-semibold text-slate-900 text-sm">Test Drive</div>
                                <div class="text-xs text-slate-600">@(Model.TestDrive.StartedAt?.ToString("MMM dd, yyyy") ?? "Completed")</div>
                            </div>
