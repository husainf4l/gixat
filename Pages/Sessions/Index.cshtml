@page
@model Gixat.Web.Pages.Sessions.IndexModel
@{
    ViewData["Title"] = "Sessions";
    Layout = "_AppLayout";
}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6 animate-fade-in">
    <div>
        <h1 class="text-2xl font-semibold text-apple-dark tracking-tight">Sessions</h1>
        <p class="text-apple-gray text-sm mt-1">Manage garage sessions and vehicle check-ins</p>
    </div>
    <a href="/Sessions/Create" class="btn-apple-primary">
        <i class="bi bi-plus-lg"></i>
        New Check-In
    </a>
</div>

<!-- Filters Card -->
<div class="card-apple p-4 mb-6 animate-slide-up">
    <form method="get" class="flex flex-wrap gap-3 items-center">
        <!-- Search -->
        <div class="flex-1 min-w-[200px] max-w-md relative">
            <i class="bi bi-search absolute left-3 top-1/2 -translate-y-1/2 text-apple-gray text-sm"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search by session #, client, vehicle..." 
                   class="input-apple pl-9" />
        </div>
        
        <!-- Status Filter -->
        <select name="StatusFilter" class="input-apple w-auto min-w-[160px]">
            <option value="">All Status</option>
            <option value="CheckedIn" selected="@(Model.StatusFilter == "CheckedIn")">Checked In</option>
            <option value="CustomerRequest" selected="@(Model.StatusFilter == "CustomerRequest")">Customer Request</option>
            <option value="Inspection" selected="@(Model.StatusFilter == "Inspection")">Inspection</option>
            <option value="TestDrive" selected="@(Model.StatusFilter == "TestDrive")">Test Drive</option>
            <option value="InProgress" selected="@(Model.StatusFilter == "InProgress")">In Progress</option>
            <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Completed</option>
            <option value="ReadyForPickup" selected="@(Model.StatusFilter == "ReadyForPickup")">Ready for Pickup</option>
            <option value="Closed" selected="@(Model.StatusFilter == "Closed")">Closed</option>
        </select>
        
        <!-- Actions -->
        <button type="submit" class="btn-apple-secondary">
            <i class="bi bi-funnel"></i>
            Filter
        </button>
        <a href="/Sessions" class="btn-apple-ghost">
            <i class="bi bi-x-lg"></i>
            Clear
        </a>
    </form>
</div>

<!-- Sessions Table -->
<div class="card-apple overflow-hidden animate-slide-up" style="animation-delay: 0.1s;">
    @if (Model.Sessions.Any())
    {
        <div class="overflow-x-auto">
            <table class="table-apple">
                <thead>
                    <tr>
                        <th>Session</th>
                        <th>Client</th>
                        <th>Vehicle</th>
                        <th>Status</th>
                        <th>Progress</th>
                        <th>Check-In</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var session in Model.Sessions)
                    {
                        var badgeClass = session.Status switch
                        {
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.CheckedIn => "badge-apple-teal",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.CustomerRequest or
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Inspection or
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.TestDrive => "badge-apple-purple",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.AwaitingApproval => "badge-apple-orange",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.InProgress => "badge-apple-blue",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Completed or
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.ReadyForPickup => "badge-apple-green",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Closed => "badge-apple-gray",
                            _ => "badge-apple-gray"
                        };
                        
                        <tr class="group">
                            <td>
                                <a href="/Sessions/Details/@session.Id" class="font-semibold text-apple-blue hover:text-apple-blue-hover transition-colors">
                                    @session.SessionNumber
                                </a>
                            </td>
                            <td>
                                <span class="text-apple-dark">@session.ClientName</span>
                            </td>
                            <td>
                                <div>
                                    <span class="text-apple-dark">@session.VehicleDisplayName</span>
                                    @if (!string.IsNullOrEmpty(session.VehicleLicensePlate))
                                    {
                                        <p class="text-xs text-apple-gray mt-0.5">@session.VehicleLicensePlate</p>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="@badgeClass">@session.Status</span>
                            </td>
                            <td>
                                <div class="flex gap-1">
                                    <span class="w-7 h-7 rounded-lg flex items-center justify-center text-xs @(session.HasCustomerRequest ? "bg-apple-green/10 text-apple-green" : "bg-gray-100 text-gray-400")" title="Customer Request">
                                        <i class="bi bi-chat-dots"></i>
                                    </span>
                                    <span class="w-7 h-7 rounded-lg flex items-center justify-center text-xs @(session.HasInspection ? "bg-apple-green/10 text-apple-green" : "bg-gray-100 text-gray-400")" title="Inspection">
                                        <i class="bi bi-clipboard-check"></i>
                                    </span>
                                    <span class="w-7 h-7 rounded-lg flex items-center justify-center text-xs @(session.HasTestDrive ? "bg-apple-green/10 text-apple-green" : "bg-gray-100 text-gray-400")" title="Test Drive">
                                        <i class="bi bi-speedometer2"></i>
                                    </span>
                                    <span class="w-7 h-7 rounded-lg flex items-center justify-center text-xs @(session.HasJobCard ? "bg-apple-green/10 text-apple-green" : "bg-gray-100 text-gray-400")" title="Job Card">
                                        <i class="bi bi-wrench"></i>
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <span class="text-apple-dark text-sm">@session.CheckInAt.ToString("MMM dd, yyyy")</span>
                                    <p class="text-xs text-apple-gray">@session.CheckInAt.ToString("HH:mm")</p>
                                </div>
                            </td>
                            <td class="text-right">
                                <div class="flex justify-end gap-1 opacity-60 group-hover:opacity-100 transition-opacity">
                                    <a href="/Sessions/Details/@session.Id" class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-blue hover:bg-apple-blue/10 transition-colors" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="/Sessions/Edit/@session.Id" class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-colors" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-12 text-center">
            <div class="w-20 h-20 rounded-2xl bg-gray-100 flex items-center justify-center mx-auto mb-5">
                <i class="bi bi-inbox text-3xl text-apple-gray"></i>
            </div>
            <h3 class="text-xl font-semibold text-apple-dark mb-2">No sessions found</h3>
            <p class="text-apple-gray mb-6 max-w-sm mx-auto">Get started by creating a new check-in for a vehicle</p>
            <a href="/Sessions/Create" class="btn-apple-primary">
                <i class="bi bi-plus-lg"></i>
                New Check-In
            </a>
        </div>
    }
</div>
