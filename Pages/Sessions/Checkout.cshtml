@page "{id:guid}"
@model Gixat.Web.Pages.Sessions.CheckoutModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Checkout Vehicle";
    Layout = "_AppLayout";

    if (Model.Session == null)
    {
        return;
    }
}

<!-- Header -->
<div class="mb-8 lg:mb-10">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 sm:gap-6">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <a href="/Sessions/Details/@Model.Session.Id" class="inline-flex items-center justify-center w-10 h-10 rounded-xl bg-slate-100 hover:bg-slate-200 text-slate-600 hover:text-slate-900 transition-all duration-200">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-slate-900 via-green-900 to-slate-900 bg-clip-text text-transparent">
                        Vehicle Checkout
                    </h1>
                    <p class="text-slate-600 mt-1 flex items-center gap-2">
                        <i class="bi bi-box-arrow-right text-sm"></i>
                        <span>Session #@Model.Session.SessionNumber</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded-xl">
        <div class="flex items-center gap-3">
            <i class="bi bi-x-circle-fill text-2xl text-red-600"></i>
            <p class="font-bold text-red-900">@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
    <!-- Main Form (2/3 width) -->
    <div class="lg:col-span-2">
        <form method="post" class="space-y-6">
            <!-- Vehicle Information -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                <div class="p-6 border-b border-slate-100 bg-gradient-to-r from-slate-50 to-white">
                    <h2 class="text-xl font-bold text-slate-900 flex items-center gap-2">
                        <i class="bi bi-car-front text-blue-600"></i>
                        Vehicle Information
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-1.5">Vehicle</p>
                            <p class="text-sm font-semibold text-slate-900">@Model.Session.VehicleDisplayName</p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-1.5">Plate Number</p>
                            <p class="text-sm font-semibold text-slate-900">@Model.Session.VehicleLicensePlate</p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-1.5">Mileage In</p>
                            <p class="text-sm text-slate-900">@Model.Session.MileageIn?.ToString("N0") km</p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-1.5">Check In</p>
                            <p class="text-sm text-slate-900">@Model.Session.CheckInAt.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Checkout Form -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                <div class="p-6 border-b border-slate-100 bg-gradient-to-r from-slate-50 to-white">
                    <h2 class="text-xl font-bold text-slate-900 flex items-center gap-2">
                        <i class="bi bi-speedometer text-green-600"></i>
                        Checkout Details
                    </h2>
                </div>
                <div class="p-6 space-y-6">
                    <!-- Mileage Out -->
                    <div>
                        <label for="MileageOut" class="block text-sm font-semibold text-slate-700 mb-2">
                            <i class="bi bi-speedometer2 text-slate-500"></i>
                            Mileage Out (km)
                        </label>
                        <input 
                            type="number" 
                            id="MileageOut" 
                            name="MileageOut" 
                            asp-for="MileageOut"
                            class="w-full px-4 py-3 text-base border border-slate-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200"
                            placeholder="Enter current mileage"
                        />
                        <p class="mt-2 text-xs text-slate-500">
                            <i class="bi bi-info-circle"></i>
                            Record the vehicle's current mileage reading
                        </p>
                    </div>

                    <!-- Checkout Checklist -->
                    <div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-4">
                        <h3 class="font-bold text-blue-900 mb-3 flex items-center gap-2">
                            <i class="bi bi-check-circle"></i>
                            Final Checkout Checklist
                        </h3>
                        <div class="space-y-2 text-sm text-blue-800">
                            <div class="flex items-center gap-2">
                                <i class="bi bi-check2 text-blue-600"></i>
                                <span>All work items completed and approved</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="bi bi-check2 text-blue-600"></i>
                                <span>Quality check performed</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="bi bi-check2 text-blue-600"></i>
                                <span>Vehicle cleaned and ready</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="bi bi-check2 text-blue-600"></i>
                                <span>Customer payment processed</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="bi bi-check2 text-blue-600"></i>
                                <span>Keys and documents ready</span>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex gap-3 pt-4">
                        <button 
                            type="submit" 
                            class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 rounded-xl shadow-lg shadow-green-500/30 hover:shadow-xl hover:shadow-green-500/40 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]">
                            <i class="bi bi-box-arrow-right text-lg"></i>
                            Complete Checkout
                        </button>
                        <a 
                            href="/Sessions/Details/@Model.Session.Id" 
                            class="inline-flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-slate-700 bg-slate-100 hover:bg-slate-200 rounded-xl transition-all duration-200">
                            <i class="bi bi-x-lg"></i>
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Sidebar (1/3 width) -->
    <div class="space-y-6">
        <!-- Session Status -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
            <div class="p-6 border-b border-slate-100 bg-gradient-to-r from-slate-50 to-white">
                <h3 class="text-lg font-bold text-slate-900 flex items-center gap-2">
                    <i class="bi bi-info-circle text-blue-600"></i>
                    Session Status
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-1.5">Current Status</p>
                    @{
                        var statusBadge = Model.Session.Status switch
                        {
                            SessionStatus.CheckedIn => ("bg-blue-100 text-blue-700 ring-blue-200", "bi-box-arrow-in-down"),
                            SessionStatus.CustomerRequest => ("bg-purple-100 text-purple-700 ring-purple-200", "bi-chat-dots"),
                            SessionStatus.Inspection => ("bg-orange-100 text-orange-700 ring-orange-200", "bi-search"),
                            SessionStatus.TestDrive => ("bg-yellow-100 text-yellow-700 ring-yellow-200", "bi-car-front"),
                            SessionStatus.AwaitingApproval => ("bg-amber-100 text-amber-700 ring-amber-200", "bi-hourglass-split"),
                            SessionStatus.InProgress => ("bg-indigo-100 text-indigo-700 ring-indigo-200", "bi-gear"),
                            SessionStatus.QualityCheck => ("bg-purple-100 text-purple-700 ring-purple-200", "bi-award"),
                            SessionStatus.Completed => ("bg-green-100 text-green-700 ring-green-200", "bi-check-circle"),
                            SessionStatus.ReadyForPickup => ("bg-teal-100 text-teal-700 ring-teal-200", "bi-bell"),
                            SessionStatus.Closed => ("bg-slate-100 text-slate-700 ring-slate-200", "bi-lock"),
                            _ => ("bg-slate-100 text-slate-700 ring-slate-200", "bi-circle")
                        };
                    }
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-semibold rounded-full @statusBadge.Item1 ring-1">
                        <i class="bi @statusBadge.Item2"></i>
                        @Model.Session.Status.ToString()
                    </span>
                </div>

                @if (Model.JobCard != null)
                {
                    <div class="pt-4 border-t border-slate-100">
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-1.5">Job Card</p>
                        <p class="text-sm font-semibold text-slate-900">#@Model.JobCard.JobCardNumber</p>
                        <p class="text-sm text-slate-600">@Model.JobCard.Title</p>
                        @{
                            var jobCardBadge = Model.JobCard.Status switch
                            {
                                JobCardStatus.Completed => ("bg-green-100 text-green-700", "bi-check-circle-fill"),
                                JobCardStatus.QualityCheck => ("bg-purple-100 text-purple-700", "bi-award"),
                                JobCardStatus.InProgress => ("bg-orange-100 text-orange-700", "bi-arrow-repeat"),
                                _ => ("bg-slate-100 text-slate-700", "bi-circle")
                            };
                        }
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-semibold rounded-full @jobCardBadge.Item1 mt-2">
                            <i class="bi @jobCardBadge.Item2"></i>
                            @Model.JobCard.Status.ToString().Replace("InProgress", "In Progress").Replace("QualityCheck", "Quality Check")
                        </span>
                    </div>
                }

                <div class="pt-4 border-t border-slate-100">
                    <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-1.5">Customer</p>
                    <p class="text-sm font-semibold text-slate-900">@Model.Session.ClientName</p>
                </div>
            </div>
        </div>

        <!-- Warning Note -->
        <div class="bg-amber-50 border-l-4 border-amber-500 rounded-xl p-4">
            <div class="flex items-start gap-3">
                <i class="bi bi-exclamation-triangle-fill text-xl text-amber-600"></i>
                <div>
                    <p class="font-bold text-amber-900 text-sm mb-1">Important</p>
                    <p class="text-xs text-amber-800">Once checked out, the session will be closed and cannot be reopened. Ensure all work is completed and documented.</p>
                </div>
            </div>
        </div>
    </div>
</div>
