@page "/Sessions/{id:guid}/Inspection"
@model Gixat.Web.Pages.Sessions.Inspection.DetailsModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Inspection";
    Layout = "_AppLayout";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <a href="/Sessions/Details/@Model.Session.Id" class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
                <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">Vehicle Inspection</h1>
                <p class="text-sm text-gray-500">Session #@Model.Session.SessionNumber • @Model.Session.VehicleDisplayName</p>
            </div>
        </div>
        <span class="px-3 py-1 text-sm font-medium rounded-full @(Model.Inspection.Status == RequestStatus.Completed ? "bg-green-100 text-green-800" : Model.Inspection.Status == RequestStatus.InProgress ? "bg-blue-100 text-blue-800" : "bg-yellow-100 text-yellow-800")">
            @Model.Inspection.Status
        </span>
    </div>

    <!-- Inspection Details -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Inspection Details</h2>
        <div class="space-y-4">
            <div>
                <p class="text-sm text-gray-500">Title</p>
                <p class="text-base font-medium text-gray-900">@Model.Inspection.Title</p>
            </div>
            @if (!string.IsNullOrEmpty(Model.Inspection.Description))
            {
                <div>
                    <p class="text-sm text-gray-500">Description</p>
                    <p class="text-base text-gray-900">@Model.Inspection.Description</p>
                </div>
            }
        </div>
    </div>

    <!-- Condition Summary -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Condition Summary</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
            @{
                var conditions = new[] {
                    ("Engine", Model.Inspection.EngineCondition),
                    ("Transmission", Model.Inspection.TransmissionCondition),
                    ("Brakes", Model.Inspection.BrakeCondition),
                    ("Suspension", Model.Inspection.SuspensionCondition),
                    ("Tires", Model.Inspection.TireCondition),
                    ("Electrical", Model.Inspection.ElectricalCondition),
                    ("Exterior", Model.Inspection.ExteriorCondition),
                    ("Interior", Model.Inspection.InteriorCondition)
                };
            }
            @foreach (var (name, condition) in conditions)
            {
                if (!string.IsNullOrEmpty(condition))
                {
                    var conditionColor = condition.ToLower() switch
                    {
                        "good" or "excellent" => "bg-green-100 text-green-800 border-green-200",
                        "fair" or "average" => "bg-yellow-100 text-yellow-800 border-yellow-200",
                        "poor" or "bad" or "needs attention" => "bg-red-100 text-red-800 border-red-200",
                        _ => "bg-gray-100 text-gray-800 border-gray-200"
                    };
                    <div class="p-3 rounded-lg border @conditionColor">
                        <p class="text-xs font-medium opacity-75">@name</p>
                        <p class="text-sm font-semibold">@condition</p>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Inspection Items -->
    @if (Model.Inspection.Items?.Any() == true)
    {
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Inspection Items</h2>
            <div class="space-y-3">
                @foreach (var item in Model.Inspection.Items.OrderBy(i => i.SortOrder))
                {
                    var priorityColor = item.Priority switch
                    {
                        Priority.Urgent => "text-red-600",
                        Priority.High => "text-orange-600",
                        Priority.Normal => "text-yellow-600",
                        _ => "text-gray-600"
                    };
                    
                    <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-xl">
                        <span class="text-lg">@(item.RequiresAttention ? "⚠️" : "✓")</span>
                        <div class="flex-1">
                            <p class="font-medium text-gray-900">@item.ItemName</p>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="text-sm text-gray-600">@item.Description</p>
                            }
                            @if (!string.IsNullOrEmpty(item.Notes))
                            {
                                <p class="text-sm text-gray-500 italic mt-1">@item.Notes</p>
                            }
                        </div>
                        <div class="text-right">
                            <span class="text-xs font-medium @priorityColor">@item.Priority</span>
                            @if (!string.IsNullOrEmpty(item.Condition))
                            {
                                <p class="text-xs text-gray-500">@item.Condition</p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Findings & Recommendations -->
    @if (!string.IsNullOrEmpty(Model.Inspection.Findings) || !string.IsNullOrEmpty(Model.Inspection.Recommendations))
    {
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Findings & Recommendations</h2>
            <div class="space-y-4">
                @if (!string.IsNullOrEmpty(Model.Inspection.Findings))
                {
                    <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-xl">
                        <p class="text-sm font-medium text-yellow-800 mb-1">Key Findings</p>
                        <p class="text-yellow-900">@Model.Inspection.Findings</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Inspection.Recommendations))
                {
                    <div class="p-4 bg-blue-50 border border-blue-200 rounded-xl">
                        <p class="text-sm font-medium text-blue-800 mb-1">Recommendations</p>
                        <p class="text-blue-900">@Model.Inspection.Recommendations</p>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Media Upload Section -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Inspection Photos & Videos</h2>
            <label class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 transition-colors cursor-pointer">
                <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple />
                <span class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Upload Media
                </span>
            </label>
        </div>

        <div id="uploadProgress" class="hidden mb-4">
            <div class="flex items-center gap-3 p-3 bg-blue-50 rounded-lg">
                <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-blue-600"></div>
                <span class="text-sm text-blue-700">Uploading and compressing...</span>
            </div>
        </div>

        <div id="mediaGrid" class="grid grid-cols-2 md:grid-cols-4 gap-4">
            @if (Model.Inspection.MediaItems?.Any() == true)
            {
                @foreach (var media in Model.Inspection.MediaItems)
                {
                    <div class="relative group" data-media-id="@media.Id">
                        @if (media.MediaType == MediaType.Image)
                        {
                            <img src="@media.S3Url" alt="@media.Title" 
                                 class="w-full h-32 object-cover rounded-lg cursor-pointer hover:opacity-90"
                                 onclick="openMediaViewer('@media.S3Url', 'image')" />
                        }
                        else if (media.MediaType == MediaType.Video)
                        {
                            <div class="w-full h-32 bg-gray-100 rounded-lg flex items-center justify-center cursor-pointer hover:bg-gray-200"
                                 onclick="openMediaViewer('@media.S3Url', 'video')">
                                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                        }
                        <button onclick="deleteMedia('@media.Id')" 
                                class="absolute top-2 right-2 p-1.5 bg-red-500 text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                }
            }
        </div>

        <div id="emptyMedia" class="@(Model.Inspection.MediaItems?.Any() == true ? "hidden" : "") text-center py-8">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="text-gray-500">No photos or videos yet</p>
            <p class="text-sm text-gray-400">Upload images to document inspection findings</p>
        </div>
    </div>

    <div class="flex justify-start">
        <a href="/Sessions/Details/@Model.Session.Id" class="px-4 py-2 text-gray-600 hover:text-gray-900 font-medium">
            ← Back to Session
        </a>
    </div>
</div>

<!-- Media Viewer Modal -->
<div id="mediaViewer" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center">
    <button onclick="closeMediaViewer()" class="absolute top-4 right-4 p-2 text-white hover:text-gray-300">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
    </button>
    <div id="mediaContent" class="max-w-4xl max-h-[90vh]"></div>
</div>

@section Scripts {
<script>
    const sessionId = '@Model.Session.Id';
    const mediaGrid = document.getElementById('mediaGrid');
    const emptyMedia = document.getElementById('emptyMedia');
    const uploadProgress = document.getElementById('uploadProgress');

    document.getElementById('mediaUpload').addEventListener('change', async function(e) {
        const files = Array.from(e.target.files);
        if (files.length === 0) return;

        uploadProgress.classList.remove('hidden');

        for (const file of files) {
            try {
                let processedFile = file;
                if (file.type.startsWith('image/')) {
                    processedFile = await compressImage(file);
                }

                const formData = new FormData();
                formData.append('file', processedFile);

                const response = await fetch(`/Sessions/${sessionId}/Inspection?handler=Upload`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const result = await response.json();
                if (!result.success) continue;

                await fetch(result.uploadUrl, {
                    method: 'PUT',
                    body: processedFile,
                    headers: { 'Content-Type': processedFile.type }
                });

                const confirmResponse = await fetch(`/Sessions/${sessionId}/Inspection?handler=ConfirmUpload&mediaItemId=${result.mediaItemId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const confirmResult = await confirmResponse.json();
                if (confirmResult.success) addMediaToGrid(confirmResult.media);
            } catch (error) {
                console.error('Upload error:', error);
            }
        }

        uploadProgress.classList.add('hidden');
        e.target.value = '';
    });

    async function compressImage(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const maxSize = 1920;
                    let width = img.width, height = img.height;

                    if (width > height && width > maxSize) {
                        height = (height * maxSize) / width;
                        width = maxSize;
                    } else if (height > maxSize) {
                        width = (width * maxSize) / height;
                        height = maxSize;
                    }

                    canvas.width = width;
                    canvas.height = height;
                    canvas.getContext('2d').drawImage(img, 0, 0, width, height);

                    canvas.toBlob((blob) => {
                        resolve(new File([blob], file.name, { type: 'image/jpeg' }));
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        });
    }

    function addMediaToGrid(media) {
        emptyMedia.classList.add('hidden');
        const div = document.createElement('div');
        div.className = 'relative group';
        div.dataset.mediaId = media.id;

        if (media.mediaType === 0) {
            div.innerHTML = `
                <img src="${media.s3Url}" class="w-full h-32 object-cover rounded-lg cursor-pointer hover:opacity-90"
                     onclick="openMediaViewer('${media.s3Url}', 'image')" />
                <button onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 p-1.5 bg-red-500 text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>`;
        } else {
            div.innerHTML = `
                <div class="w-full h-32 bg-gray-100 rounded-lg flex items-center justify-center cursor-pointer hover:bg-gray-200"
                     onclick="openMediaViewer('${media.s3Url}', 'video')">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <button onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 p-1.5 bg-red-500 text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>`;
        }
        mediaGrid.appendChild(div);
    }

    async function deleteMedia(mediaId) {
        if (!confirm('Delete this media?')) return;
        const response = await fetch(`/Sessions/${sessionId}/Inspection?handler=DeleteMedia&mediaId=${mediaId}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '' }
        });
        const result = await response.json();
        if (result.success) {
            document.querySelector(`[data-media-id="${mediaId}"]`)?.remove();
            if (mediaGrid.children.length === 0) emptyMedia.classList.remove('hidden');
        }
    }

    function openMediaViewer(url, type) {
        const viewer = document.getElementById('mediaViewer');
        const content = document.getElementById('mediaContent');
        content.innerHTML = type === 'image' 
            ? `<img src="${url}" class="max-w-full max-h-[90vh] rounded-lg" />`
            : `<video src="${url}" controls autoplay class="max-w-full max-h-[90vh] rounded-lg"></video>`;
        viewer.classList.remove('hidden');
        viewer.classList.add('flex');
    }

    function closeMediaViewer() {
        document.getElementById('mediaViewer').classList.add('hidden');
        document.getElementById('mediaViewer').classList.remove('flex');
        document.getElementById('mediaContent').innerHTML = '';
    }

    document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeMediaViewer(); });
</script>
<form method="post" class="hidden">@Html.AntiForgeryToken()</form>
}
