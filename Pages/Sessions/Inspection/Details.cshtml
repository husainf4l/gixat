@page "/Sessions/{id:guid}/Inspection"
@model Gixat.Web.Pages.Sessions.Inspection.DetailsModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Inspection";
    Layout = "_AppLayout";
}

<!-- Back Navigation -->
<a href="/Sessions/Details/@Model.Session.Id" class="inline-flex items-center gap-2 text-apple-gray hover:text-apple-blue no-underline mb-6 text-sm transition-colors animate-fade-in">
    <i class="bi bi-arrow-left"></i>
    Back to Session
</a>

<!-- Header Card -->
<div class="card-apple overflow-hidden mb-6 animate-slide-up">
    <div class="bg-gradient-to-r from-apple-teal to-apple-blue p-6 text-white">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-white/20 backdrop-blur flex items-center justify-center">
                    <i class="bi bi-search text-xl"></i>
                </div>
                <div>
                    <h1 class="text-xl font-semibold tracking-tight">Vehicle Inspection</h1>
                    <p class="text-sm opacity-90">Session #@Model.Session.SessionNumber • @Model.Session.VehicleDisplayName</p>
                </div>
            </div>
            <span class="@(Model.Inspection.Status == RequestStatus.Completed ? "bg-apple-green/20" : Model.Inspection.Status == RequestStatus.InProgress ? "bg-white/20" : "bg-apple-orange/20") px-4 py-1.5 rounded-full text-sm font-medium backdrop-blur self-start md:self-center">
                @Model.Inspection.Status
            </span>
        </div>
    </div>
</div>

<!-- Inspection Details -->
<div class="card-apple p-6 mb-6 animate-slide-up" style="animation-delay: 0.1s;">
    <h2 class="text-lg font-semibold text-apple-dark mb-5 flex items-center gap-2">
        <i class="bi bi-file-text text-apple-blue"></i>Inspection Details
    </h2>
    <div class="space-y-4">
        <div>
            <span class="block text-xs text-apple-gray uppercase tracking-wide mb-1">Title</span>
            <p class="text-apple-dark font-medium">@Model.Inspection.Title</p>
        </div>
        @if (!string.IsNullOrEmpty(Model.Inspection.Description))
        {
            <div>
                <span class="block text-xs text-apple-gray uppercase tracking-wide mb-1">Description</span>
                <p class="text-apple-dark">@Model.Inspection.Description</p>
            </div>
        }
        <div class="flex flex-wrap gap-6 pt-2">
            <div>
                <span class="block text-xs text-apple-gray uppercase tracking-wide mb-1">Priority</span>
                <span class="@(Model.Inspection.OverallPriority == Priority.High || Model.Inspection.OverallPriority == Priority.Urgent ? "badge-apple-red" : Model.Inspection.OverallPriority == Priority.Normal ? "badge-apple-orange" : "badge-apple-green")">
                    @Model.Inspection.OverallPriority
                </span>
            </div>
            @if (Model.Inspection.InspectionStartedAt.HasValue)
            {
                <div>
                    <span class="block text-xs text-apple-gray uppercase tracking-wide mb-1">Started</span>
                    <p class="text-sm text-apple-dark">@Model.Inspection.InspectionStartedAt.Value.ToString("MMM dd, yyyy • h:mm tt")</p>
                </div>
            }
            @if (Model.Inspection.InspectionCompletedAt.HasValue)
            {
                <div>
                    <span class="block text-xs text-apple-gray uppercase tracking-wide mb-1">Completed</span>
                    <p class="text-sm text-apple-dark">@Model.Inspection.InspectionCompletedAt.Value.ToString("MMM dd, yyyy • h:mm tt")</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Condition Summary -->
<div class="card-apple p-6 mb-6 animate-slide-up" style="animation-delay: 0.15s;">
    <h2 class="text-lg font-semibold text-apple-dark mb-5 flex items-center gap-2">
        <i class="bi bi-speedometer2 text-apple-blue"></i>Condition Summary
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
        @{
            var conditions = new[] {
                ("Engine", Model.Inspection.EngineCondition, "bi-gear-wide-connected"),
                ("Transmission", Model.Inspection.TransmissionCondition, "bi-box-seam"),
                ("Brakes", Model.Inspection.BrakeCondition, "bi-disc"),
                ("Suspension", Model.Inspection.SuspensionCondition, "bi-arrows-expand"),
                ("Tires", Model.Inspection.TireCondition, "bi-circle"),
                ("Electrical", Model.Inspection.ElectricalCondition, "bi-lightning"),
                ("Exterior", Model.Inspection.ExteriorCondition, "bi-car-front"),
                ("Interior", Model.Inspection.InteriorCondition, "bi-person-workspace")
            };
        }
        @foreach (var (name, condition, icon) in conditions)
        {
            if (!string.IsNullOrEmpty(condition))
            {
                var conditionClass = condition.ToLower() switch
                {
                    "good" or "excellent" => "bg-apple-green/10 text-apple-green border-apple-green/20",
                    "fair" or "average" => "bg-apple-orange/10 text-apple-orange border-apple-orange/20",
                    "poor" or "bad" or "needs attention" => "bg-apple-red/10 text-apple-red border-apple-red/20",
                    _ => "bg-gray-100 text-apple-gray border-gray-200"
                };
                <div class="p-4 rounded-xl border @conditionClass">
                    <div class="flex items-center gap-2 mb-1">
                        <i class="bi @icon text-sm"></i>
                        <span class="text-xs font-medium opacity-75">@name</span>
                    </div>
                    <p class="text-sm font-semibold">@condition</p>
                </div>
            }
        }
    </div>
</div>

<!-- Inspection Items -->
@if (Model.Inspection.Items?.Any() == true)
{
    <div class="card-apple p-6 mb-6 animate-slide-up" style="animation-delay: 0.2s;">
        <h2 class="text-lg font-semibold text-apple-dark mb-5 flex items-center gap-2">
            <i class="bi bi-list-check text-apple-blue"></i>Inspection Items
            <span class="badge-apple-gray ml-2">@Model.Inspection.Items.Count()</span>
        </h2>
        <div class="space-y-3">
            @foreach (var item in Model.Inspection.Items.OrderBy(i => i.SortOrder))
            {
                var priorityBadge = item.Priority switch
                {
                    Priority.Urgent => "badge-apple-red",
                    Priority.High => "badge-apple-orange",
                    Priority.Normal => "badge-apple-blue",
                    _ => "badge-apple-gray"
                };
                
                <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors">
                    <div class="w-10 h-10 rounded-xl @(item.RequiresAttention ? "bg-apple-orange/15 text-apple-orange" : "bg-apple-green/15 text-apple-green") flex items-center justify-center flex-shrink-0">
                        <i class="bi @(item.RequiresAttention ? "bi-exclamation-triangle" : "bi-check-lg")"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="font-medium text-apple-dark">@item.ItemName</p>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="text-sm text-apple-gray mt-0.5">@item.Description</p>
                        }
                        @if (!string.IsNullOrEmpty(item.Notes))
                        {
                            <p class="text-sm text-apple-gray italic mt-1 flex items-start gap-1">
                                <i class="bi bi-sticky mt-0.5"></i>@item.Notes
                            </p>
                        }
                    </div>
                    <div class="text-right flex-shrink-0">
                        <span class="@priorityBadge text-xs">@item.Priority</span>
                        @if (!string.IsNullOrEmpty(item.Condition))
                        {
                            <p class="text-xs text-apple-gray mt-1">@item.Condition</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Findings & Recommendations -->
@if (!string.IsNullOrEmpty(Model.Inspection.Findings) || !string.IsNullOrEmpty(Model.Inspection.Recommendations))
{
    <div class="card-apple p-6 mb-6 animate-slide-up" style="animation-delay: 0.25s;">
        <h2 class="text-lg font-semibold text-apple-dark mb-5 flex items-center gap-2">
            <i class="bi bi-lightbulb text-apple-blue"></i>Findings & Recommendations
        </h2>
        <div class="space-y-4">
            @if (!string.IsNullOrEmpty(Model.Inspection.Findings))
            {
                <div class="p-4 bg-apple-orange/10 border border-apple-orange/20 rounded-xl">
                    <div class="flex items-center gap-2 mb-2">
                        <i class="bi bi-exclamation-circle text-apple-orange"></i>
                        <span class="text-sm font-medium text-apple-orange">Key Findings</span>
                    </div>
                    <p class="text-apple-dark">@Model.Inspection.Findings</p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Inspection.Recommendations))
            {
                <div class="p-4 bg-apple-blue/10 border border-apple-blue/20 rounded-xl">
                    <div class="flex items-center gap-2 mb-2">
                        <i class="bi bi-arrow-right-circle text-apple-blue"></i>
                        <span class="text-sm font-medium text-apple-blue">Recommendations</span>
                    </div>
                    <p class="text-apple-dark">@Model.Inspection.Recommendations</p>
                </div>
            }
        </div>
    </div>
}

<!-- Media Section -->
<div class="card-apple p-6 mb-6 animate-slide-up" style="animation-delay: 0.3s;">
    <div class="flex items-center justify-between mb-5">
        <h2 class="text-lg font-semibold text-apple-dark flex items-center gap-2">
            <i class="bi bi-images text-apple-blue"></i>Photos & Videos
        </h2>
        <label class="btn-apple-primary text-sm py-2 px-3 cursor-pointer">
            <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple />
            <i class="bi bi-plus-lg"></i>Upload
        </label>
    </div>

    <div id="uploadProgress" class="hidden mb-4">
        <div class="flex items-center gap-3 p-4 bg-apple-blue/10 rounded-xl">
            <div class="animate-spin rounded-full h-5 w-5 border-2 border-apple-blue border-t-transparent"></div>
            <span class="text-sm font-medium text-apple-blue">Uploading and compressing...</span>
        </div>
    </div>

    <div id="mediaGrid" class="grid grid-cols-2 md:grid-cols-4 gap-4">
        @if (Model.Inspection.MediaItems?.Any() == true)
        {
            @foreach (var media in Model.Inspection.MediaItems)
            {
                <div class="relative group rounded-xl overflow-hidden" data-media-id="@media.Id">
                    @if (media.MediaType == MediaType.Image)
                    {
                        <img src="@media.S3Url" alt="@media.Title" 
                             class="w-full h-32 object-cover cursor-pointer hover:scale-105 transition-transform"
                             onclick="openMediaViewer('@media.S3Url', 'image')" />
                    }
                    else if (media.MediaType == MediaType.Video)
                    {
                        <div class="w-full h-32 bg-gray-100 flex items-center justify-center cursor-pointer hover:bg-gray-200 transition-colors"
                             onclick="openMediaViewer('@media.S3Url', 'video')">
                            <i class="bi bi-play-circle text-3xl text-apple-gray"></i>
                        </div>
                    }
                    <button onclick="deleteMedia('@media.Id')" 
                            class="absolute top-2 right-2 w-7 h-7 bg-apple-red text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg">
                        <i class="bi bi-x text-sm"></i>
                    </button>
                </div>
            }
        }
    </div>

    <div id="emptyMedia" class="@(Model.Inspection.MediaItems?.Any() == true ? "hidden" : "") text-center py-10">
        <div class="w-16 h-16 rounded-2xl bg-gray-100 flex items-center justify-center mx-auto mb-4">
            <i class="bi bi-images text-2xl text-apple-gray"></i>
        </div>
        <p class="text-apple-dark font-medium mb-1">No photos or videos yet</p>
        <p class="text-sm text-apple-gray">Upload images to document inspection findings</p>
    </div>
</div>

<!-- Back Button -->
<div class="animate-slide-up" style="animation-delay: 0.35s;">
    <a href="/Sessions/Details/@Model.Session.Id" class="btn-apple-ghost">
        <i class="bi bi-arrow-left"></i>Back to Session
    </a>
</div>

<!-- Media Viewer Modal -->
<div id="mediaViewer" class="fixed inset-0 bg-black/95 z-50 hidden items-center justify-center p-4">
    <button onclick="closeMediaViewer()" class="absolute top-6 right-6 w-10 h-10 bg-white/10 backdrop-blur rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-colors">
        <i class="bi bi-x-lg"></i>
    </button>
    <div id="mediaContent" class="max-w-4xl max-h-[90vh]"></div>
</div>

@section Scripts {
<script>
    const sessionId = '@Model.Session.Id';
    const mediaGrid = document.getElementById('mediaGrid');
    const emptyMedia = document.getElementById('emptyMedia');
    const uploadProgress = document.getElementById('uploadProgress');

    document.getElementById('mediaUpload').addEventListener('change', async function(e) {
        const files = Array.from(e.target.files);
        if (files.length === 0) return;

        uploadProgress.classList.remove('hidden');

        for (const file of files) {
            try {
                let processedFile = file;
                if (file.type.startsWith('image/')) {
                    processedFile = await compressImage(file);
                }

                const formData = new FormData();
                formData.append('file', processedFile);

                const response = await fetch(`/Sessions/${sessionId}/Inspection?handler=Upload`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const result = await response.json();
                if (!result.success) continue;

                await fetch(result.uploadUrl, {
                    method: 'PUT',
                    body: processedFile,
                    headers: { 'Content-Type': processedFile.type }
                });

                const confirmResponse = await fetch(`/Sessions/${sessionId}/Inspection?handler=ConfirmUpload&mediaItemId=${result.mediaItemId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const confirmResult = await confirmResponse.json();
                if (confirmResult.success) addMediaToGrid(confirmResult.media);
            } catch (error) {
                console.error('Upload error:', error);
            }
        }

        uploadProgress.classList.add('hidden');
        e.target.value = '';
    });

    async function compressImage(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const maxSize = 1920;
                    let width = img.width, height = img.height;
                    if (width > height && width > maxSize) { height = (height * maxSize) / width; width = maxSize; }
                    else if (height > maxSize) { width = (width * maxSize) / height; height = maxSize; }
                    canvas.width = width;
                    canvas.height = height;
                    canvas.getContext('2d').drawImage(img, 0, 0, width, height);
                    canvas.toBlob((blob) => resolve(new File([blob], file.name, { type: 'image/jpeg' })), 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        });
    }

    function addMediaToGrid(media) {
        emptyMedia.classList.add('hidden');
        const div = document.createElement('div');
        div.className = 'relative group rounded-xl overflow-hidden';
        div.dataset.mediaId = media.id;
        if (media.mediaType === 0) {
            div.innerHTML = `<img src="${media.s3Url}" class="w-full h-32 object-cover cursor-pointer hover:scale-105 transition-transform" onclick="openMediaViewer('${media.s3Url}', 'image')" />
                <button onclick="deleteMedia('${media.id}')" class="absolute top-2 right-2 w-7 h-7 bg-apple-red text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg"><i class="bi bi-x text-sm"></i></button>`;
        } else {
            div.innerHTML = `<div class="w-full h-32 bg-gray-100 flex items-center justify-center cursor-pointer hover:bg-gray-200 transition-colors" onclick="openMediaViewer('${media.s3Url}', 'video')"><i class="bi bi-play-circle text-3xl text-apple-gray"></i></div>
                <button onclick="deleteMedia('${media.id}')" class="absolute top-2 right-2 w-7 h-7 bg-apple-red text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg"><i class="bi bi-x text-sm"></i></button>`;
        }
        mediaGrid.appendChild(div);
    }

    async function deleteMedia(mediaId) {
        if (!confirm('Delete this media?')) return;
        const response = await fetch(`/Sessions/${sessionId}/Inspection?handler=DeleteMedia&mediaId=${mediaId}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '' }
        });
        const result = await response.json();
        if (result.success) {
            document.querySelector(`[data-media-id="${mediaId}"]`)?.remove();
            if (mediaGrid.children.length === 0) emptyMedia.classList.remove('hidden');
        }
    }

    function openMediaViewer(url, type) {
        const viewer = document.getElementById('mediaViewer');
        const content = document.getElementById('mediaContent');
        content.innerHTML = type === 'image' ? `<img src="${url}" class="max-w-full max-h-[90vh] rounded-2xl" />` : `<video src="${url}" controls autoplay class="max-w-full max-h-[90vh] rounded-2xl"></video>`;
        viewer.classList.remove('hidden');
        viewer.classList.add('flex');
    }

    function closeMediaViewer() {
        const viewer = document.getElementById('mediaViewer');
        viewer.classList.add('hidden');
        viewer.classList.remove('flex');
        document.getElementById('mediaContent').innerHTML = '';
    }

    document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeMediaViewer(); });
</script>
<form method="post" class="hidden">@Html.AntiForgeryToken()</form>
}
