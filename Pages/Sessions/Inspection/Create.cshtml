@page "/Sessions/{id:guid}/Inspection/Create"
@model Gixat.Web.Pages.Sessions.Inspection.CreateModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Start Inspection";
    Layout = "_AppLayout";
}

<div class="max-w-3xl mx-auto">
    <!-- Back Navigation -->
    <a href="/Sessions/Details/@Model.Session?.Id" class="inline-flex items-center gap-2 text-slate-600 hover:text-primary-600 no-underline mb-6 text-sm transition-colors animate-fade-in">
        <i class="bi bi-arrow-left"></i>
        Back to Session
    </a>

    <!-- Header Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden mb-6 animate-slide-up">
        <div class="bg-gradient-to-r from-cyan-600 to-primary-600 p-6 text-white">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-white/20 backdrop-blur flex items-center justify-center">
                    <i class="bi bi-search text-xl"></i>
                </div>
                <div>
                    <h1 class="text-xl font-semibold tracking-tight">Start Inspection</h1>
                    <p class="text-sm opacity-90">Session #@Model.Session?.SessionNumber • @Model.Session?.VehicleDisplayName</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 animate-slide-up" style="animation-delay: 0.1s;">
        <form method="post" id="inspectionForm">
            <div class="space-y-5">
                <!-- Title -->
                <div>
                    <label asp-for="Input.Title" class="block text-sm font-medium text-slate-900 mb-1.5">Inspection Title <span class="text-red-600">*</span></label>
                    <input asp-for="Input.Title" class="input-apple-outlined" placeholder="e.g., Full Vehicle Inspection" required />
                    <span asp-validation-for="Input.Title" class="text-red-600 text-xs mt-1"></span>
                </div>

                <!-- Priority -->
                <div>
                    <label asp-for="Input.OverallPriority" class="block text-sm font-medium text-slate-900 mb-3">Priority</label>
                    <div class="flex flex-wrap gap-3">
                        <label class="priority-option">
                            <input type="radio" name="Input.OverallPriority" value="@Priority.Low" class="hidden peer" />
                            <div class="px-4 py-2 border border-gray-200 rounded-xl cursor-pointer text-sm font-medium text-slate-600 peer-checked:border-green-600 peer-checked:bg-green-100 peer-checked:text-green-600 transition-all">
                                <i class="bi bi-arrow-down-short"></i> Low
                            </div>
                        </label>
                        <label class="priority-option">
                            <input type="radio" name="Input.OverallPriority" value="@Priority.Normal" class="hidden peer" checked />
                            <div class="px-4 py-2 border border-gray-200 rounded-xl cursor-pointer text-sm font-medium text-slate-600 peer-checked:border-primary-600 peer-checked:bg-primary-100 peer-checked:text-primary-600 transition-all">
                                <i class="bi bi-dash"></i> Normal
                            </div>
                        </label>
                        <label class="priority-option">
                            <input type="radio" name="Input.OverallPriority" value="@Priority.High" class="hidden peer" />
                            <div class="px-4 py-2 border border-gray-200 rounded-xl cursor-pointer text-sm font-medium text-slate-600 peer-checked:border-orange-600 peer-checked:bg-orange-100 peer-checked:text-orange-600 transition-all">
                                <i class="bi bi-arrow-up-short"></i> High
                            </div>
                        </label>
                        <label class="priority-option">
                            <input type="radio" name="Input.OverallPriority" value="@Priority.Urgent" class="hidden peer" />
                            <div class="px-4 py-2 border border-gray-200 rounded-xl cursor-pointer text-sm font-medium text-slate-600 peer-checked:border-red-600 peer-checked:bg-red-100 peer-checked:text-red-600 transition-all">
                                <i class="bi bi-exclamation-triangle"></i> Urgent
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Description -->
                <div>
                    <label asp-for="Input.Description" class="block text-sm font-medium text-slate-900 mb-1.5">Description</label>
                    <textarea asp-for="Input.Description" rows="3" class="input-apple-outlined resize-none" placeholder="Describe the scope of the inspection..."></textarea>
                </div>

                <!-- Media Upload Section -->
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-3">Photos & Videos</label>
                    <div id="dropZone" class="border-2 border-dashed border-gray-200 rounded-2xl p-8 text-center hover:border-primary-600 hover:bg-primary-100 transition-all cursor-pointer group">
                        <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple />
                        <div class="w-14 h-14 rounded-2xl bg-gray-100 group-hover:bg-primary-600/10 flex items-center justify-center mx-auto mb-4 transition-colors">
                            <i class="bi bi-cloud-arrow-up text-2xl text-slate-600 group-hover:text-primary-600 transition-colors"></i>
                        </div>
                        <p class="text-sm font-medium text-slate-900 mb-1">Drop photos or videos here</p>
                        <p class="text-xs text-slate-600">or click to browse • Images will be compressed automatically</p>
                    </div>

                    <div id="uploadProgress" class="hidden mt-4">
                        <div class="flex items-center gap-3 p-4 bg-primary-600/10 rounded-xl">
                            <div class="animate-spin rounded-full h-5 w-5 border-2 border-primary-600 border-t-transparent"></div>
                            <span class="text-sm font-medium text-primary-600">Uploading and compressing...</span>
                        </div>
                    </div>

                    <div id="mediaGrid" class="grid grid-cols-3 md:grid-cols-4 gap-3 mt-4"></div>
                    <input type="hidden" asp-for="Input.MediaItemIds" id="mediaItemIds" />
                </div>

                <!-- Info Box -->
                <div class="bg-primary-600/10 border border-primary-600/20 rounded-xl p-4">
                    <div class="flex gap-3">
                        <i class="bi bi-info-circle text-primary-600 text-lg flex-shrink-0"></i>
                        <div>
                            <h4 class="text-sm font-medium text-slate-900">What happens next?</h4>
                            <p class="text-sm text-slate-600 mt-1">After creating the inspection, you'll be able to add inspection items, record conditions, and upload more photos.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-3 mt-8 pt-6 border-t border-gray-100">
                <a href="/Sessions/Details/@Model.Session?.Id" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg bg-white text-slate-700 border border-slate-200 hover:bg-slate-50 transition-colors">Cancel</a>
                <button type="submit" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors bg-gradient-to-r from-cyan-600 to-primary-600">
                    <i class="bi bi-search"></i>Start Inspection
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    const sessionId = '@Model.Session?.Id';
    const mediaGrid = document.getElementById('mediaGrid');
    const uploadProgress = document.getElementById('uploadProgress');
    const dropZone = document.getElementById('dropZone');
    const mediaItemIds = document.getElementById('mediaItemIds');
    const uploadedIds = [];

    dropZone.addEventListener('click', () => document.getElementById('mediaUpload').click());

    dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('border-apple-blue', 'bg-apple-blue/10');
    });
    dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('border-apple-blue', 'bg-apple-blue/10');
    });
    dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('border-apple-blue', 'bg-apple-blue/10');
        const files = Array.from(e.dataTransfer.files).filter(f => f.type.startsWith('image/') || f.type.startsWith('video/'));
        if (files.length > 0) handleFiles(files);
    });

    document.getElementById('mediaUpload').addEventListener('change', function(e) {
        const files = Array.from(e.target.files);
        if (files.length > 0) handleFiles(files);
        e.target.value = '';
    });

    async function handleFiles(files) {
        uploadProgress.classList.remove('hidden');
        
        // Get CSRF token
        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        for (const file of files) {
            try {
                let processedFile = file;
                if (file.type.startsWith('image/')) {
                    processedFile = await compressImage(file);
                }

                const formData = new FormData();
                formData.append('file', processedFile);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch(`/Sessions/${sessionId}/Inspection/Create?handler=Upload`, {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    console.error('Upload failed:', response.statusText);
                    alert('Upload failed: ' + response.statusText);
                    continue;
                }
                
                const result = await response.json();
                if (!result.success) {
                    console.error('Upload failed:', result);
                    alert('Upload failed: ' + (result.error || 'Unknown error'));
                    continue;
                }

                // File is saved locally, skip S3 upload
                // Use the local URL directly
                const confirmFormData = new FormData();
                confirmFormData.append('__RequestVerificationToken', token);
                
                const confirmResponse = await fetch(`/Sessions/${sessionId}/Inspection/Create?handler=ConfirmUpload&mediaItemId=${result.mediaItemId}`, {
                    method: 'POST',
                    body: confirmFormData
                });

                const confirmResult = await confirmResponse.json();
                if (confirmResult.success) {
                    uploadedIds.push(confirmResult.media.id);
                    mediaItemIds.value = uploadedIds.join(',');
                    // Use the public URL from the upload response
                    confirmResult.media.s3Url = result.publicUrl || result.uploadUrl;
                    addMediaToGrid(confirmResult.media);
                }
            } catch (error) {
                console.error('Upload error:', error);
                alert('Failed to upload file: ' + file.name + ' - ' + error.message);
            }
        }

        uploadProgress.classList.add('hidden');
    }

    async function compressImage(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const maxSize = 1920;
                    let width = img.width, height = img.height;

                    if (width > height && width > maxSize) {
                        height = (height * maxSize) / width;
                        width = maxSize;
                    } else if (height > maxSize) {
                        width = (width * maxSize) / height;
                        height = maxSize;
                    }

                    canvas.width = width;
                    canvas.height = height;
                    canvas.getContext('2d').drawImage(img, 0, 0, width, height);

                    canvas.toBlob((blob) => {
                        resolve(new File([blob], file.name, { type: 'image/jpeg' }));
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        });
    }

    function addMediaToGrid(media) {
        const div = document.createElement('div');
        div.className = 'relative group rounded-xl overflow-hidden';
        div.dataset.mediaId = media.id;

        if (media.mediaType === 0) {
            div.innerHTML = `
                <img src="${media.s3Url}" class="w-full h-24 object-cover" />
                <button type="button" onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 w-6 h-6 bg-red-600 text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        } else {
            div.innerHTML = `
                <div class="w-full h-24 bg-gray-100 flex items-center justify-center">
                    <i class="bi bi-play-circle text-2xl text-slate-600"></i>
                </div>
                <button type="button" onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 w-6 h-6 bg-red-600 text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        }
        mediaGrid.appendChild(div);
    }

    async function deleteMedia(mediaId) {
        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
        const formData = new FormData();
        formData.append('__RequestVerificationToken', token);
        
        const response = await fetch(`/Sessions/${sessionId}/Inspection/Create?handler=DeleteMedia&mediaId=${mediaId}`, {
            method: 'POST',
            body: formData
        });
        
        const result = await response.json();
        if (result.success) {
            document.querySelector(`[data-media-id="${mediaId}"]`)?.remove();
            const idx = uploadedIds.indexOf(mediaId);
            if (idx > -1) uploadedIds.splice(idx, 1);
            mediaItemIds.value = uploadedIds.join(',');
        }
    }
</script>
<form method="post" class="hidden">@Html.AntiForgeryToken()</form>
}
