@page "/Sessions/{id:guid}/CustomerRequest/Create"
@model Gixat.Web.Pages.Sessions.CustomerRequest.CreateModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Add Customer Request";
    Layout = "_AppLayout";
}

<div class="max-w-3xl mx-auto animate-fade-in">
    <!-- Back Navigation -->
    <a href="/Sessions/Details/@Model.Session?.Id" class="inline-flex items-center gap-2 text-slate-600 hover:text-slate-900 mb-6 transition-colors">
        <i class="bi bi-arrow-left"></i>
        <span class="text-sm font-medium">Back to Session</span>
    </a>

    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-2xl font-semibold text-slate-900 tracking-tight">Customer Request</h1>
        <p class="text-slate-600 mt-1">Session #@Model.Session?.SessionNumber â€¢ @Model.Session?.VehicleDisplayName</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
        <form method="post">
            <!-- Title -->
            <div class="mb-5">
                <label asp-for="Input.Title" class="block text-sm font-medium text-slate-900 mb-2">
                    Request Title <span class="text-red-600">*</span>
                </label>
                <input asp-for="Input.Title" class="input-apple-outlined" placeholder="e.g., General Service, Oil Change, Brake Inspection" required />
                <span asp-validation-for="Input.Title" class="text-red-600 text-xs mt-1"></span>
            </div>

            <!-- Priority -->
            <div class="mb-5">
                <label asp-for="Input.Priority" class="block text-sm font-medium text-slate-900 mb-2">Priority Level</label>
                <div class="grid grid-cols-4 gap-2">
                    <label class="relative cursor-pointer">
                        <input type="radio" name="Input.Priority" value="@Priority.Low" class="peer sr-only" />
                        <div class="p-3 text-center rounded-2xl border-2 border-gray-200 peer-checked:border-green-600 peer-checked:bg-green-100 transition-all">
                            <span class="text-sm font-medium text-slate-900 peer-checked:text-green-600">Low</span>
                        </div>
                    </label>
                    <label class="relative cursor-pointer">
                        <input type="radio" name="Input.Priority" value="@Priority.Normal" class="peer sr-only" checked />
                        <div class="p-3 text-center rounded-2xl border-2 border-gray-200 peer-checked:border-sky-600 peer-checked:bg-sky-100 transition-all">
                            <span class="text-sm font-medium">Normal</span>
                        </div>
                    </label>
                    <label class="relative cursor-pointer">
                        <input type="radio" name="Input.Priority" value="@Priority.High" class="peer sr-only" />
                        <div class="p-3 text-center rounded-2xl border-2 border-gray-200 peer-checked:border-orange-600 peer-checked:bg-orange-100 transition-all">
                            <span class="text-sm font-medium">High</span>
                        </div>
                    </label>
                    <label class="relative cursor-pointer">
                        <input type="radio" name="Input.Priority" value="@Priority.Urgent" class="peer sr-only" />
                        <div class="p-3 text-center rounded-2xl border-2 border-gray-200 peer-checked:border-red-600 peer-checked:bg-red-100 transition-all">
                            <span class="text-sm font-medium">Urgent</span>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Customer Concerns -->
            <div class="mb-5">
                <label asp-for="Input.CustomerConcerns" class="block text-sm font-medium text-slate-900 mb-2">
                    Customer Concerns
                </label>
                <textarea asp-for="Input.CustomerConcerns" rows="3" class="input-apple-outlined resize-none" 
                          placeholder="What issues is the customer experiencing? Describe symptoms..."></textarea>
                <p class="text-xs text-slate-600 mt-1.5">Describe the issues or symptoms reported by the customer</p>
            </div>

            <!-- Requested Services -->
            <div class="mb-5">
                <label asp-for="Input.RequestedServices" class="block text-sm font-medium text-slate-900 mb-2">
                    Requested Services
                </label>
                <textarea asp-for="Input.RequestedServices" rows="3" class="input-apple-outlined resize-none" 
                          placeholder="e.g., Oil change, brake inspection, tire rotation, AC service..."></textarea>
                <p class="text-xs text-slate-600 mt-1.5">List any specific services requested by the customer</p>
            </div>

            <!-- Additional Description -->
            <div class="mb-5">
                <label asp-for="Input.Description" class="block text-sm font-medium text-slate-900 mb-2">
                    Additional Details
                </label>
                <textarea asp-for="Input.Description" rows="2" class="input-apple-outlined resize-none" 
                          placeholder="Any other relevant information..."></textarea>
            </div>

            <!-- Internal Notes -->
            <div class="mb-6">
                <label asp-for="Input.Notes" class="block text-sm font-medium text-slate-900 mb-2">
                    <span class="flex items-center gap-2">
                        Internal Notes
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-slate-100 text-slate-700">Staff Only</span>
                    </span>
                </label>
                <textarea asp-for="Input.Notes" rows="2" class="input-apple-outlined resize-none bg-gray-50" 
                          placeholder="Notes visible only to staff..."></textarea>
            </div>

            <!-- Divider -->
            <hr class="border-gray-100 my-6" />

            <!-- Media Upload Section -->
            <div class="mb-6">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h3 class="text-sm font-medium text-slate-900">Photos & Videos</h3>
                        <p class="text-xs text-slate-600 mt-0.5">Upload images or videos to document the request</p>
                    </div>
                </div>

                <!-- Drag & Drop Zone -->
                <div id="dropZone" class="border-2 border-dashed border-gray-200 rounded-2xl p-8 text-center hover:border-sky-600 hover:bg-sky-100 transition-all cursor-pointer">
                    <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple />
                    <div class="w-14 h-14 rounded-xl bg-gray-100 flex items-center justify-center mx-auto mb-3">
                        <i class="bi bi-cloud-arrow-up text-2xl text-slate-600"></i>
                    </div>
                    <p class="text-sm font-medium text-slate-900">Drop files here or click to upload</p>
                    <p class="text-xs text-slate-600 mt-1">Supports images and videos up to 50MB</p>
                </div>

                <!-- Upload Progress -->
                <div id="uploadProgress" class="hidden mt-4">
                    <div class="flex items-center gap-3 p-3 bg-apple-blue/5 rounded-apple">
                        <div class="animate-spin rounded-full h-5 w-5 border-2 border-apple-blue border-t-transparent"></div>
                        <span class="text-sm text-sky-600 font-medium">Uploading and processing...</span>
                    </div>
                </div>

                <!-- Media Grid -->
                <div id="mediaGrid" class="grid grid-cols-4 gap-3 mt-4"></div>

                <!-- Hidden field for media IDs -->
                <input type="hidden" id="mediaItemIds" name="MediaItemIds" value="" />
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
                <a href="/Sessions/Details/@Model.Session?.Id" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg bg-white text-slate-700 border border-slate-200 hover:bg-slate-50 transition-colors">Cancel</a>
                <button type="submit" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-sky-600 text-white hover:bg-sky-700 transition-colors">
                    <i class="bi bi-check-lg"></i>
                    Save Customer Request
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    const sessionId = '@Model.Session?.Id';
    const dropZone = document.getElementById('dropZone');
    const mediaUpload = document.getElementById('mediaUpload');
    const mediaGrid = document.getElementById('mediaGrid');
    const uploadProgress = document.getElementById('uploadProgress');
    const mediaItemIdsInput = document.getElementById('mediaItemIds');
    let uploadedMediaIds = [];

    // Click to upload
    dropZone.addEventListener('click', () => mediaUpload.click());
    
    // Drag & drop handlers
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, (e) => {
            e.preventDefault();
            e.stopPropagation();
        });
    });
    
    ['dragenter', 'dragover'].forEach(eventName => {
        dropZone.addEventListener(eventName, () => dropZone.classList.add('border-apple-blue', 'bg-apple-blue/5'));
    });
    
    ['dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, () => dropZone.classList.remove('border-apple-blue', 'bg-apple-blue/5'));
    });
    
    dropZone.addEventListener('drop', (e) => {
        const files = e.dataTransfer.files;
        handleFiles(files);
    });
    
    mediaUpload.addEventListener('change', (e) => handleFiles(e.target.files));

    async function handleFiles(files) {
        if (!files.length) return;
        
        uploadProgress.classList.remove('hidden');

        for (const file of files) {
            try {
                let processedFile = file;
                if (file.type.startsWith('image/')) {
                    processedFile = await compressImage(file);
                }

                const formData = new FormData();
                formData.append('file', processedFile);

                const response = await fetch(`/Sessions/${sessionId}/CustomerRequest/Create?handler=Upload`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const result = await response.json();
                if (!result.success) continue;

                await fetch(result.uploadUrl, {
                    method: 'PUT',
                    body: processedFile,
                    headers: { 'Content-Type': processedFile.type }
                });

                const confirmResponse = await fetch(`/Sessions/${sessionId}/CustomerRequest/Create?handler=ConfirmUpload&mediaItemId=${result.mediaItemId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const confirmResult = await confirmResponse.json();
                if (confirmResult.success) {
                    addMediaToGrid(confirmResult.media);
                    uploadedMediaIds.push(confirmResult.media.id);
                    mediaItemIdsInput.value = uploadedMediaIds.join(',');
                }
            } catch (error) {
                console.error('Upload error:', error);
            }
        }

        uploadProgress.classList.add('hidden');
        mediaUpload.value = '';
    }

    async function compressImage(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const maxSize = 1920;
                    let width = img.width, height = img.height;

                    if (width > height && width > maxSize) {
                        height = (height * maxSize) / width;
                        width = maxSize;
                    } else if (height > maxSize) {
                        width = (width * maxSize) / height;
                        height = maxSize;
                    }

                    canvas.width = width;
                    canvas.height = height;
                    canvas.getContext('2d').drawImage(img, 0, 0, width, height);

                    canvas.toBlob((blob) => {
                        resolve(new File([blob], file.name, { type: 'image/jpeg' }));
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        });
    }

    function addMediaToGrid(media) {
        const div = document.createElement('div');
        div.className = 'relative group aspect-square';
        div.dataset.mediaId = media.id;

        if (media.mediaType === 0) {
            div.innerHTML = `
                <img src="${media.s3Url}" class="w-full h-full object-cover rounded-apple" />
                <button type="button" onclick="deleteMedia('${media.id}')" 
                        class="absolute top-1.5 right-1.5 w-6 h-6 bg-red-600 text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity shadow-lg">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        } else {
            div.innerHTML = `
                <div class="w-full h-full bg-gray-100 rounded-2xl flex items-center justify-center">
                    <i class="bi bi-play-circle text-3xl text-slate-600"></i>
                </div>
                <button type="button" onclick="deleteMedia('${media.id}')" 
                        class="absolute top-1.5 right-1.5 w-6 h-6 bg-red-600 text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity shadow-lg">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        }
        mediaGrid.appendChild(div);
    }

    async function deleteMedia(mediaId) {
        const response = await fetch(`/Sessions/${sessionId}/CustomerRequest/Create?handler=DeleteMedia&mediaId=${mediaId}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '' }
        });
        const result = await response.json();
        if (result.success) {
            document.querySelector(`[data-media-id="${mediaId}"]`)?.remove();
            uploadedMediaIds = uploadedMediaIds.filter(id => id !== mediaId);
            mediaItemIdsInput.value = uploadedMediaIds.join(',');
        }
    }
</script>
}
