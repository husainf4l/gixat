@page "/Sessions/{id:guid}/CustomerRequest"
@model Gixat.Web.Pages.Sessions.CustomerRequest.DetailsModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Customer Request";
    Layout = "_AppLayout";
}

<!-- Back Navigation -->
<a href="/Sessions/Details/@Model.Session.Id" class="inline-flex items-center gap-2 text-slate-600 hover:text-primary-600 no-underline mb-6 text-sm transition-colors animate-fade-in">
    <i class="bi bi-arrow-left"></i>
    Back to Session
</a>

<!-- Header Card -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden mb-6 animate-slide-up">
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 p-6 text-white">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-white/20 backdrop-blur flex items-center justify-center">
                    <i class="bi bi-chat-left-text text-xl"></i>
                </div>
                <div>
                    <h1 class="text-xl font-semibold tracking-tight">Customer Request</h1>
                    <p class="text-sm opacity-90">Session #@Model.Session.SessionNumber • @Model.Session.VehicleDisplayName</p>
                </div>
            </div>
            <span class="@(Model.CustomerRequest.Status == RequestStatus.Completed ? "bg-green-600/20 text-white" : "bg-white/20") px-4 py-1.5 rounded-full text-sm font-medium backdrop-blur self-start md:self-center">
                @Model.CustomerRequest.Status
            </span>
        </div>
    </div>
</div>

<!-- Request Details Card -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 mb-6 animate-slide-up" style="animation-delay: 0.1s;">
    <h2 class="text-lg font-semibold text-slate-900 mb-5 flex items-center gap-2">
        <i class="bi bi-file-text text-primary-600"></i>Request Details
    </h2>
    <div class="space-y-5">
        <div>
            <span class="block text-xs text-slate-600 uppercase tracking-wide mb-1">Title</span>
            <p class="text-slate-900 font-medium">@Model.CustomerRequest.Title</p>
        </div>
        @if (!string.IsNullOrEmpty(Model.CustomerRequest.CustomerConcerns))
        {
            <div>
                <span class="block text-xs text-slate-600 uppercase tracking-wide mb-1">Customer Concerns</span>
                <p class="text-slate-900">@Model.CustomerRequest.CustomerConcerns</p>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.CustomerRequest.RequestedServices))
        {
            <div>
                <span class="block text-xs text-slate-600 uppercase tracking-wide mb-1">Requested Services</span>
                <p class="text-slate-900">@Model.CustomerRequest.RequestedServices</p>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.CustomerRequest.Description))
        {
            <div>
                <span class="block text-xs text-slate-600 uppercase tracking-wide mb-1">Description</span>
                <p class="text-slate-900">@Model.CustomerRequest.Description</p>
            </div>
        }
        <div class="flex flex-wrap gap-6 pt-2">
            <div>
                <span class="block text-xs text-slate-600 uppercase tracking-wide mb-1">Priority</span>
                <span class="@(Model.CustomerRequest.Priority == Priority.High || Model.CustomerRequest.Priority == Priority.Urgent ? "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-red-100 text-red-700" : Model.CustomerRequest.Priority == Priority.Normal ? "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-orange-100 text-orange-700" : "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700")">
                    @Model.CustomerRequest.Priority
                </span>
            </div>
            <div>
                <span class="block text-xs text-slate-600 uppercase tracking-wide mb-1">Created</span>
                <p class="text-sm text-slate-900">@Model.CustomerRequest.CreatedAt.ToString("MMM dd, yyyy • h:mm tt")</p>
            </div>
        </div>
    </div>
</div>

<!-- Media Upload Section -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 mb-6 animate-slide-up" style="animation-delay: 0.15s;">
    <div class="flex items-center justify-between mb-5">
        <h2 class="text-lg font-semibold text-slate-900 flex items-center gap-2">
            <i class="bi bi-images text-primary-600"></i>Photos & Videos
        </h2>
        <label class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors text-sm py-2 px-3 cursor-pointer">
            <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple />
            <i class="bi bi-plus-lg"></i>Upload
        </label>
    </div>

    <!-- Upload Progress -->
    <div id="uploadProgress" class="hidden mb-4">
        <div class="flex items-center gap-3 p-4 bg-primary-600/10 rounded-xl">
            <div class="animate-spin rounded-full h-5 w-5 border-2 border-primary-600 border-t-transparent"></div>
            <span class="text-sm font-medium text-primary-600">Uploading and compressing...</span>
        </div>
    </div>

    <!-- Media Grid -->
    <div id="mediaGrid" class="grid grid-cols-2 md:grid-cols-4 gap-4">
        @if (Model.CustomerRequest.MediaItems?.Any() == true)
        {
            @foreach (var media in Model.CustomerRequest.MediaItems)
            {
                <div class="relative group rounded-xl overflow-hidden" data-media-id="@media.Id">
                    @if (media.MediaType == MediaType.Image)
                    {
                        <img src="@media.S3Url" alt="@media.Title" 
                             class="w-full h-32 object-cover cursor-pointer hover:scale-105 transition-transform"
                             onclick="openMediaViewer('@media.S3Url', 'image')" />
                    }
                    else if (media.MediaType == MediaType.Video)
                    {
                        <div class="w-full h-32 bg-gray-100 flex items-center justify-center cursor-pointer hover:bg-gray-200 transition-colors"
                             onclick="openMediaViewer('@media.S3Url', 'video')">
                            <i class="bi bi-play-circle text-3xl text-apple-gray"></i>
                        </div>
                    }
                    <button onclick="deleteMedia('@media.Id')" 
                            class="absolute top-2 right-2 w-7 h-7 bg-apple-red text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg">
                        <i class="bi bi-x text-sm"></i>
                    </button>
                </div>
            }
        }
    </div>

    <div id="emptyMedia" class="@(Model.CustomerRequest.MediaItems?.Any() == true ? "hidden" : "") text-center py-10">
        <div class="w-16 h-16 rounded-2xl bg-gray-100 flex items-center justify-center mx-auto mb-4">
            <i class="bi bi-images text-2xl text-slate-600"></i>
        </div>
        <p class="text-slate-900 font-medium mb-1">No photos or videos yet</p>
        <p class="text-sm text-slate-600">Upload images or videos to document the customer request</p>
    </div>
</div>

<!-- Back Button -->
<div class="animate-slide-up" style="animation-delay: 0.2s;">
    <a href="/Sessions/Details/@Model.Session.Id" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg text-slate-700 hover:bg-slate-100 transition-colors">
        <i class="bi bi-arrow-left"></i>Back to Session
    </a>
</div>

<!-- Media Viewer Modal -->
<div id="mediaViewer" class="fixed inset-0 bg-black/95 z-50 hidden items-center justify-center p-4">
    <button onclick="closeMediaViewer()" class="absolute top-6 right-6 w-10 h-10 bg-white/10 backdrop-blur rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-colors">
        <i class="bi bi-x-lg"></i>
    </button>
    <div id="mediaContent" class="max-w-4xl max-h-[90vh]"></div>
</div>

@section Scripts {
<script>
    const sessionId = '@Model.Session.Id';
    const mediaGrid = document.getElementById('mediaGrid');
    const emptyMedia = document.getElementById('emptyMedia');
    const uploadProgress = document.getElementById('uploadProgress');

    document.getElementById('mediaUpload').addEventListener('change', async function(e) {
        const files = Array.from(e.target.files);
        if (files.length === 0) return;

        uploadProgress.classList.remove('hidden');

        for (const file of files) {
            try {
                let processedFile = file;
                if (file.type.startsWith('image/')) {
                    processedFile = await compressImage(file);
                }

                const formData = new FormData();
                formData.append('file', processedFile);

                const response = await fetch(`/Sessions/${sessionId}/CustomerRequest?handler=Upload`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const result = await response.json();
                if (!result.success) continue;

                await fetch(result.uploadUrl, {
                    method: 'PUT',
                    body: processedFile,
                    headers: { 'Content-Type': processedFile.type }
                });

                const confirmResponse = await fetch(`/Sessions/${sessionId}/CustomerRequest?handler=ConfirmUpload&mediaItemId=${result.mediaItemId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const confirmResult = await confirmResponse.json();
                if (confirmResult.success) {
                    addMediaToGrid(confirmResult.media);
                }
            } catch (error) {
                console.error('Upload error:', error);
            }
        }

        uploadProgress.classList.add('hidden');
        e.target.value = '';
    });

    async function compressImage(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const maxSize = 1920;
                    let width = img.width, height = img.height;

                    if (width > height && width > maxSize) {
                        height = (height * maxSize) / width;
                        width = maxSize;
                    } else if (height > maxSize) {
                        width = (width * maxSize) / height;
                        height = maxSize;
                    }

                    canvas.width = width;
                    canvas.height = height;
                    canvas.getContext('2d').drawImage(img, 0, 0, width, height);

                    canvas.toBlob((blob) => {
                        resolve(new File([blob], file.name, { type: 'image/jpeg' }));
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        });
    }

    function addMediaToGrid(media) {
        emptyMedia.classList.add('hidden');
        
        const div = document.createElement('div');
        div.className = 'relative group rounded-xl overflow-hidden';
        div.dataset.mediaId = media.id;

        if (media.mediaType === 0) {
            div.innerHTML = `
                <img src="${media.s3Url}" class="w-full h-32 object-cover cursor-pointer hover:scale-105 transition-transform"
                     onclick="openMediaViewer('${media.s3Url}', 'image')" />
                <button onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 w-7 h-7 bg-apple-red text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        } else {
            div.innerHTML = `
                <div class="w-full h-32 bg-gray-100 flex items-center justify-center cursor-pointer hover:bg-gray-200 transition-colors"
                     onclick="openMediaViewer('${media.s3Url}', 'video')">
                    <i class="bi bi-play-circle text-3xl text-apple-gray"></i>
                </div>
                <button onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 w-7 h-7 bg-apple-red text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all shadow-lg">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        }

        mediaGrid.appendChild(div);
    }

    async function deleteMedia(mediaId) {
        if (!confirm('Delete this media?')) return;

        const response = await fetch(`/Sessions/${sessionId}/CustomerRequest?handler=DeleteMedia&mediaId=${mediaId}`, {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        });

        const result = await response.json();
        if (result.success) {
            document.querySelector(`[data-media-id="${mediaId}"]`)?.remove();
            if (mediaGrid.children.length === 0) {
                emptyMedia.classList.remove('hidden');
            }
        }
    }

    function openMediaViewer(url, type) {
        const viewer = document.getElementById('mediaViewer');
        const content = document.getElementById('mediaContent');

        if (type === 'image') {
            content.innerHTML = `<img src="${url}" class="max-w-full max-h-[90vh] rounded-2xl" />`;
        } else {
            content.innerHTML = `<video src="${url}" controls autoplay class="max-w-full max-h-[90vh] rounded-2xl"></video>`;
        }

        viewer.classList.remove('hidden');
        viewer.classList.add('flex');
    }

    function closeMediaViewer() {
        const viewer = document.getElementById('mediaViewer');
        viewer.classList.add('hidden');
        viewer.classList.remove('flex');
        document.getElementById('mediaContent').innerHTML = '';
    }

    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeMediaViewer();
    });
</script>
<form method="post" class="hidden">@Html.AntiForgeryToken()</form>
}
