@page "/Sessions/{id:guid}/TestDrive/Create"
@model Gixat.Web.Pages.Sessions.TestDrive.CreateModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Record Test Drive";
    Layout = "_AppLayout";
}

<div class="max-w-3xl mx-auto animate-fade-in">
    <!-- Header with gradient -->
    <div class="bg-gradient-to-r from-cyan-600 to-green-600 rounded-2xl p-6 mb-6 animate-slide-up">
        <div class="flex items-center gap-4">
            <a href="/Sessions/Details/@Model.Session?.Id" class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center hover:bg-white/30 transition-all">
                <i class="bi bi-arrow-left text-white text-lg"></i>
            </a>
            <div class="flex-1">
                <h1 class="text-2xl font-semibold text-white">Record Test Drive</h1>
                <p class="text-white/80 text-sm mt-1">Session #@Model.Session?.SessionNumber â€¢ @Model.Session?.VehicleDisplayName</p>
            </div>
            <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center">
                <i class="bi bi-speedometer2 text-white text-2xl"></i>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-8 animate-slide-up" style="animation-delay: 0.1s">
        <form method="post" id="testDriveForm">
            @Html.AntiForgeryToken()
            <div class="space-y-6">
                <!-- Title -->
                <div class="animate-slide-up" style="animation-delay: 0.15s">
                    <label asp-for="Input.Title" class="block text-sm font-medium text-apple-dark mb-2">Test Drive Title <span class="text-apple-red">*</span></label>
                    <input asp-for="Input.Title" class="input-apple-outlined" placeholder="e.g., Pre-delivery road test" required />
                    <span asp-validation-for="Input.Title" class="text-apple-red text-xs mt-1.5 block"></span>
                </div>

                <!-- Mileage Start -->
                <div class="animate-slide-up" style="animation-delay: 0.2s">
                    <label asp-for="Input.MileageStart" class="block text-sm font-medium text-apple-dark mb-2">Starting Mileage (km)</label>
                    <div class="relative">
                        <i class="bi bi-speedometer absolute left-4 top-1/2 -translate-y-1/2 text-apple-gray"></i>
                        <input asp-for="Input.MileageStart" type="number" class="input-apple-outlined pl-11" placeholder="e.g., 50000" />
                    </div>
                    <p class="text-xs text-apple-gray mt-1.5 flex items-center gap-1.5">
                        <i class="bi bi-info-circle"></i>
                        Odometer reading before starting the test drive
                    </p>
                </div>

                <!-- Priority -->
                <div class="animate-slide-up" style="animation-delay: 0.25s">
                    <label asp-for="Input.OverallPriority" class="block text-sm font-medium text-apple-dark mb-2">Priority Level</label>
                    <div class="grid grid-cols-4 gap-3" id="prioritySelector">
                        <label class="relative cursor-pointer priority-option" data-priority="@((int)Priority.Low)">
                            <input type="radio" name="Input.OverallPriority" value="@((int)Priority.Low)" class="hidden priority-radio" />
                            <div class="priority-card p-3 rounded-xl border-2 border-gray-200 text-center transition-all hover:border-gray-300" data-color="green">
                                <i class="bi bi-arrow-down text-lg text-green-500 block mb-1"></i>
                                <span class="text-sm font-medium text-apple-dark">Low</span>
                            </div>
                        </label>
                        <label class="relative cursor-pointer priority-option" data-priority="@((int)Priority.Normal)">
                            <input type="radio" name="Input.OverallPriority" value="@((int)Priority.Normal)" class="hidden priority-radio" checked />
                            <div class="priority-card p-3 rounded-xl border-2 border-gray-200 text-center transition-all hover:border-gray-300 active" data-color="blue">
                                <i class="bi bi-dash text-lg text-blue-500 block mb-1"></i>
                                <span class="text-sm font-medium text-apple-dark">Normal</span>
                            </div>
                        </label>
                        <label class="relative cursor-pointer priority-option" data-priority="@((int)Priority.High)">
                            <input type="radio" name="Input.OverallPriority" value="@((int)Priority.High)" class="hidden priority-radio" />
                            <div class="priority-card p-3 rounded-xl border-2 border-gray-200 text-center transition-all hover:border-gray-300" data-color="orange">
                                <i class="bi bi-arrow-up text-lg text-orange-500 block mb-1"></i>
                                <span class="text-sm font-medium text-apple-dark">High</span>
                            </div>
                        </label>
                        <label class="relative cursor-pointer priority-option" data-priority="@((int)Priority.Urgent)">
                            <input type="radio" name="Input.OverallPriority" value="@((int)Priority.Urgent)" class="hidden priority-radio" />
                            <div class="priority-card p-3 rounded-xl border-2 border-gray-200 text-center transition-all hover:border-gray-300" data-color="red">
                                <i class="bi bi-exclamation-lg text-lg text-red-500 block mb-1"></i>
                                <span class="text-sm font-medium text-apple-dark">Urgent</span>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Description -->
                <div class="animate-slide-up" style="animation-delay: 0.3s">
                    <label asp-for="Input.Description" class="block text-sm font-medium text-apple-dark mb-2">Description</label>
                    <textarea asp-for="Input.Description" rows="3" class="input-apple-outlined resize-none" placeholder="Describe the purpose or route of the test drive..."></textarea>
                </div>

                <!-- Media Upload Section -->
                <div class="animate-slide-up" style="animation-delay: 0.35s">
                    <label class="block text-sm font-medium text-apple-dark mb-2">Photos & Videos</label>
                    <div id="dropZone" class="border-2 border-dashed border-gray-300 rounded-2xl p-8 text-center hover:border-apple-teal hover:bg-apple-teal/5 transition-all cursor-pointer group">
                        <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple />
                        <div class="w-16 h-16 bg-gradient-to-br from-apple-teal/10 to-apple-green/10 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
                            <i class="bi bi-cloud-arrow-up text-3xl text-apple-teal"></i>
                        </div>
                        <p class="text-apple-dark font-medium mb-1">Drop photos or videos here</p>
                        <p class="text-apple-gray text-sm">or click to browse files</p>
                        <div class="flex items-center justify-center gap-4 mt-4 text-xs text-apple-gray">
                            <span class="flex items-center gap-1"><i class="bi bi-image"></i> Images</span>
                            <span class="flex items-center gap-1"><i class="bi bi-camera-video"></i> Videos</span>
                            <span class="flex items-center gap-1"><i class="bi bi-lightning"></i> Auto-compress</span>
                        </div>
                    </div>

                    <div id="uploadProgress" class="hidden mt-4">
                        <div class="flex items-center gap-3 p-4 bg-apple-blue/5 border border-apple-blue/20 rounded-xl">
                            <div class="animate-spin rounded-full h-5 w-5 border-2 border-apple-blue border-t-transparent"></div>
                            <span class="text-sm text-apple-blue font-medium">Uploading and compressing...</span>
                        </div>
                    </div>

                    <div id="mediaGrid" class="grid grid-cols-3 md:grid-cols-4 gap-3 mt-4"></div>
                    <input type="hidden" asp-for="Input.MediaItemIds" id="mediaItemIds" />
                </div>

                <!-- Safety Reminder -->
                <div class="bg-gradient-to-r from-apple-orange/10 to-apple-orange/5 border border-apple-orange/20 rounded-2xl p-5 animate-slide-up" style="animation-delay: 0.4s">
                    <div class="flex gap-4">
                        <div class="w-10 h-10 bg-apple-orange/20 rounded-xl flex items-center justify-center flex-shrink-0">
                            <i class="bi bi-shield-exclamation text-apple-orange text-lg"></i>
                        </div>
                        <div>
                            <h4 class="font-semibold text-apple-dark mb-1">Safety Reminder</h4>
                            <p class="text-sm text-apple-gray leading-relaxed">Ensure proper authorization before conducting test drives. Record ending mileage and observations after the drive is complete.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-3 mt-8 pt-6 border-t border-gray-100 animate-slide-up" style="animation-delay: 0.45s">
                <a href="/Sessions/Details/@Model.Session?.Id" class="btn-apple-secondary">
                    Cancel
                </a>
                <button type="submit" class="btn-apple-primary bg-gradient-to-r from-apple-teal to-apple-green hover:shadow-lg hover:shadow-apple-teal/25">
                    <i class="bi bi-speedometer2 mr-2"></i> Start Test Drive
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    // Priority selector functionality
    (function() {
        console.log('Priority selector script loaded');
        
        function initPrioritySelector() {
            const priorityOptions = document.querySelectorAll('.priority-option');
            console.log('Found priority options:', priorityOptions.length);
            
            priorityOptions.forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    console.log('Priority clicked');
                    
                    // Remove active class from all options
                    document.querySelectorAll('.priority-card').forEach(card => {
                        card.classList.remove('active');
                    });
                    
                    // Add active class to clicked option
                    const card = this.querySelector('.priority-card');
                    card.classList.add('active');
                    
                    // Check the radio button
                    const radio = this.querySelector('.priority-radio');
                    radio.checked = true;
                    console.log('Radio checked:', radio.value);
                });
            });
            
            // Initialize the default checked option on page load
            setTimeout(() => {
                const checkedRadio = document.querySelector('.priority-radio:checked');
                if (checkedRadio) {
                    const card = checkedRadio.closest('.priority-option').querySelector('.priority-card');
                    card.classList.add('active');
                    console.log('Default priority initialized');
                }
            }, 100);
        }
        
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initPrioritySelector);
        } else {
            initPrioritySelector();
        }
    })();

    const sessionId = '@Model.Session?.Id';
    const mediaGrid = document.getElementById('mediaGrid');
    const uploadProgress = document.getElementById('uploadProgress');
    const dropZone = document.getElementById('dropZone');
    const mediaItemIds = document.getElementById('mediaItemIds');
    const uploadedIds = [];

    // Click to upload
    dropZone.addEventListener('click', () => document.getElementById('mediaUpload').click());

    // Drag and drop with Apple-style feedback
    dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('border-apple-teal', 'bg-apple-teal/10', 'scale-[1.02]');
    });
    dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('border-apple-teal', 'bg-apple-teal/10', 'scale-[1.02]');
    });
    dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('border-apple-teal', 'bg-apple-teal/10', 'scale-[1.02]');
        const files = Array.from(e.dataTransfer.files).filter(f => f.type.startsWith('image/') || f.type.startsWith('video/'));
        if (files.length > 0) handleFiles(files);
    });

    document.getElementById('mediaUpload').addEventListener('change', function(e) {
        const files = Array.from(e.target.files);
        if (files.length > 0) handleFiles(files);
        e.target.value = '';
    });

    async function handleFiles(files) {
        uploadProgress.classList.remove('hidden');
        console.log('Starting upload for', files.length, 'files');

        for (const file of files) {
            try {
                console.log('Processing file:', file.name, file.type, file.size);
                
                let processedFile = file;
                if (file.type.startsWith('image/')) {
                    console.log('Compressing image...');
                    processedFile = await compressImage(file);
                    console.log('Compressed to:', processedFile.size);
                }

                const formData = new FormData();
                formData.append('file', processedFile);
                
                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                console.log('Anti-forgery token found:', !!token);

                console.log('Uploading file to server...');
                const response = await fetch(`/Sessions/${sessionId}/TestDrive/Create?handler=Upload`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': token || ''
                    }
                });

                console.log('Upload response status:', response.status);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Upload failed with status:', response.status, errorText);
                    alert(`Upload failed: Server returned ${response.status}`);
                    continue;
                }
                
                const result = await response.json();
                console.log('Upload result:', result);
                
                if (!result.success) {
                    console.error('Upload failed:', result.error);
                    alert(`Upload failed: ${result.error || 'Unknown error'}`);
                    continue;
                }

                // File is uploaded and ready!
                uploadedIds.push(result.media.id);
                mediaItemIds.value = uploadedIds.join(',');
                addMediaToGrid(result.media);
                console.log('File uploaded successfully!');
                
            } catch (error) {
                console.error('Upload error:', error);
                alert(`Upload error: ${error.message}`);
            }
        }

        uploadProgress.classList.add('hidden');
        console.log('Upload process complete');
    }

    async function compressImage(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const maxSize = 1920;
                    let width = img.width, height = img.height;

                    if (width > height && width > maxSize) {
                        height = (height * maxSize) / width;
                        width = maxSize;
                    } else if (height > maxSize) {
                        width = (width * maxSize) / height;
                        height = maxSize;
                    }

                    canvas.width = width;
                    canvas.height = height;
                    canvas.getContext('2d').drawImage(img, 0, 0, width, height);

                    canvas.toBlob((blob) => {
                        resolve(new File([blob], file.name, { type: 'image/jpeg' }));
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        });
    }

    function addMediaToGrid(media) {
        const div = document.createElement('div');
        div.className = 'relative group animate-scale-in';
        div.dataset.mediaId = media.id;

        if (media.mediaType === 0) {
            div.innerHTML = `
                <img src="${media.s3Url}" class="w-full h-24 object-cover rounded-xl border border-gray-200 shadow-sm" />
                <button type="button" onclick="deleteMedia('${media.id}')" 
                        class="absolute -top-2 -right-2 w-6 h-6 bg-apple-red text-white rounded-full opacity-0 group-hover:opacity-100 transition-all shadow-lg flex items-center justify-center hover:scale-110">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        } else {
            div.innerHTML = `
                <div class="w-full h-24 bg-gradient-to-br from-gray-100 to-gray-50 rounded-xl border border-gray-200 flex items-center justify-center">
                    <i class="bi bi-play-circle text-3xl text-apple-gray"></i>
                </div>
                <button type="button" onclick="deleteMedia('${media.id}')" 
                        class="absolute -top-2 -right-2 w-6 h-6 bg-apple-red text-white rounded-full opacity-0 group-hover:opacity-100 transition-all shadow-lg flex items-center justify-center hover:scale-110">
                    <i class="bi bi-x text-sm"></i>
                </button>`;
        }
        mediaGrid.appendChild(div);
    }

    async function deleteMedia(mediaId) {
        const response = await fetch(`/Sessions/${sessionId}/TestDrive/Create?handler=DeleteMedia&mediaId=${mediaId}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '' }
        });
        const result = await response.json();
        if (result.success) {
            const el = document.querySelector(`[data-media-id="${mediaId}"]`);
            if (el) {
                el.style.transform = 'scale(0)';
                el.style.opacity = '0';
                setTimeout(() => el.remove(), 200);
            }
            const idx = uploadedIds.indexOf(mediaId);
            if (idx > -1) uploadedIds.splice(idx, 1);
            mediaItemIds.value = uploadedIds.join(',');
        }
    }
</script>
<style type="text/css">
    /* Priority selector styles */
    .priority-card {
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .priority-card.active[data-color="green"] {
        border-color: #22c55e !important;
        background-color: #f0fdf4 !important;
        box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1) !important;
    }
    
    .priority-card.active[data-color="blue"] {
        border-color: #3b82f6 !important;
        background-color: #eff6ff !important;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1) !important;
    }
    
    .priority-card.active[data-color="orange"] {
        border-color: #f97316 !important;
        background-color: #fff7ed !important;
        box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.1) !important;
    }
    
    .priority-card.active[data-color="red"] {
        border-color: #ef4444 !important;
        background-color: #fef2f2 !important;
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1) !important;
    }
    
    .priority-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>
<form method="post" class="hidden">@Html.AntiForgeryToken()</form>
}
