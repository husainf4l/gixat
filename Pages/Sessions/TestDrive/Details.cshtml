@page "/Sessions/{id:guid}/TestDrive"
@model Gixat.Web.Pages.Sessions.TestDrive.DetailsModel
@using Gixat.Web.Modules.Sessions.Enums
@{
    ViewData["Title"] = "Test Drive";
    Layout = "_AppLayout";
}

<div class="space-y-6 animate-fade-in">
    <!-- Header with gradient -->
    <div class="bg-gradient-to-r from-apple-teal to-apple-green rounded-2xl p-6 animate-slide-up">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <a href="/Sessions/Details/@Model.Session.Id" class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center hover:bg-white/30 transition-all">
                    <i class="bi bi-arrow-left text-white text-lg"></i>
                </a>
                <div>
                    <h1 class="text-2xl font-semibold text-white">Test Drive</h1>
                    <p class="text-white/80 text-sm mt-1">Session #@Model.Session.SessionNumber • @Model.Session.VehicleDisplayName</p>
                </div>
            </div>
            <div class="flex items-center gap-3">
                @{
                    var statusConfig = Model.TestDrive.Status switch
                    {
                        RequestStatus.Completed => ("bg-white/20 text-white", "bi-check-circle-fill"),
                        RequestStatus.InProgress => ("bg-white/20 text-white", "bi-arrow-repeat"),
                        _ => ("bg-white/20 text-white", "bi-clock")
                    };
                }
                <span class="px-4 py-2 @statusConfig.Item1 backdrop-blur-sm rounded-xl text-sm font-medium flex items-center gap-2">
                    <i class="bi @statusConfig.Item2"></i>
                    @Model.TestDrive.Status
                </span>
            </div>
        </div>
    </div>

    <!-- Test Drive Details Card -->
    <div class="card-apple p-6 animate-slide-up" style="animation-delay: 0.1s">
        <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-gradient-to-br from-apple-teal/10 to-apple-green/10 rounded-xl flex items-center justify-center">
                <i class="bi bi-speedometer2 text-apple-teal text-lg"></i>
            </div>
            <h2 class="text-lg font-semibold text-apple-dark">Test Drive Details</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-1">
                <p class="text-sm text-apple-gray">Title</p>
                <p class="text-base font-medium text-apple-dark">@Model.TestDrive.Title</p>
            </div>
            @if (!string.IsNullOrEmpty(Model.TestDrive.Description))
            {
                <div class="space-y-1">
                    <p class="text-sm text-apple-gray">Description</p>
                    <p class="text-base text-apple-dark">@Model.TestDrive.Description</p>
                </div>
            }
            @if (Model.TestDrive.MileageStart.HasValue || Model.TestDrive.MileageEnd.HasValue)
            {
                <div class="md:col-span-2">
                    <p class="text-sm text-apple-gray mb-2">Mileage</p>
                    <div class="flex items-center gap-4">
                        <div class="flex-1 bg-gradient-to-r from-apple-teal/5 to-transparent rounded-xl p-4 border border-apple-teal/10">
                            <p class="text-xs text-apple-gray mb-1">Start</p>
                            <p class="text-xl font-semibold text-apple-dark">@(Model.TestDrive.MileageStart?.ToString("N0") ?? "—") <span class="text-sm font-normal text-apple-gray">km</span></p>
                        </div>
                        <div class="w-12 h-12 bg-apple-teal/10 rounded-full flex items-center justify-center">
                            <i class="bi bi-arrow-right text-apple-teal text-xl"></i>
                        </div>
                        <div class="flex-1 bg-gradient-to-l from-apple-green/5 to-transparent rounded-xl p-4 border border-apple-green/10">
                            <p class="text-xs text-apple-gray mb-1">End</p>
                            <p class="text-xl font-semibold text-apple-dark">@(Model.TestDrive.MileageEnd?.ToString("N0") ?? "—") <span class="text-sm font-normal text-apple-gray">km</span></p>
                        </div>
                        @if (Model.TestDrive.MileageStart.HasValue && Model.TestDrive.MileageEnd.HasValue)
                        {
                            <div class="bg-apple-green/10 rounded-xl p-4 border border-apple-green/20">
                                <p class="text-xs text-apple-gray mb-1">Distance</p>
                                <p class="text-xl font-bold text-apple-green">@((Model.TestDrive.MileageEnd.Value - Model.TestDrive.MileageStart.Value).ToString("N0")) <span class="text-sm font-normal">km</span></p>
                            </div>
                        }
                    </div>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.TestDrive.RouteDescription))
            {
                <div class="md:col-span-2 space-y-1">
                    <p class="text-sm text-apple-gray">Route Description</p>
                    <p class="text-base text-apple-dark">@Model.TestDrive.RouteDescription</p>
                </div>
            }
        </div>
    </div>

    <!-- Performance Summary -->
    <div class="card-apple p-6 animate-slide-up" style="animation-delay: 0.2s">
        <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-gradient-to-br from-apple-blue/10 to-apple-indigo/10 rounded-xl flex items-center justify-center">
                <i class="bi bi-graph-up text-apple-blue text-lg"></i>
            </div>
            <h2 class="text-lg font-semibold text-apple-dark">Performance Observations</h2>
        </div>
        
        @{
            var observations = new[] {
                ("Engine", Model.TestDrive.EnginePerformance, "bi-gear-wide-connected", "from-apple-blue to-apple-indigo"),
                ("Transmission", Model.TestDrive.TransmissionPerformance, "bi-gear", "from-apple-purple to-apple-indigo"),
                ("Brakes", Model.TestDrive.BrakePerformance, "bi-disc", "from-apple-red to-apple-orange"),
                ("Steering", Model.TestDrive.SteeringPerformance, "bi-joystick", "from-apple-teal to-apple-green"),
                ("Suspension", Model.TestDrive.SuspensionPerformance, "bi-arrows-expand", "from-apple-orange to-apple-red"),
                ("Noise", Model.TestDrive.NoiseObservations, "bi-volume-up", "from-gray-500 to-gray-600"),
                ("Vibration", Model.TestDrive.VibrationObservations, "bi-activity", "from-apple-orange to-amber-600"),
                ("Electrical", Model.TestDrive.ElectricalObservations, "bi-lightning", "from-yellow-500 to-apple-orange"),
                ("A/C", Model.TestDrive.AcPerformance, "bi-snow2", "from-cyan-500 to-apple-blue")
            };
            var hasObservations = observations.Any(o => !string.IsNullOrEmpty(o.Item2));
        }
        
        @if (hasObservations)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                @foreach (var (name, value, icon, gradient) in observations)
                {
                    if (!string.IsNullOrEmpty(value))
                    {
                        <div class="group p-4 bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-100 hover:border-gray-200 hover:shadow-sm transition-all">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-8 h-8 bg-gradient-to-br @gradient rounded-lg flex items-center justify-center">
                                    <i class="bi @icon text-white text-sm"></i>
                                </div>
                                <span class="font-medium text-apple-dark">@name</span>
                            </div>
                            <p class="text-sm text-apple-gray leading-relaxed">@value</p>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <div class="w-16 h-16 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="bi bi-clipboard text-3xl text-gray-300"></i>
                </div>
                <p class="text-apple-gray font-medium">No performance observations recorded yet</p>
                <p class="text-sm text-gray-400 mt-1">Observations will appear here after the test drive</p>
            </div>
        }
    </div>

    <!-- Findings & Recommendations -->
    @if (!string.IsNullOrEmpty(Model.TestDrive.Findings) || !string.IsNullOrEmpty(Model.TestDrive.Recommendations))
    {
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 animate-slide-up" style="animation-delay: 0.3s">
            @if (!string.IsNullOrEmpty(Model.TestDrive.Findings))
            {
                <div class="bg-gradient-to-br from-apple-orange/5 to-amber-50 border border-apple-orange/20 rounded-2xl p-5">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 bg-apple-orange/20 rounded-xl flex items-center justify-center">
                            <i class="bi bi-exclamation-triangle text-apple-orange text-lg"></i>
                        </div>
                        <h3 class="font-semibold text-apple-dark">Key Findings</h3>
                    </div>
                    <p class="text-apple-dark leading-relaxed">@Model.TestDrive.Findings</p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.TestDrive.Recommendations))
            {
                <div class="bg-gradient-to-br from-apple-blue/5 to-blue-50 border border-apple-blue/20 rounded-2xl p-5">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 bg-apple-blue/20 rounded-xl flex items-center justify-center">
                            <i class="bi bi-lightbulb text-apple-blue text-lg"></i>
                        </div>
                        <h3 class="font-semibold text-apple-dark">Recommendations</h3>
                    </div>
                    <p class="text-apple-dark leading-relaxed">@Model.TestDrive.Recommendations</p>
                </div>
            }
        </div>
    }

    <!-- Media Upload Section -->
    <div class="card-apple p-6 animate-slide-up" style="animation-delay: 0.4s">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-apple-purple/10 to-apple-indigo/10 rounded-xl flex items-center justify-center">
                    <i class="bi bi-images text-apple-purple text-lg"></i>
                </div>
                <h2 class="text-lg font-semibold text-apple-dark">Test Drive Media</h2>
            </div>
            <label class="btn-apple-primary cursor-pointer">
                <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple />
                <i class="bi bi-plus-lg mr-2"></i> Upload Media
            </label>
        </div>

        <div id="uploadProgress" class="hidden mb-4">
            <div class="flex items-center gap-3 p-4 bg-apple-blue/5 border border-apple-blue/20 rounded-xl">
                <div class="animate-spin rounded-full h-5 w-5 border-2 border-apple-blue border-t-transparent"></div>
                <span class="text-sm text-apple-blue font-medium">Uploading and compressing...</span>
            </div>
        </div>

        <div id="mediaGrid" class="grid grid-cols-2 md:grid-cols-4 gap-4">
            @if (Model.TestDrive.MediaItems?.Any() == true)
            {
                @foreach (var media in Model.TestDrive.MediaItems)
                {
                    <div class="relative group rounded-xl overflow-hidden" data-media-id="@media.Id">
                        @if (media.MediaType == MediaType.Image)
                        {
                            <img src="@media.S3Url" alt="@media.Title" 
                                 class="w-full h-32 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
                                 onclick="openMediaViewer('@media.S3Url', 'image')" />
                        }
                        else if (media.MediaType == MediaType.Video)
                        {
                            <div class="w-full h-32 bg-gradient-to-br from-gray-100 to-gray-50 flex items-center justify-center cursor-pointer hover:from-gray-200 hover:to-gray-100 transition-all"
                                 onclick="openMediaViewer('@media.S3Url', 'video')">
                                <div class="w-12 h-12 bg-white/80 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg">
                                    <i class="bi bi-play-fill text-2xl text-apple-dark"></i>
                                </div>
                            </div>
                        }
                        <button onclick="deleteMedia('@media.Id')" 
                                class="absolute top-2 right-2 w-8 h-8 bg-apple-red/90 backdrop-blur-sm text-white rounded-full opacity-0 group-hover:opacity-100 transition-all shadow-lg flex items-center justify-center hover:scale-110">
                            <i class="bi bi-x-lg text-sm"></i>
                        </button>
                    </div>
                }
            }
        </div>

        <div id="emptyMedia" class="@(Model.TestDrive.MediaItems?.Any() == true ? "hidden" : "") text-center py-12">
            <div class="w-16 h-16 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-image text-3xl text-gray-300"></i>
            </div>
            <p class="text-apple-gray font-medium">No photos or videos yet</p>
            <p class="text-sm text-gray-400 mt-1">Upload images to document test drive observations</p>
        </div>
    </div>

    <!-- Back Link -->
    <div class="flex justify-start animate-slide-up" style="animation-delay: 0.5s">
        <a href="/Sessions/Details/@Model.Session.Id" class="btn-apple-ghost">
            <i class="bi bi-arrow-left mr-2"></i> Back to Session
        </a>
    </div>
</div>

<!-- Media Viewer Modal -->
<div id="mediaViewer" class="fixed inset-0 bg-black/95 backdrop-blur-sm z-50 hidden items-center justify-center">
    <button onclick="closeMediaViewer()" class="absolute top-6 right-6 w-12 h-12 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-all">
        <i class="bi bi-x-lg text-xl"></i>
    </button>
    <div id="mediaContent" class="max-w-5xl max-h-[90vh]"></div>
</div>

@section Scripts {
<script>
    const sessionId = '@Model.Session.Id';
    const mediaGrid = document.getElementById('mediaGrid');
    const emptyMedia = document.getElementById('emptyMedia');
    const uploadProgress = document.getElementById('uploadProgress');

    document.getElementById('mediaUpload').addEventListener('change', async function(e) {
        const files = Array.from(e.target.files);
        if (files.length === 0) return;

        uploadProgress.classList.remove('hidden');

        for (const file of files) {
            try {
                let processedFile = file;
                if (file.type.startsWith('image/')) {
                    processedFile = await compressImage(file);
                }

                const formData = new FormData();
                formData.append('file', processedFile);

                const response = await fetch(`/Sessions/${sessionId}/TestDrive?handler=Upload`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const result = await response.json();
                if (!result.success) continue;

                await fetch(result.uploadUrl, {
                    method: 'PUT',
                    body: processedFile,
                    headers: { 'Content-Type': processedFile.type }
                });

                const confirmResponse = await fetch(`/Sessions/${sessionId}/TestDrive?handler=ConfirmUpload&mediaItemId=${result.mediaItemId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const confirmResult = await confirmResponse.json();
                if (confirmResult.success) addMediaToGrid(confirmResult.media);
            } catch (error) {
                console.error('Upload error:', error);
            }
        }

        uploadProgress.classList.add('hidden');
        e.target.value = '';
    });

    async function compressImage(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const maxSize = 1920;
                    let width = img.width, height = img.height;

                    if (width > height && width > maxSize) {
                        height = (height * maxSize) / width;
                        width = maxSize;
                    } else if (height > maxSize) {
                        width = (width * maxSize) / height;
                        height = maxSize;
                    }

                    canvas.width = width;
                    canvas.height = height;
                    canvas.getContext('2d').drawImage(img, 0, 0, width, height);

                    canvas.toBlob((blob) => {
                        resolve(new File([blob], file.name, { type: 'image/jpeg' }));
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        });
    }

    function addMediaToGrid(media) {
        emptyMedia.classList.add('hidden');
        const div = document.createElement('div');
        div.className = 'relative group rounded-xl overflow-hidden animate-scale-in';
        div.dataset.mediaId = media.id;

        if (media.mediaType === 0) {
            div.innerHTML = `
                <img src="${media.s3Url}" class="w-full h-32 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
                     onclick="openMediaViewer('${media.s3Url}', 'image')" />
                <button onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 w-8 h-8 bg-apple-red/90 backdrop-blur-sm text-white rounded-full opacity-0 group-hover:opacity-100 transition-all shadow-lg flex items-center justify-center hover:scale-110">
                    <i class="bi bi-x-lg text-sm"></i>
                </button>`;
        } else {
            div.innerHTML = `
                <div class="w-full h-32 bg-gradient-to-br from-gray-100 to-gray-50 flex items-center justify-center cursor-pointer hover:from-gray-200 hover:to-gray-100 transition-all"
                     onclick="openMediaViewer('${media.s3Url}', 'video')">
                    <div class="w-12 h-12 bg-white/80 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg">
                        <i class="bi bi-play-fill text-2xl text-apple-dark"></i>
                    </div>
                </div>
                <button onclick="deleteMedia('${media.id}')" 
                        class="absolute top-2 right-2 w-8 h-8 bg-apple-red/90 backdrop-blur-sm text-white rounded-full opacity-0 group-hover:opacity-100 transition-all shadow-lg flex items-center justify-center hover:scale-110">
                    <i class="bi bi-x-lg text-sm"></i>
                </button>`;
        }
        mediaGrid.appendChild(div);
    }

    async function deleteMedia(mediaId) {
        if (!confirm('Delete this media?')) return;
        const response = await fetch(`/Sessions/${sessionId}/TestDrive?handler=DeleteMedia&mediaId=${mediaId}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '' }
        });
        const result = await response.json();
        if (result.success) {
            const el = document.querySelector(`[data-media-id="${mediaId}"]`);
            if (el) {
                el.style.transform = 'scale(0)';
                el.style.opacity = '0';
                setTimeout(() => el.remove(), 200);
            }
            if (mediaGrid.children.length === 0) emptyMedia.classList.remove('hidden');
        }
    }

    function openMediaViewer(url, type) {
        const viewer = document.getElementById('mediaViewer');
        const content = document.getElementById('mediaContent');
        content.innerHTML = type === 'image' 
            ? `<img src="${url}" class="max-w-full max-h-[90vh] rounded-2xl shadow-2xl" />`
            : `<video src="${url}" controls autoplay class="max-w-full max-h-[90vh] rounded-2xl shadow-2xl"></video>`;
        viewer.classList.remove('hidden');
        viewer.classList.add('flex');
    }

    function closeMediaViewer() {
        document.getElementById('mediaViewer').classList.add('hidden');
        document.getElementById('mediaViewer').classList.remove('flex');
        document.getElementById('mediaContent').innerHTML = '';
    }

    document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeMediaViewer(); });
</script>
<style>
    @@keyframes scale-in {
        from { transform: scale(0.8); opacity: 0; }
        to { transform: scale(1); opacity: 1; }
    }
    .animate-scale-in { animation: scale-in 0.2s ease-out; }
</style>
<form method="post" class="hidden">@Html.AntiForgeryToken()</form>
}
