@page
@model Gixat.Web.Pages.HealthUIModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gixat - System Status</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @@keyframes pulse-slow {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        .pulse-slow {
            animation: pulse-slow 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .slide-in {
            animation: slideIn 0.3s ease-out;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 min-h-screen text-white">
    <div class="container mx-auto px-4 py-8 max-w-6xl">
        <!-- Header -->
        <div class="text-center mb-12 slide-in">
            <h1 class="text-5xl font-bold mb-3 bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
                Gixat System Status
            </h1>
            <p class="text-gray-400 text-lg">Real-time health monitoring dashboard</p>
        </div>

        <!-- Overall Status Card -->
        <div class="mb-8 slide-in" style="animation-delay: 0.1s">
            <div class="bg-gradient-to-r @(Model.OverallStatus == "Healthy" ? "from-green-600 to-emerald-600" : Model.OverallStatus == "Degraded" ? "from-yellow-600 to-orange-600" : "from-red-600 to-rose-600") p-6 rounded-2xl shadow-2xl">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-2xl font-bold mb-2">Overall System Status</h2>
                        <p class="text-white/90">@(Model.OverallStatus == "Healthy" ? "All systems operational" : Model.OverallStatus == "Degraded" ? "Some systems experiencing issues" : "System outage detected")</p>
                    </div>
                    <div class="text-right">
                        <div class="text-4xl font-black">@Model.OverallStatus</div>
                        <div class="text-sm text-white/80 mt-1">Last checked: @DateTime.UtcNow.ToString("HH:mm:ss UTC")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Health Checks Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            @for (int i = 0; i < Model.HealthChecks.Count; i++)
            {
                var check = Model.HealthChecks[i];
                var bgColor = check.Status == "Healthy" ? "bg-gray-800/50 border-green-500/50" : 
                              check.Status == "Degraded" ? "bg-gray-800/50 border-yellow-500/50" : 
                              "bg-gray-800/50 border-red-500/50";
                var statusColor = check.Status == "Healthy" ? "text-green-400" : 
                                  check.Status == "Degraded" ? "text-yellow-400" : 
                                  "text-red-400";
                var statusBg = check.Status == "Healthy" ? "bg-green-500/20" : 
                               check.Status == "Degraded" ? "bg-yellow-500/20" : 
                               "bg-red-500/20";
                
                <div class="@bgColor border-2 rounded-xl p-6 backdrop-blur-sm hover:scale-105 transition-transform duration-200 slide-in" style="animation-delay: @((i * 0.05 + 0.2))s">
                    <div class="flex items-start justify-between mb-4">
                        <div>
                            <h3 class="text-xl font-bold mb-1">@check.Name</h3>
                            @if (!string.IsNullOrEmpty(check.Description))
                            {
                                <p class="text-gray-400 text-sm">@check.Description</p>
                            }
                        </div>
                        <div class="flex items-center gap-2">
                            @if (check.Status == "Healthy")
                            {
                                <svg class="w-8 h-8 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                            }
                            else if (check.Status == "Degraded")
                            {
                                <svg class="w-8 h-8 text-yellow-400 pulse-slow" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                </svg>
                            }
                            else
                            {
                                <svg class="w-8 h-8 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                            }
                        </div>
                    </div>

                    <div class="space-y-2">
                        <div class="flex items-center justify-between">
                            <span class="text-gray-400 text-sm">Status</span>
                            <span class="@statusColor @statusBg px-3 py-1 rounded-full text-sm font-semibold">@check.Status</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-gray-400 text-sm">Response Time</span>
                            <span class="text-white font-mono text-sm">@check.Duration.TotalMilliseconds.ToString("F0")ms</span>
                        </div>
                        @if (!string.IsNullOrEmpty(check.Error))
                        {
                            <div class="mt-3 p-3 bg-red-500/10 border border-red-500/30 rounded-lg">
                                <p class="text-red-400 text-sm font-mono">@check.Error</p>
                            </div>
                        }
                        @if (check.Tags.Any())
                        {
                            <div class="flex flex-wrap gap-2 mt-3">
                                @foreach (var tag in check.Tags)
                                {
                                    <span class="bg-gray-700/50 px-2 py-1 rounded text-xs text-gray-300">#@tag</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Statistics -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8 slide-in" style="animation-delay: 0.5s">
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-4 text-center">
                <div class="text-3xl font-bold text-green-400">@Model.HealthyCount</div>
                <div class="text-gray-400 text-sm mt-1">Healthy</div>
            </div>
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-4 text-center">
                <div class="text-3xl font-bold text-yellow-400">@Model.DegradedCount</div>
                <div class="text-gray-400 text-sm mt-1">Degraded</div>
            </div>
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-4 text-center">
                <div class="text-3xl font-bold text-red-400">@Model.UnhealthyCount</div>
                <div class="text-gray-400 text-sm mt-1">Unhealthy</div>
            </div>
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-4 text-center">
                <div class="text-3xl font-bold text-blue-400">@Model.TotalDuration.TotalMilliseconds.ToString("F0")ms</div>
                <div class="text-gray-400 text-sm mt-1">Total Time</div>
            </div>
        </div>

        <!-- Auto Refresh -->
        <div class="text-center text-gray-500 text-sm slide-in" style="animation-delay: 0.6s">
            <p>Auto-refreshing every 30 seconds • <a href="/health" class="text-blue-400 hover:text-blue-300">Refresh now</a> • <a href="/health" class="text-blue-400 hover:text-blue-300" download="health-report.json">Download JSON</a></p>
        </div>
    </div>

    <script>
        // Auto-refresh every 30 seconds
        setTimeout(() => {
            window.location.reload();
        }, 30000);
    </script>
</body>
</html>
