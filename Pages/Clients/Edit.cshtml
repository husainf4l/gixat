@page "/Clients/{id}/Edit"
@model Gixat.Web.Pages.Clients.EditModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Edit Client";
}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6 animate-fade-in">
    <div>
        <div class="flex items-center gap-3 mb-2">
            <a href="/Clients" class="text-slate-600 hover:text-slate-900 transition-colors">
                <i class="bi bi-arrow-left text-xl"></i>
            </a>
            <h1 class="text-2xl font-semibold text-slate-900 tracking-tight">Edit Client</h1>
        </div>
        <p class="text-slate-600 text-sm">Update client information and details</p>
    </div>
</div>

<!-- Edit Form -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden animate-slide-up">
    <form method="post" class="p-6">
        @Html.AntiForgeryToken()
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 px-5 py-3 rounded-xl mb-6 shadow-sm">
                <div class="flex items-center gap-2">
                    <i class="bi bi-exclamation-triangle-fill text-lg"></i>
                    <strong>@Model.ErrorMessage</strong>
                </div>
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="bg-green-50 border-l-4 border-green-500 text-green-700 px-5 py-3 rounded-xl mb-6 shadow-sm">
                <div class="flex items-center gap-2">
                    <i class="bi bi-check-circle-fill text-lg"></i>
                    <strong>@Model.SuccessMessage</strong>
                </div>
            </div>
        }

        <!-- Personal Information -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-person-fill text-primary-600"></i>
                Personal Information
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">First Name <span class="text-red-600">*</span></label>
                    <input type="text" asp-for="Client.FirstName" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" required />
                    <span asp-validation-for="Client.FirstName" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Last Name <span class="text-red-600">*</span></label>
                    <input type="text" asp-for="Client.LastName" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" required />
                    <span asp-validation-for="Client.LastName" class="text-red-500 text-xs"></span>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-telephone-fill text-primary-600"></i>
                Contact Information
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Phone <span class="text-red-600">*</span></label>
                    <input type="tel" asp-for="Client.Phone" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" required />
                    <span asp-validation-for="Client.Phone" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Email</label>
                    <input type="email" asp-for="Client.Email" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    <span asp-validation-for="Client.Email" class="text-red-500 text-xs"></span>
                </div>
            </div>
        </div>

        <!-- Address Information -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-geo-alt-fill text-primary-600"></i>
                Address Information
            </h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Address</label>
                    <input type="text" asp-for="Client.Address" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">City</label>
                        <input type="text" asp-for="Client.City" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">State</label>
                        <input type="text" asp-for="Client.State" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Postal Code</label>
                        <input type="text" asp-for="Client.PostalCode" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-info-circle-fill text-primary-600"></i>
                Additional Information
            </h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Notes</label>
                    <textarea asp-for="Client.Notes" rows="3" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors resize-none"></textarea>
                </div>
                <div class="flex items-center gap-4">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" asp-for="Client.IsVip" class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                        <span class="text-sm text-slate-900 font-medium">VIP Client</span>
                    </label>
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" asp-for="Client.IsActive" class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                        <span class="text-sm text-slate-900 font-medium">Active</span>
                    </label>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-end gap-3 pt-6 border-t border-slate-200">
            <a href="/Clients" class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-medium rounded-lg bg-white text-slate-700 border border-slate-200 hover:bg-slate-50 transition-colors">
                <i class="bi bi-x-lg"></i>
                Cancel
            </a>
            <button type="submit" class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors shadow-md hover:shadow-lg">
                <i class="bi bi-check-lg"></i>
                Save Changes
            </button>
        </div>
    </form>
</div>
