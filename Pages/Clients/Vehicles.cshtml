@page "/Clients/{id:guid}/Vehicles"
@model Gixat.Web.Pages.Clients.VehiclesModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = $"{Model.Client.FirstName} {Model.Client.LastName} - Vehicles";
}

<!-- Header -->
<div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-slate-600 mb-4">
        <a href="/Clients" class="hover:text-primary-600 transition-colors">Clients</a>
        <i class="bi bi-chevron-right text-xs"></i>
        <a href="/Clients/@Model.Client.Id" class="hover:text-primary-600 transition-colors">@Model.Client.FirstName @Model.Client.LastName</a>
        <i class="bi bi-chevron-right text-xs"></i>
        <span class="text-slate-900 font-medium">Vehicles</span>
    </div>
    
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-slate-900">@Model.Client.FirstName @Model.Client.LastName</h1>
            <p class="text-slate-600 mt-1">Manage vehicles for this client</p>
        </div>
        <div class="flex gap-3">
            <button onclick="document.getElementById('addVehicleModal').classList.remove('hidden')" 
                    class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                <i class="bi bi-plus-lg"></i>
                Add Vehicle
            </button>
        </div>
    </div>
</div>

<!-- Client Info Card -->
<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-full flex items-center justify-center">
                <i class="bi bi-person text-xl"></i>
            </div>
            <div>
                <div class="text-sm text-slate-600">Client Name</div>
                <div class="font-semibold text-slate-900">@Model.Client.FirstName @Model.Client.LastName</div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.Client.Email))
        {
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center">
                    <i class="bi bi-envelope text-xl"></i>
                </div>
                <div>
                    <div class="text-sm text-slate-600">Email</div>
                    <div class="font-semibold text-slate-900">@Model.Client.Email</div>
                </div>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Client.Phone))
        {
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-green-100 text-green-600 rounded-full flex items-center justify-center">
                    <i class="bi bi-phone text-xl"></i>
                </div>
                <div>
                    <div class="text-sm text-slate-600">Phone</div>
                    <div class="font-semibold text-slate-900">@Model.Client.Phone</div>
                </div>
            </div>
        }
    </div>
</div>

@if (Model.Vehicles.Any())
{
    <!-- Vehicles Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var vehicle in Model.Vehicles)
        {
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                        <h3 class="font-semibold text-slate-900 text-lg mb-1">
                            @vehicle.Year @vehicle.Make @vehicle.Model
                        </h3>
                        @if (!string.IsNullOrEmpty(vehicle.LicensePlate))
                        {
                            <p class="text-sm text-slate-600 flex items-center gap-1">
                                <i class="bi bi-credit-card-2-front"></i>
                                @vehicle.LicensePlate
                            </p>
                        }
                    </div>
                    @if (vehicle.IsPrimary)
                    {
                        <span class="bg-primary-100 text-primary-700 px-2.5 py-1 rounded-full text-xs font-semibold">
                            Primary
                        </span>
                    }
                </div>

                <div class="space-y-2 mb-4 text-sm">
                    @if (!string.IsNullOrEmpty(vehicle.Color))
                    {
                        <div class="flex items-center gap-2 text-slate-600">
                            <i class="bi bi-palette w-4"></i>
                            <span>@vehicle.Color</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(vehicle.Vin))
                    {
                        <div class="flex items-center gap-2 text-slate-600">
                            <i class="bi bi-upc w-4"></i>
                            <span class="font-mono text-xs">@vehicle.Vin</span>
                        </div>
                    }
                    @if (vehicle.Mileage.HasValue)
                    {
                        <div class="flex items-center gap-2 text-slate-600">
                            <i class="bi bi-speedometer2 w-4"></i>
                            <span>@vehicle.Mileage.Value.ToString("N0") km</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(vehicle.EngineType))
                    {
                        <div class="flex items-center gap-2 text-slate-600">
                            <i class="bi bi-gear w-4"></i>
                            <span>@vehicle.EngineType</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(vehicle.Transmission))
                    {
                        <div class="flex items-center gap-2 text-slate-600">
                            <i class="bi bi-arrow-left-right w-4"></i>
                            <span>@vehicle.Transmission</span>
                        </div>
                    }
                </div>

                <!-- Actions -->
                <div class="pt-4 border-t border-slate-200 flex gap-2">
                    <button type="button" onclick="openEditModal('@vehicle.Id', '@vehicle.Make', '@vehicle.Model', '@vehicle.Year', '@vehicle.LicensePlate', '@vehicle.Vin', '@vehicle.Color', '@vehicle.Mileage', '@vehicle.EngineType', '@vehicle.Transmission', '@vehicle.IsPrimary')" 
                            class="flex-1 px-3 py-2 text-sm bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition-colors">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </button>
                    @if (!vehicle.IsPrimary)
                    {
                        <form method="post" asp-page-handler="SetPrimary" asp-route-id="@Model.Client.Id" asp-route-vehicleId="@vehicle.Id" class="flex-1">
                            <button type="submit" class="w-full px-3 py-2 text-sm bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors">
                                <i class="bi bi-star"></i>
                                Set Primary
                            </button>
                        </form>
                    }
                    <form method="post" asp-page-handler="DeleteVehicle" asp-route-id="@Model.Client.Id" asp-route-vehicleId="@vehicle.Id" 
                          onsubmit="return confirm('Are you sure you want to delete this vehicle?')" class="flex-1">
                        <button type="submit" class="w-full px-3 py-2 text-sm bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition-colors">
                            <i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-12 text-center">
        <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="bi bi-car-front text-4xl text-slate-400"></i>
        </div>
        <h3 class="text-xl font-semibold text-slate-900 mb-2">No Vehicles Yet</h3>
        <p class="text-slate-600 mb-6 max-w-sm mx-auto">This client doesn't have any vehicles registered. Add their first vehicle to get started.</p>
        <button onclick="document.getElementById('addVehicleModal').classList.remove('hidden')" 
                class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
            <i class="bi bi-plus-lg"></i>
            Add First Vehicle
        </button>
    </div>
}

<!-- Add Vehicle Modal -->
<div id="addVehicleModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="sticky top-0 bg-white border-b border-slate-200 px-6 py-4 flex items-center justify-between">
            <h2 class="text-xl font-semibold text-slate-900">Add New Vehicle</h2>
            <button onclick="document.getElementById('addVehicleModal').classList.add('hidden')" 
                    class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-slate-100 transition-colors">
                <i class="bi bi-x-lg text-slate-600"></i>
            </button>
        </div>
        
        <form method="post" asp-page-handler="AddVehicle" asp-route-id="@Model.Client.Id" class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">
                        Make <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="NewVehicle.Make" type="text" required 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., Toyota, BMW, Ford" />
                </div>
                
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">
                        Model <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="NewVehicle.Model" type="text" required 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., Camry, X5, F-150" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Year</label>
                    <input asp-for="NewVehicle.Year" type="number" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., 2024" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">License Plate</label>
                    <input asp-for="NewVehicle.LicensePlate" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., ABC-1234" />
                </div>
                
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">VIN</label>
                    <input asp-for="NewVehicle.Vin" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="17-character VIN" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Color</label>
                    <input asp-for="NewVehicle.Color" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., Silver, Black" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Mileage (km)</label>
                    <input asp-for="NewVehicle.Mileage" type="number" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., 50000" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Engine Type</label>
                    <input asp-for="NewVehicle.EngineType" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., V6, 4-Cylinder" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Transmission</label>
                    <select asp-for="NewVehicle.Transmission" 
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Select...</option>
                        <option value="Automatic">Automatic</option>
                        <option value="Manual">Manual</option>
                        <option value="CVT">CVT</option>
                        <option value="Semi-Automatic">Semi-Automatic</option>
                    </select>
                </div>
                
                <div class="md:col-span-2">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input asp-for="NewVehicle.IsPrimary" type="checkbox" 
                               class="w-5 h-5 text-primary-600 border-slate-300 rounded focus:ring-primary-500" />
                        <span class="text-sm font-medium text-slate-700">Set as primary vehicle</span>
                    </label>
                </div>
            </div>
            
            <div class="flex gap-3 mt-6 pt-6 border-t border-slate-200">
                <button type="button" onclick="document.getElementById('addVehicleModal').classList.add('hidden')" 
                        class="flex-1 px-4 py-2.5 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors">
                    Cancel
                </button>
                <button type="submit" 
                        class="flex-1 px-4 py-2.5 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                    <i class="bi bi-plus-lg mr-2"></i>
                    Add Vehicle
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Vehicle Modal -->
<div id="editVehicleModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="sticky top-0 bg-white border-b border-slate-200 px-6 py-4 flex items-center justify-between">
            <h2 class="text-xl font-semibold text-slate-900">Edit Vehicle</h2>
            <button onclick="document.getElementById('editVehicleModal').classList.add('hidden')" 
                    class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-slate-100 transition-colors">
                <i class="bi bi-x-lg text-slate-600"></i>
            </button>
        </div>
        
        <form method="post" asp-page-handler="EditVehicle" asp-route-id="@Model.Client.Id" class="p-6">
            <input type="hidden" asp-for="EditVehicle.Id" id="edit-id" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">
                        Make <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="EditVehicle.Make" id="edit-make" type="text" required 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., Toyota, BMW, Ford" />
                </div>
                
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">
                        Model <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="EditVehicle.Model" id="edit-model" type="text" required 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., Camry, X5, F-150" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Year</label>
                    <input asp-for="EditVehicle.Year" id="edit-year" type="number" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., 2024" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">License Plate</label>
                    <input asp-for="EditVehicle.LicensePlate" id="edit-licenseplate" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., ABC-1234" />
                </div>
                
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">VIN</label>
                    <input asp-for="EditVehicle.Vin" id="edit-vin" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="17-character VIN" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Color</label>
                    <input asp-for="EditVehicle.Color" id="edit-color" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., Silver, Black" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Mileage (km)</label>
                    <input asp-for="EditVehicle.Mileage" id="edit-mileage" type="number" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., 50000" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Engine Type</label>
                    <input asp-for="EditVehicle.EngineType" id="edit-enginetype" type="text" 
                           class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" 
                           placeholder="e.g., V6, 4-Cylinder" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Transmission</label>
                    <select asp-for="EditVehicle.Transmission" id="edit-transmission" 
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Select...</option>
                        <option value="Automatic">Automatic</option>
                        <option value="Manual">Manual</option>
                        <option value="CVT">CVT</option>
                        <option value="Semi-Automatic">Semi-Automatic</option>
                    </select>
                </div>
                
                <div class="md:col-span-2">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input asp-for="EditVehicle.IsPrimary" id="edit-isprimary" type="checkbox" 
                               class="w-5 h-5 text-primary-600 border-slate-300 rounded focus:ring-primary-500" />
                        <span class="text-sm font-medium text-slate-700">Set as primary vehicle</span>
                    </label>
                </div>
            </div>
            
            <div class="flex gap-3 mt-6 pt-6 border-t border-slate-200">
                <button type="button" onclick="document.getElementById('editVehicleModal').classList.add('hidden')" 
                        class="flex-1 px-4 py-2.5 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors">
                    Cancel
                </button>
                <button type="submit" 
                        class="flex-1 px-4 py-2.5 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                    <i class="bi bi-check-lg mr-2"></i>
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function openEditModal(id, make, model, year, licensePlate, vin, color, mileage, engineType, transmission, isPrimary) {
    document.getElementById('edit-id').value = id;
    document.getElementById('edit-make').value = make || '';
    document.getElementById('edit-model').value = model || '';
    document.getElementById('edit-year').value = year || '';
    document.getElementById('edit-licenseplate').value = licensePlate || '';
    document.getElementById('edit-vin').value = vin || '';
    document.getElementById('edit-color').value = color || '';
    document.getElementById('edit-mileage').value = mileage || '';
    document.getElementById('edit-enginetype').value = engineType || '';
    document.getElementById('edit-transmission').value = transmission || '';
    document.getElementById('edit-isprimary').checked = isPrimary === 'True';
    document.getElementById('editVehicleModal').classList.remove('hidden');
}
</script>
