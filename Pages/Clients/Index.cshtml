@page "/Clients"
@model Gixat.Web.Pages.Clients.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Clients";
}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6 animate-fade-in">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900 tracking-tight">Clients</h1>
        <p class="text-slate-600 text-sm mt-1">Manage your garage clients and their vehicles</p>
    </div>
    <button onclick="openModal()" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors">
        <i class="bi bi-plus-lg"></i>
        Add Client
    </button>
</div>

<!-- Search & Filter -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-4 mb-6 animate-slide-up">
    <form method="get" class="flex flex-wrap gap-3 items-center">
        <div class="flex-1 min-w-[200px] max-w-md relative">
            <i class="bi bi-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-600 text-sm"></i>
            <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search clients by name, phone, email..." 
                   class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors pl-9" />
        </div>
        <button type="submit" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg bg-white text-slate-700 border border-slate-200 hover:bg-slate-50 transition-colors">
            <i class="bi bi-search"></i>
            Search
        </button>
    </form>
</div>

<!-- Clients Table -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden animate-slide-up" style="animation-delay: 0.1s;">
    @if (Model.Clients.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr>
                        <th>Client</th>
                        <th>Phone</th>
                        <th>Vehicles</th>
                        <th>Visits</th>
                        <th>Total Spent</th>
                        <th>Status</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr class="group">
                            <td>
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-600 to-purple-600 flex items-center justify-center text-white font-medium text-sm flex-shrink-0">
                                        @client.FirstName[0]@client.LastName[0]
                                    </div>
                                    <div>
                                        <div class="flex items-center gap-2">
                                            <span class="font-medium text-slate-900">@client.FullName</span>
                                            @if (client.IsVip)
                                            {
                                                <span class="inline-flex items-center gap-1 bg-gradient-to-r from-amber-400 to-orange-500 text-white text-[10px] font-semibold px-2 py-0.5 rounded-full">
                                                    ‚≠ê VIP
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(client.Email))
                                        {
                                            <p class="text-xs text-slate-600">@client.Email</p>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-slate-900">@client.Phone</span>
                            </td>
                            <td>
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-slate-100 text-slate-700">@client.Vehicles.Count vehicles</span>
                            </td>
                            <td>
                                <span class="text-slate-900">@client.TotalVisits</span>
                            </td>
                            <td>
                                <span class="font-medium text-slate-900">$@client.TotalSpent.ToString("N0")</span>
                            </td>
                            <td>
                                <span class="@(client.IsActive ? "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700" : "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-slate-100 text-slate-700")">
                                    <span class="w-1.5 h-1.5 rounded-full bg-current"></span>
                                    @(client.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="text-right">
                                <div class="flex justify-end gap-1 opacity-60 group-hover:opacity-100 transition-opacity">
                                    <a href="/Clients/@client.Id" class="w-8 h-8 flex items-center justify-center rounded-lg text-primary-600 hover:bg-primary-100 transition-colors" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button class="w-8 h-8 flex items-center justify-center rounded-lg text-slate-600 hover:bg-slate-100 hover:text-slate-900 transition-colors" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="w-8 h-8 flex items-center justify-center rounded-lg text-slate-600 hover:bg-slate-100 hover:text-slate-900 transition-colors" title="More">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-12 text-center">
            <div class="w-20 h-20 rounded-2xl bg-gray-100 flex items-center justify-center mx-auto mb-5">
                <i class="bi bi-people text-3xl text-slate-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-2">No clients yet</h3>
            <p class="text-slate-600 mb-6 max-w-sm mx-auto">Start by adding your first client to manage their vehicles and services.</p>
            <button onclick="openModal()" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors">
                <i class="bi bi-plus-lg"></i>
                Add Your First Client
            </button>
        </div>
    }
</div>

<!-- Add Client Modal -->
<div id="addClientModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4 hidden">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
        <div class="border-b border-gray-100 px-6 py-5 flex justify-between items-center">
            <h2 class="text-xl font-semibold text-slate-900">Add New Client</h2>
            <button onclick="closeModal()" class="w-8 h-8 flex items-center justify-center rounded-lg text-slate-600 hover:bg-slate-100 hover:text-slate-900 transition-colors">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <form method="post" asp-page-handler="AddClient">
            @Html.AntiForgeryToken()
            <div class="p-6 max-h-[60vh] overflow-y-auto">
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">First Name <span class="text-red-600">*</span></label>
                        <input type="text" name="FirstName" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Last Name <span class="text-red-600">*</span></label>
                        <input type="text" name="LastName" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" required />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Phone <span class="text-red-600">*</span></label>
                        <input type="tel" id="phoneInput" name="Phone" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Email</label>
                        <input type="email" name="Email" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Address</label>
                    <input type="text" name="Address" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                </div>
                <div class="grid grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">City</label>
                        <input type="text" name="City" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">State</label>
                        <input type="text" name="State" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Postal Code</label>
                        <input type="text" name="PostalCode" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" />
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Notes</label>
                    <textarea name="Notes" rows="2" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors resize-none"></textarea>
                </div>
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="IsVip" class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                    <span class="text-sm text-slate-900">Mark as VIP client</span>
                </label>
            </div>
            <div class="border-t border-gray-100 px-6 py-4 flex justify-end gap-3 bg-gray-50">
                <button type="button" onclick="closeModal()" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg bg-white text-slate-700 border border-slate-200 hover:bg-slate-50 transition-colors">Cancel</button>
                <button type="submit" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors">
                    <i class="bi bi-check-lg"></i>
                    Add Client
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    // Initialize International Phone Input
    const phoneInput = document.querySelector("#phoneInput");
    const iti = window.intlTelInput(phoneInput, {
        initialCountry: "ae", // Default to UAE
        preferredCountries: ["ae", "sa", "kw", "qa", "om", "bh"],
        utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@23.0.11/build/js/utils.js",
        formatOnDisplay: true,
        autoPlaceholder: "aggressive",
        separateDialCode: true,
        customPlaceholder: function(selectedCountryPlaceholder, selectedCountryData) {
            return "e.g. " + selectedCountryPlaceholder;
        }
    });

    // Custom styling for intl-tel-input to match Apple design
    const style = document.createElement('style');
    style.textContent = `
        .iti {
            display: block;
            width: 100%;
        }
        .iti__flag-container {
            padding: 0 12px;
            background: white;
        }
        .iti__selected-flag {
            padding: 0 12px 0 0;
            border-right: 1px solid #e5e5e7;
        }
        .iti__country-list {
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12), 0 4px 8px rgba(0, 0, 0, 0.06);
            border: 1px solid #e5e5e7;
        }
        .iti__country:hover {
            background-color: #f5f5f7;
        }
        .iti__country.iti__highlight {
            background-color: #007AFF;
            color: white;
        }
    `;
    document.head.appendChild(style);

    // Validate phone number on form submit
    document.querySelector('form').addEventListener('submit', function(e) {
        if (!iti.isValidNumber()) {
            e.preventDefault();
            alert('Please enter a valid phone number');
            phoneInput.focus();
            return false;
        }
        
        // Set the full international number before submitting
        phoneInput.value = iti.getNumber();
    });

    function openModal() {
        const modal = document.getElementById('addClientModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }
    
    function closeModal() {
        const modal = document.getElementById('addClientModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
    }
    
    document.getElementById('addClientModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });
    
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });
</script>
}
