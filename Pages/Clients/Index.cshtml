@page "/Clients"
@model Gixat.Web.Pages.Clients.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Clients";
}

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6 animate-fade-in">
    <div>
        <h1 class="text-2xl font-semibold text-apple-dark tracking-tight">Clients</h1>
        <p class="text-apple-gray text-sm mt-1">Manage your garage clients and their vehicles</p>
    </div>
    <button onclick="openModal()" class="btn-apple-primary">
        <i class="bi bi-plus-lg"></i>
        Add Client
    </button>
</div>

<!-- Search & Filter -->
<div class="card-apple p-4 mb-6 animate-slide-up">
    <form method="get" class="flex flex-wrap gap-3 items-center">
        <div class="flex-1 min-w-[200px] max-w-md relative">
            <i class="bi bi-search absolute left-3 top-1/2 -translate-y-1/2 text-apple-gray text-sm"></i>
            <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search clients by name, phone, email..." 
                   class="input-apple pl-9" />
        </div>
        <button type="submit" class="btn-apple-secondary">
            <i class="bi bi-search"></i>
            Search
        </button>
    </form>
</div>

<!-- Clients Table -->
<div class="card-apple overflow-hidden animate-slide-up" style="animation-delay: 0.1s;">
    @if (Model.Clients.Any())
    {
        <div class="overflow-x-auto">
            <table class="table-apple">
                <thead>
                    <tr>
                        <th>Client</th>
                        <th>Phone</th>
                        <th>Vehicles</th>
                        <th>Visits</th>
                        <th>Total Spent</th>
                        <th>Status</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr class="group">
                            <td>
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-apple-blue to-apple-purple flex items-center justify-center text-white font-medium text-sm flex-shrink-0">
                                        @client.FirstName[0]@client.LastName[0]
                                    </div>
                                    <div>
                                        <div class="flex items-center gap-2">
                                            <span class="font-medium text-apple-dark">@client.FullName</span>
                                            @if (client.IsVip)
                                            {
                                                <span class="badge-apple bg-gradient-to-r from-amber-400 to-orange-500 text-white text-xxs px-2 py-0.5">
                                                    ‚≠ê VIP
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(client.Email))
                                        {
                                            <p class="text-xs text-apple-gray">@client.Email</p>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-apple-dark">@client.Phone</span>
                            </td>
                            <td>
                                <span class="badge-apple-gray">@client.Vehicles.Count vehicles</span>
                            </td>
                            <td>
                                <span class="text-apple-dark">@client.TotalVisits</span>
                            </td>
                            <td>
                                <span class="font-medium text-apple-dark">$@client.TotalSpent.ToString("N0")</span>
                            </td>
                            <td>
                                <span class="@(client.IsActive ? "badge-apple-green" : "badge-apple-gray")">
                                    <span class="w-1.5 h-1.5 rounded-full bg-current"></span>
                                    @(client.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="text-right">
                                <div class="flex justify-end gap-1 opacity-60 group-hover:opacity-100 transition-opacity">
                                    <a href="/Clients/@client.Id" class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-blue hover:bg-apple-blue/10 transition-colors" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-colors" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-colors" title="More">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-12 text-center">
            <div class="w-20 h-20 rounded-2xl bg-gray-100 flex items-center justify-center mx-auto mb-5">
                <i class="bi bi-people text-3xl text-apple-gray"></i>
            </div>
            <h3 class="text-xl font-semibold text-apple-dark mb-2">No clients yet</h3>
            <p class="text-apple-gray mb-6 max-w-sm mx-auto">Start by adding your first client to manage their vehicles and services.</p>
            <button onclick="openModal()" class="btn-apple-primary">
                <i class="bi bi-plus-lg"></i>
                Add Your First Client
            </button>
        </div>
    }
</div>

<!-- Add Client Modal -->
<div id="addClientModal" class="modal-apple-overlay hidden">
    <div class="modal-apple">
        <div class="border-b border-gray-100 px-6 py-5 flex justify-between items-center">
            <h2 class="text-xl font-semibold text-apple-dark">Add New Client</h2>
            <button onclick="closeModal()" class="w-8 h-8 flex items-center justify-center rounded-lg text-apple-gray hover:bg-gray-100 hover:text-apple-dark transition-colors">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <form method="post" asp-page-handler="AddClient">
            @Html.AntiForgeryToken()
            <div class="p-6 max-h-[60vh] overflow-y-auto">
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">First Name <span class="text-apple-red">*</span></label>
                        <input type="text" name="FirstName" class="input-apple-outlined" required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Last Name <span class="text-apple-red">*</span></label>
                        <input type="text" name="LastName" class="input-apple-outlined" required />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Phone <span class="text-apple-red">*</span></label>
                        <input type="tel" name="Phone" class="input-apple-outlined" required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Email</label>
                        <input type="email" name="Email" class="input-apple-outlined" />
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-apple-dark mb-1.5">Address</label>
                    <input type="text" name="Address" class="input-apple-outlined" />
                </div>
                <div class="grid grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">City</label>
                        <input type="text" name="City" class="input-apple-outlined" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">State</label>
                        <input type="text" name="State" class="input-apple-outlined" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-apple-dark mb-1.5">Postal Code</label>
                        <input type="text" name="PostalCode" class="input-apple-outlined" />
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-apple-dark mb-1.5">Notes</label>
                    <textarea name="Notes" rows="2" class="input-apple-outlined resize-none"></textarea>
                </div>
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="IsVip" class="w-4 h-4 text-apple-blue border-gray-300 rounded focus:ring-apple-blue" />
                    <span class="text-sm text-apple-dark">Mark as VIP client</span>
                </label>
            </div>
            <div class="border-t border-gray-100 px-6 py-4 flex justify-end gap-3 bg-gray-50">
                <button type="button" onclick="closeModal()" class="btn-apple-secondary">Cancel</button>
                <button type="submit" class="btn-apple-primary">
                    <i class="bi bi-check-lg"></i>
                    Add Client
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    function openModal() {
        const modal = document.getElementById('addClientModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }
    
    function closeModal() {
        const modal = document.getElementById('addClientModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
    }
    
    document.getElementById('addClientModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });
    
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });
</script>
}
