@page "/Clients/{id:guid}"
@model Gixat.Web.Pages.Clients.DetailsModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = $"{Model.Client.FirstName} {Model.Client.LastName}";
}

<!-- Back Navigation -->
<a href="/Clients" class="inline-flex items-center gap-2 text-slate-600 hover:text-primary-600 no-underline mb-6 text-sm transition-colors animate-fade-in">
    <i class="bi bi-arrow-left"></i>
    Back to Clients
</a>

<!-- Client Header Card -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden mb-8 animate-slide-up">
    <div class="bg-gradient-to-r from-primary-600 to-purple-600 p-8 text-white">
        <div class="flex flex-col lg:flex-row lg:items-center gap-6">
            <div class="flex items-center gap-5">
                <div class="w-20 h-20 rounded-2xl bg-white/20 flex items-center justify-center text-3xl font-semibold border-2 border-white/30 flex-shrink-0 backdrop-blur">
                    @Model.Client.FirstName[0]@Model.Client.LastName[0]
                </div>
                <div>
                    <div class="flex items-center gap-3 mb-2 flex-wrap">
                        <h1 class="text-2xl font-semibold tracking-tight">@Model.Client.FirstName @Model.Client.LastName</h1>
                        @if (Model.Client.IsVip)
                        {
                            <span class="bg-gradient-to-r from-amber-400 to-orange-500 px-3 py-1 rounded-full text-xs font-semibold flex items-center gap-1">
                                <i class="bi bi-star-fill"></i>VIP
                            </span>
                        }
                    </div>
                    <div class="flex gap-5 flex-wrap opacity-90 text-sm">
                        @if (!string.IsNullOrEmpty(Model.Client.Phone))
                        {
                            <span class="flex items-center gap-2"><i class="bi bi-telephone"></i>@Model.Client.Phone</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.Client.Email))
                        {
                            <span class="flex items-center gap-2"><i class="bi bi-envelope"></i>@Model.Client.Email</span>
                        }
                    </div>
                </div>
            </div>
            <div class="lg:ml-auto">
                <div class="flex gap-4 flex-wrap">
                    <div class="bg-white/15 backdrop-blur rounded-2xl p-4 text-center min-w-[100px]">
                        <div class="text-2xl font-bold">@Model.Client.TotalVisits</div>
                        <div class="text-[11px] uppercase tracking-wider opacity-80">Visits</div>
                    </div>
                    <div class="bg-white/15 backdrop-blur rounded-2xl p-4 text-center min-w-[100px]">
                        <div class="text-2xl font-bold">$@Model.Client.TotalSpent.ToString("N0")</div>
                        <div class="text-[11px] uppercase tracking-wider opacity-80">Spent</div>
                    </div>
                    <div class="bg-white/15 backdrop-blur rounded-2xl p-4 text-center min-w-[100px]">
                        <div class="text-2xl font-bold">@Model.Vehicles.Count()</div>
                        <div class="text-[11px] uppercase tracking-wider opacity-80">Vehicles</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Vehicles Section -->
<div class="flex justify-between items-center mb-5 animate-slide-up" style="animation-delay: 0.1s;">
    <h3 class="text-lg font-semibold text-slate-900 flex items-center gap-2">
        <i class="bi bi-car-front text-primary-600"></i>Vehicles
    </h3>
    <button onclick="openModal()" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg text-slate-700 hover:bg-slate-100 transition-colors text-sm">
        <i class="bi bi-plus-lg"></i>
        Add Vehicle
    </button>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5 animate-slide-up" style="animation-delay: 0.15s;">
    @foreach (var vehicle in Model.Vehicles)
    {
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:-translate-y-0.5 transition-all group relative">
            @if (vehicle.IsPrimary)
            {
                <span class="absolute top-4 right-4 inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700 text-xs">Primary</span>
            }
            <div class="flex gap-4 mb-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-600 to-purple-600 flex items-center justify-center text-white text-lg flex-shrink-0">
                    <i class="bi bi-car-front-fill"></i>
                </div>
                <div class="overflow-hidden min-w-0">
                    <h5 class="font-semibold text-slate-900 truncate">@vehicle.Year @vehicle.Make @vehicle.Model</h5>
                    <span class="text-slate-600 text-sm flex items-center gap-1">
                        <i class="bi bi-card-text"></i>@vehicle.LicensePlate
                    </span>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-3 mb-4">
                @if (!string.IsNullOrEmpty(vehicle.Color))
                {
                    <div>
                        <span class="block text-[10px] text-slate-600 uppercase tracking-wide mb-0.5">Color</span>
                        <span class="text-sm font-medium text-slate-900">@vehicle.Color</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(vehicle.EngineType))
                {
                    <div>
                        <span class="block text-[10px] text-slate-600 uppercase tracking-wide mb-0.5">Engine</span>
                        <span class="text-sm font-medium text-slate-900">@vehicle.EngineType</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(vehicle.Transmission))
                {
                    <div>
                        <span class="block text-[10px] text-slate-600 uppercase tracking-wide mb-0.5">Transmission</span>
                        <span class="text-sm font-medium text-slate-900">@vehicle.Transmission</span>
                    </div>
                }
                @if (vehicle.Mileage.HasValue)
                {
                    <div>
                        <span class="block text-[10px] text-slate-600 uppercase tracking-wide mb-0.5">Mileage</span>
                        <span class="text-sm font-medium text-slate-900">@vehicle.Mileage.Value.ToString("N0") mi</span>
                    </div>
                }
            </div>
            @if (!string.IsNullOrEmpty(vehicle.Vin))
            {
                <div class="mb-4">
                    <span class="block text-[10px] text-slate-600 uppercase tracking-wide mb-0.5">VIN</span>
                    <div class="text-xs font-medium text-slate-900 font-mono truncate">@vehicle.Vin</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(vehicle.Notes))
            {
                <div class="bg-gray-50 rounded-xl px-3 py-2 mb-4 text-xs text-slate-600 flex items-start gap-2">
                    <i class="bi bi-sticky mt-0.5"></i>
                    <span>@vehicle.Notes</span>
                </div>
            }
            <div class="flex justify-end gap-2 mt-auto opacity-60 group-hover:opacity-100 transition-opacity">
                <form method="post" asp-page-handler="CreateSession" asp-route-id="@Model.Client.Id" asp-route-vehicleId="@vehicle.Id" class="inline">
                    <button type="submit" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors text-sm py-2 px-3" title="Create new session for this vehicle">
                        <i class="bi bi-plus-circle"></i>New Session
                    </button>
                </form>
                <form method="post" asp-page-handler="DeleteVehicle" asp-route-id="@Model.Client.Id" asp-route-vehicleId="@vehicle.Id" class="inline">
                    <button type="submit" class="w-9 h-9 flex items-center justify-center border border-red-600/30 text-red-600 rounded-xl hover:bg-red-600/10 transition-colors" onclick="return confirm('Are you sure you want to delete this vehicle?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            </div>
        </div>
    }
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 border-2 border-dashed border-gray-200 p-8 flex flex-col items-center justify-center cursor-pointer hover:border-primary-600 hover:bg-primary-100 transition-all min-h-[200px]" onclick="openModal()">
        <div class="w-14 h-14 rounded-full bg-gray-100 flex items-center justify-center text-slate-600 text-xl mb-4">
            <i class="bi bi-plus-lg"></i>
        </div>
        <span class="text-slate-600 font-medium">Add New Vehicle</span>
    </div>
</div>

<!-- Sessions Section -->
<div class="flex justify-between items-center mb-5 mt-10 animate-slide-up" style="animation-delay: 0.2s;">
    <h3 class="text-lg font-semibold text-slate-900 flex items-center gap-2">
        <i class="bi bi-clock-history text-primary-600"></i>Service History
    </h3>
    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-slate-100 text-slate-700">@Model.Sessions.Count() session(s)</span>
</div>

@if (Model.Sessions.Any())
{
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden animate-slide-up" style="animation-delay: 0.25s;">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gradient-to-r from-slate-50 to-slate-100/50 border-b border-slate-200">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Session</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Vehicle</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Check-In</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Duration</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Progress</th>
                        <th class="px-6 py-4 text-right text-xs font-semibold text-slate-700 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var session in Model.Sessions.OrderByDescending(s => s.CheckInAt))
                    {
                        var statusBadge = session.Status switch
                        {
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.CheckedIn => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-primary-100 text-primary-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.CustomerRequest => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-indigo-100 text-indigo-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Inspection => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-cyan-100 text-cyan-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.TestDrive => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-orange-100 text-orange-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.AwaitingApproval => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.InProgress => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-orange-100 text-orange-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Completed => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.ReadyForPickup => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-cyan-100 text-cyan-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Closed => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-slate-100 text-slate-700",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Cancelled => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-red-100 text-red-700",
                            _ => "inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full bg-slate-100 text-slate-700"
                        };
                        var statusIcon = session.Status switch
                        {
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.CheckedIn => "bi-box-arrow-in-right",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.CustomerRequest => "bi-chat-left-text",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Inspection => "bi-search",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.TestDrive => "bi-speedometer2",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.AwaitingApproval => "bi-hourglass-split",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.InProgress => "bi-wrench-adjustable",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Completed => "bi-check-all",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.ReadyForPickup => "bi-car-front",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Closed => "bi-check-circle",
                            Gixat.Web.Modules.Sessions.Enums.SessionStatus.Cancelled => "bi-x-circle",
                            _ => "bi-question-circle"
                        };
                        var statusText = session.Status.ToString()
                            .Replace("InProgress", "In Progress")
                            .Replace("AwaitingApproval", "Awaiting Approval")
                            .Replace("ReadyForPickup", "Ready for Pickup");

                        var durationEnd = session.CheckOutAt ?? DateTime.Now;
                        var duration = (durationEnd - session.CheckInAt).TotalDays;
                        var durationText = duration < 1 ? "< 1 day" : duration < 2 ? "1 day" : $"{Math.Floor(duration)} days";
                        var durationClass = duration < 1 ? "text-green-700 bg-green-50" : duration < 7 ? "text-orange-700 bg-orange-50" : "text-red-700 bg-red-50";

                        <tr class="group hover:bg-slate-50/50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="/Sessions/Details/@session.Id" class="font-semibold text-primary-600 hover:text-primary-700 no-underline transition-colors">
                                    @session.SessionNumber
                                </a>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary-50 to-primary-100 flex items-center justify-center flex-shrink-0">
                                        <i class="bi bi-car-front text-primary-600 text-lg"></i>
                                    </div>
                                    <div>
                                        <div class="text-sm font-medium text-slate-900">@session.VehicleDisplayName</div>
                                        @if (!string.IsNullOrEmpty(session.VehicleLicensePlate))
                                        {
                                            <div class="inline-flex items-center gap-1 mt-1 px-2 py-0.5 text-xs font-medium rounded bg-slate-100 text-slate-700">
                                                <i class="bi bi-tag text-[10px]"></i>
                                                @session.VehicleLicensePlate
                                            </div>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@statusBadge">
                                    <i class="bi @statusIcon"></i>
                                    @statusText
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-slate-900">@session.CheckInAt.ToString("MMM dd, yyyy")</div>
                                <div class="text-xs text-slate-600">@session.CheckInAt.ToString("hh:mm tt")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full @durationClass">
                                    <i class="bi bi-clock"></i>
                                    @durationText
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex gap-1.5">
                                    <span class="w-8 h-8 rounded-lg flex items-center justify-center text-xs @(session.HasCustomerRequest ? "bg-gradient-to-br from-green-50 to-green-100 text-green-700 ring-1 ring-green-200" : "bg-gray-50 text-gray-400")" title="Customer Request">
                                        <i class="bi bi-chat-left-text"></i>
                                    </span>
                                    <span class="w-8 h-8 rounded-lg flex items-center justify-center text-xs @(session.HasInspection ? "bg-gradient-to-br from-green-50 to-green-100 text-green-700 ring-1 ring-green-200" : "bg-gray-50 text-gray-400")" title="Inspection">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <span class="w-8 h-8 rounded-lg flex items-center justify-center text-xs @(session.HasTestDrive ? "bg-gradient-to-br from-green-50 to-green-100 text-green-700 ring-1 ring-green-200" : "bg-gray-50 text-gray-400")" title="Test Drive">
                                        <i class="bi bi-speedometer2"></i>
                                    </span>
                                    <span class="w-8 h-8 rounded-lg flex items-center justify-center text-xs @(session.HasJobCard ? "bg-gradient-to-br from-green-50 to-green-100 text-green-700 ring-1 ring-green-200" : "bg-gray-50 text-gray-400")" title="Job Card">
                                        <i class="bi bi-card-checklist"></i>
                                    </span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <a href="/Sessions/Details/@session.Id" class="inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-primary-600 to-primary-700 text-white hover:from-primary-700 hover:to-primary-800 shadow-sm hover:shadow transition-all">
                                    <i class="bi bi-eye"></i>
                                    <span>View Details</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-12 text-center animate-slide-up" style="animation-delay: 0.25s;">
        <div class="w-16 h-16 rounded-2xl bg-gray-100 flex items-center justify-center mx-auto mb-4">
            <i class="bi bi-clock-history text-2xl text-slate-600"></i>
        </div>
        <h4 class="text-lg font-semibold text-slate-900 mb-2">No Service History</h4>
        <p class="text-slate-600 text-sm mb-4">This client hasn't had any service sessions yet.</p>
        @if (Model.Vehicles.Any())
        {
            <p class="text-slate-600 text-xs">Click "New Session" on a vehicle above to create the first session.</p>
        }
    </div>
}

<!-- Add Vehicle Modal -->
<div id="addVehicleModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4 hidden">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden max-w-2xl">
        <div class="border-b border-gray-100 px-6 py-5 flex justify-between items-center">
            <h5 class="text-xl font-semibold text-slate-900 flex items-center gap-2">
                <i class="bi bi-car-front-fill text-primary-600"></i>Add New Vehicle
            </h5>
            <button onclick="closeModal()" class="w-8 h-8 flex items-center justify-center rounded-lg text-slate-600 hover:bg-slate-100 hover:text-slate-900 transition-colors">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <form method="post" asp-page-handler="AddVehicle" asp-route-id="@Model.Client.Id">
            <div class="p-6 max-h-[60vh] overflow-y-auto">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Make <span class="text-red-600">*</span></label>
                        <input type="text" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" asp-for="NewVehicle.Make" placeholder="e.g., Toyota" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Model <span class="text-red-600">*</span></label>
                        <input type="text" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" asp-for="NewVehicle.Model" placeholder="e.g., Camry" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Year</label>
                        <input type="number" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" asp-for="NewVehicle.Year" placeholder="e.g., 2023" min="1900" max="2030">
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">License Plate <span class="text-red-600">*</span></label>
                        <input type="text" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" asp-for="NewVehicle.LicensePlate" placeholder="e.g., ABC-1234" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Color</label>
                        <input type="text" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" asp-for="NewVehicle.Color" placeholder="e.g., Silver">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">VIN (Vehicle Identification Number)</label>
                    <input type="text" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" asp-for="NewVehicle.Vin" placeholder="e.g., 1HGBH41JXMN109186" maxlength="17">
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Engine Type</label>
                        <select class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors bg-white" asp-for="NewVehicle.EngineType">
                            <option value="">Select...</option>
                            <option value="Gasoline">Gasoline</option>
                            <option value="Diesel">Diesel</option>
                            <option value="Hybrid">Hybrid</option>
                            <option value="Electric">Electric</option>
                            <option value="Plug-in Hybrid">Plug-in Hybrid</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Transmission</label>
                        <select class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors bg-white" asp-for="NewVehicle.Transmission">
                            <option value="">Select...</option>
                            <option value="Automatic">Automatic</option>
                            <option value="Manual">Manual</option>
                            <option value="CVT">CVT</option>
                            <option value="Semi-Automatic">Semi-Automatic</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-900 mb-1.5">Mileage</label>
                        <input type="number" class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors" asp-for="NewVehicle.Mileage" placeholder="e.g., 50000" min="0">
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-900 mb-1.5">Notes</label>
                    <textarea class="w-full px-4 py-2.5 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-colors resize-none" asp-for="NewVehicle.Notes" rows="2" placeholder="Any additional notes about the vehicle..."></textarea>
                </div>
            </div>
            <div class="border-t border-gray-100 px-6 py-4 flex justify-end gap-3 bg-gray-50">
                <button type="button" onclick="closeModal()" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg bg-white text-slate-700 border border-slate-200 hover:bg-slate-50 transition-colors">Cancel</button>
                <button type="submit" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 text-sm font-semibold rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors">
                    <i class="bi bi-plus-lg"></i>Add Vehicle
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    function openModal() {
        const modal = document.getElementById('addVehicleModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }
    
    function closeModal() {
        const modal = document.getElementById('addVehicleModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
    }
    
    document.getElementById('addVehicleModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });
    
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });
</script>
}
