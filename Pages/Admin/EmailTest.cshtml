@page
@model Gixat.Web.Pages.Admin.EmailTestModel
@{
    ViewData["Title"] = "Email Test";
    Layout = "_AppLayout";
}

<div class="max-w-lg mx-auto">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
        <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
            </div>
            <h1 class="text-2xl font-semibold text-gray-900">Email Service Test</h1>
            <p class="text-gray-500 mt-2">Send a test email to verify SMTP configuration</p>
        </div>

        @if (Model.Message != null)
        {
            <div class="mb-6 p-4 rounded-xl @(Model.Success == true ? "bg-green-50 border border-green-200" : "bg-red-50 border border-red-200")">
                <div class="flex items-center gap-3">
                    @if (Model.Success == true)
                    {
                        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <span class="text-green-700">@Model.Message</span>
                    }
                    else
                    {
                        <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        <span class="text-red-700">@Model.Message</span>
                    }
                </div>
            </div>
        }

        <form method="post" class="space-y-6">
            <div>
                <label for="RecipientEmail" class="block text-sm font-medium text-gray-700 mb-1.5">
                    Recipient Email Address
                </label>
                <input type="email" 
                       asp-for="RecipientEmail" 
                       class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100"
                       placeholder="Enter email address to receive test"
                       required />
            </div>

            <button type="submit" 
                    class="w-full px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-lg text-sm font-semibold hover:from-indigo-600 hover:to-purple-700 transition-all flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
                Send Test Email
            </button>
        </form>

        <div class="mt-8 pt-6 border-t border-gray-200">
            <h3 class="text-sm font-medium text-gray-700 mb-3">SMTP Configuration</h3>
            <div class="bg-gray-50 rounded-lg p-4 text-xs font-mono space-y-1">
                <p><span class="text-gray-500">Host:</span> smtp.gmail.com</p>
                <p><span class="text-gray-500">Port:</span> 465</p>
                <p><span class="text-gray-500">Secure:</span> SSL/TLS</p>
                <p><span class="text-gray-500">User:</span> al-hussein@gmail.com</p>
            </div>
        </div>
    </div>
</div>
