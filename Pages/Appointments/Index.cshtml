@page
@model Gixat.Web.Pages.Appointments.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Appointments";
}

<!-- Clean Header -->
<div class="mb-8">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-slate-900 via-blue-900 to-slate-900 bg-clip-text text-transparent mb-2">Appointments</h1>
            <p class="text-slate-600 flex items-center gap-2">
                <i class="bi bi-calendar-event text-sm"></i>
                <span>Manage your schedule</span>
            </p>
        </div>
        <a href="/Appointments/Create" class="inline-flex items-center justify-center gap-2 px-6 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]">
            <i class="bi bi-plus-circle-fill text-lg"></i>
            <span>New Appointment</span>
        </a>
    </div>
    
    <!-- Search -->
    <div class="relative max-w-md">
        <i class="bi bi-search absolute left-4 top-1/2 transform -translate-y-1/2 text-slate-400"></i>
        <input type="text" 
               id="appointmentSearch"
               placeholder="Search appointments..." 
               class="w-full px-4 py-3 text-sm border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all pl-11 hover:border-slate-300 bg-white"
               oninput="filterAppointments()">
    </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 lg:gap-6 mb-8">
    @{
        var scheduledCount = Model.Appointments.Count(a => a.Status == Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Scheduled);
        var confirmedCount = Model.Appointments.Count(a => a.Status == Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Confirmed);
        var inProgressCount = Model.Appointments.Count(a => a.Status == Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.InProgress);
        var totalCount = Model.Appointments.Count;
    }
    
    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-blue-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-blue-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">Scheduled</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white shadow-lg shadow-blue-500/30">
                    <i class="bi bi-calendar-check text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@scheduledCount</p>
        </div>
    </div>
    
    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-green-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-green-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">Confirmed</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center text-white shadow-lg shadow-green-500/30">
                    <i class="bi bi-check-circle-fill text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@confirmedCount</p>
        </div>
    </div>
    
    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-purple-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-purple-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">In Progress</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center text-white shadow-lg shadow-purple-500/30">
                    <i class="bi bi-hourglass-split text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@inProgressCount</p>
        </div>
    </div>
    
    <div class="group relative bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer border border-slate-100 hover:border-slate-200 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-slate-50 to-transparent rounded-full -mr-16 -mt-16 opacity-50 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative">
            <div class="flex items-center justify-between mb-3">
                <p class="text-sm text-slate-600 font-semibold">Total</p>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-slate-500 to-slate-600 flex items-center justify-center text-white shadow-lg shadow-slate-500/30">
                    <i class="bi bi-calendar-event text-lg"></i>
                </div>
            </div>
            <p class="text-4xl font-bold text-slate-900">@totalCount</p>
        </div>
    </div>
</div>

<!-- Status Filter Buttons -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-2 inline-flex gap-2 mb-8">
    <button onclick="filterByStatus('all')" class="filter-btn active px-6 py-3 rounded-xl font-semibold text-sm transition-all bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg">
        All
    </button>
    <button onclick="filterByStatus('scheduled')" class="filter-btn px-6 py-3 rounded-xl font-semibold text-sm transition-all text-slate-600 hover:bg-slate-100">
        Scheduled
    </button>
    <button onclick="filterByStatus('confirmed')" class="filter-btn px-6 py-3 rounded-xl font-semibold text-sm transition-all text-slate-600 hover:bg-slate-100">
        Confirmed
    </button>
    <button onclick="filterByStatus('inprogress')" class="filter-btn px-6 py-3 rounded-xl font-semibold text-sm transition-all text-slate-600 hover:bg-slate-100">
        In Progress
    </button>
    <button onclick="filterByStatus('completed')" class="filter-btn px-6 py-3 rounded-xl font-semibold text-sm transition-all text-slate-600 hover:bg-slate-100">
        Completed
    </button>
    <button onclick="filterByStatus('cancelled')" class="filter-btn px-6 py-3 rounded-xl font-semibold text-sm transition-all text-slate-600 hover:bg-slate-100">
        Cancelled
    </button>
</div>

<!-- View Selector -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-8">
    <div class="flex flex-col sm:flex-row gap-4 items-center justify-between">
        <div class="flex gap-2 bg-slate-100 rounded-xl p-1.5">
            <a href="?view=calendar&date=@Model.SelectedDate.ToString("yyyy-MM-dd")" 
               class="@(Model.ViewMode == "calendar" ? "bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg" : "text-slate-600 hover:bg-slate-200") px-6 py-3 rounded-lg font-semibold text-sm transition-all inline-flex items-center gap-2">
                <i class="bi bi-calendar3"></i>
                Calendar
            </a>
            <a href="?view=list" 
               class="@(Model.ViewMode == "list" ? "bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg" : "text-slate-600 hover:bg-slate-200") px-6 py-3 rounded-lg font-semibold text-sm transition-all inline-flex items-center gap-2">
                <i class="bi bi-list-ul"></i>
                List
            </a>
        </div>

        @if (Model.ViewMode == "calendar")
        {
            <div class="flex items-center gap-3">
                <button onclick="navigateDate(-1)" class="w-10 h-10 flex items-center justify-center rounded-xl bg-slate-100 text-slate-700 hover:bg-slate-200 transition-all hover:scale-110">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <span class="text-sm font-semibold text-slate-900 px-4 min-w-[160px] text-center">
                    @Model.SelectedDate.ToString("MMMM dd, yyyy")
                </span>
                <button onclick="navigateDate(1)" class="w-10 h-10 flex items-center justify-center rounded-xl bg-slate-100 text-slate-700 hover:bg-slate-200 transition-all hover:scale-110">
                    <i class="bi bi-chevron-right"></i>
                </button>
                <button onclick="goToToday()" class="px-5 py-2.5 rounded-xl bg-slate-900 text-white hover:bg-slate-800 font-semibold text-sm transition-all hover:scale-[1.02]">
                    Today
                </button>
            </div>
        }
    </div>
</div>

<script>
function navigateDate(days) {
    const currentDate = new Date('@Model.SelectedDate.ToString("yyyy-MM-dd")');
    currentDate.setDate(currentDate.getDate() + days);
    const newDate = currentDate.toISOString().split('T')[0];
    window.location.href = `?view=calendar&date=${newDate}`;
}

function goToToday() {
    const today = new Date().toISOString().split('T')[0];
    window.location.href = `?view=calendar&date=${today}`;
}
</script>

@if (Model.ViewMode == "calendar")
{
    <!-- Calendar View -->
    <div class="apple-card overflow-hidden">
        <!-- Calendar Header -->
        <div class="bg-gray-50 border-b border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-semibold text-gray-900">@Model.SelectedDate.ToString("MMMM yyyy")</h2>
                </div>
                <div class="flex gap-2">
                    <a href="?view=calendar&date=@Model.SelectedDate.AddMonths(-1).ToString("yyyy-MM-dd")" 
                       class="p-2 hover:bg-gray-200 rounded-lg transition-all">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                    <a href="?view=calendar&date=@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")" 
                       class="px-4 py-2 hover:bg-gray-200 rounded-lg transition-all font-medium text-sm">
                        Today
                    </a>
                    <a href="?view=calendar&date=@Model.SelectedDate.AddMonths(1).ToString("yyyy-MM-dd")" 
                       class="p-2 hover:bg-gray-200 rounded-lg transition-all">
                        <i class="bi bi-chevron-right text-xl group-hover:animate-pulse"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Day Headers -->
        <div class="grid grid-cols-7 border-b border-gray-200 bg-gray-50">
            @foreach (var day in new[] { "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" })
            {
                <div class="p-3 text-center font-semibold text-sm text-apple-gray uppercase tracking-wide border-r border-gray-200 last:border-r-0">
                    @day.Substring(0, 3)
                </div>
            }
        </div>

        <!-- Calendar Grid -->
        <div class="grid grid-cols-7">
            @{
                var firstDayOfMonth = new DateTime(Model.SelectedDate.Year, Model.SelectedDate.Month, 1);
                var daysInMonth = DateTime.DaysInMonth(Model.SelectedDate.Year, Model.SelectedDate.Month);
                var startDayOfWeek = (int)firstDayOfMonth.DayOfWeek;
                var today = DateTime.UtcNow.Date;
                
                // Previous month days
                var prevMonth = firstDayOfMonth.AddMonths(-1);
                var daysInPrevMonth = DateTime.DaysInMonth(prevMonth.Year, prevMonth.Month);
                
                for (int i = startDayOfWeek - 1; i >= 0; i--)
                {
                    var date = new DateTime(prevMonth.Year, prevMonth.Month, daysInPrevMonth - i);
                    <div class="min-h-[120px] border-r border-b border-gray-200 bg-gray-50/50 p-2">
                        <div class="text-sm text-apple-gray mb-1">@(daysInPrevMonth - i)</div>
                    </div>
                }
                
                // Current month days
                for (int day = 1; day <= daysInMonth; day++)
                {
                    var date = new DateTime(Model.SelectedDate.Year, Model.SelectedDate.Month, day);
                    var dateUtc = DateTime.SpecifyKind(date, DateTimeKind.Utc);
                    var dayAppointments = Model.AllAppointments.Where(a => a.ScheduledDate.Date == dateUtc.Date).ToList();
                    var isToday = date.Date == today;
                    var isSelected = date.Date == Model.SelectedDate.Date;
                    
                    <div class="min-h-[120px] border-r border-b border-gray-200 @(isToday ? "bg-blue-50" : "bg-white") p-2 hover:bg-gray-50 transition-colors">
                        <div class="flex items-center justify-between mb-2">
                            <a href="?view=calendar&date=@date.ToString("yyyy-MM-dd")" 
                               class="@(isToday ? "w-8 h-8 bg-apple-blue text-white rounded-full flex items-center justify-center font-bold text-sm" : isSelected ? "w-8 h-8 bg-gray-200 text-apple-dark rounded-full flex items-center justify-center font-semibold text-sm" : "text-sm font-semibold text-apple-dark hover:text-apple-blue")">
                                @day
                            </a>
                            @if (dayAppointments.Any())
                            {
                                <span class="text-xs bg-apple-blue text-white px-2 py-0.5 rounded-full font-semibold">
                                    @dayAppointments.Count
                                </span>
                            }
                        </div>
                        <div class="space-y-1">
                            @foreach (var apt in dayAppointments.Take(3))
                            {
                                <a href="/Appointments/@apt.Id" 
                                   class="block text-xs p-1.5 rounded @GetCalendarStatusClass(apt.Status) hover:shadow-sm transition-all truncate">
                                    <div class="font-semibold truncate">@apt.ScheduledTime.ToString(@"hh\:mm")</div>
                                    <div class="truncate opacity-90">@(string.IsNullOrEmpty(apt.ClientName) ? apt.ServiceType : apt.ClientName)</div>
                                </a>
                            }
                            @if (dayAppointments.Count > 3)
                            {
                                <a href="?view=calendar&date=@date.ToString("yyyy-MM-dd")" 
                                   class="block text-xs text-apple-blue hover:text-apple-indigo font-semibold text-center py-1">
                                    +@(dayAppointments.Count - 3) more
                                </a>
                            }
                        </div>
                    </div>
                }
                
                // Next month days to fill the grid
                var totalCells = startDayOfWeek + daysInMonth;
                var remainingCells = totalCells % 7 == 0 ? 0 : 7 - (totalCells % 7);
                
                for (int i = 1; i <= remainingCells; i++)
                {
                    <div class="min-h-[120px] border-r border-b border-gray-200 bg-gray-50/50 p-2">
                        <div class="text-sm text-apple-gray mb-1">@i</div>
                    </div>
                }
            }
        </div>
    </div>
    
    <!-- Selected Day Appointments -->
    @if (Model.Appointments.Any())
    {
        <div class="mt-6 apple-card">
            <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-200">
                <h3 class="text-xl font-semibold text-gray-900">
                    @Model.SelectedDate.ToString("MMMM dd, yyyy")
                </h3>
                <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1.5 rounded-full font-medium">
                    @Model.Appointments.Count @(Model.Appointments.Count == 1 ? "Appointment" : "Appointments")
                </span>
            </div>
            <div class="space-y-3">
                @foreach (var apt in Model.Appointments.OrderBy(a => a.ScheduledTime))
                {
                    var statusClass = apt.Status.ToString().ToLower();
                    <a href="/Appointments/@apt.Id" 
                       data-appointment-card 
                       data-status="@statusClass"
                       class="group flex items-center gap-4 p-4 rounded-xl hover:bg-gray-50 transition-all">
                        
                        <!-- Time -->
                        <div class="flex-shrink-0 text-center">
                            <div class="text-sm font-semibold text-gray-900">@apt.ScheduledTime</div>
                            <div class="text-xs text-gray-500">@apt.DurationMinutes min</div>
                        </div>
                        
                        <!-- Divider -->
                        <div class="w-px h-12 bg-gray-200"></div>
                        
                        <!-- Info -->
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2 mb-1">
                                <h4 class="font-medium text-gray-900 truncate">
                                    @(string.IsNullOrEmpty(apt.ClientName) ? "Walk-in Customer" : apt.ClientName)
                                </h4>
                            </div>
                            <p class="text-sm text-gray-500 truncate">@apt.ServiceType</p>
                            @if (!string.IsNullOrEmpty(apt.VehicleInfo))
                            {
                                <p class="text-xs text-gray-400 truncate mt-1">
                                    <i class="bi bi-car-front"></i> @apt.VehicleInfo
                                </p>
                            }
                        </div>
                        
                        <!-- Status -->
                        <span class="status-badge @GetStatusBadgeClass(apt.Status)">
                            @apt.Status
                        </span>
                        
                        <!-- Arrow -->
                        <i class="bi bi-chevron-right text-gray-400 group-hover:text-blue-500 group-hover:translate-x-1 transition-all"></i>
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="apple-card text-center py-12">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-calendar-x text-gray-400 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No Appointments</h3>
            <p class="text-sm text-gray-500 mb-6">No appointments scheduled for this date</p>
            <a href="/Appointments/Create" class="apple-btn inline-flex items-center gap-2">
                <i class="bi bi-plus-lg"></i>
                New Appointment
            </a>
        </div>
    }
}
else
{
    <!-- List View -->
    @if (Model.Appointments.Any())
    {
        <div class="space-y-3">
            @foreach (var apt in Model.Appointments)
            {
                <a href="/Appointments/@apt.Id" 
