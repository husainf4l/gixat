    else
    {
        <div class="apple-card text-center py-12">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-calendar-x text-gray-400 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No Appointments</h3>
            <p class="text-sm text-gray-500 mb-6">Start scheduling appointments to manage your service bookings</p>
            <a href="/Appointments/Create" class="apple-btn inline-flex items-center gap-2">
                <i class="bi bi-plus-lg"></i>
                New Appointment
            </a>
        </div>
    }
}

<script>
    let currentFilter = 'all';
    
    function filterByStatus(status) {
        currentFilter = status;
        
        // Update button states
        document.querySelectorAll('.filter-btn').forEach(btn => {
            // Remove active classes
            btn.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-indigo-600', 'text-white', 'shadow-lg');
            // Add inactive classes
            btn.classList.add('text-slate-600', 'hover:bg-slate-100');
        });
        
        // Add active classes to clicked button
        const clickedBtn = event.target.closest('.filter-btn');
        clickedBtn.classList.remove('text-slate-600', 'hover:bg-slate-100');
        clickedBtn.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-indigo-600', 'text-white', 'shadow-lg');
        
        filterAppointments();
    }
    
    function filterAppointments() {
        const searchTerm = document.getElementById('appointmentSearch').value.toLowerCase();
        const appointmentCards = document.querySelectorAll('[data-appointment-card]');
        
        appointmentCards.forEach(card => {
            const text = card.textContent.toLowerCase();
            const status = card.dataset.status;
            
            const matchesSearch = searchTerm === '' || text.includes(searchTerm);
            const matchesFilter = currentFilter === 'all' || status === currentFilter;
            
            if (matchesSearch && matchesFilter) {
                card.style.display = '';
            } else {
                card.style.display = 'none';
            }
        });
    }
    
    // Add search event listener
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('appointmentSearch');
        if (searchInput) {
            searchInput.addEventListener('input', filterAppointments);
        }
    });
</script>

@functions {
    string GetStatusBadgeClass(Gixat.Web.Modules.Appointments.Entities.AppointmentStatus status)
    {
        return status switch
        {
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Scheduled => "bg-blue-100 text-blue-700",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Confirmed => "bg-green-100 text-green-700",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.InProgress => "bg-purple-100 text-purple-700",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Completed => "bg-gray-100 text-apple-gray",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Cancelled => "bg-red-100 text-red-700",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.NoShow => "bg-orange-100 text-orange-700",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Rescheduled => "bg-yellow-100 text-yellow-700",
            _ => "bg-gray-100 text-gray-700"
        };
    }

    string GetStatusBorderClass(Gixat.Web.Modules.Appointments.Entities.AppointmentStatus status)
    {
        return status switch
        {
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Scheduled => "border-blue-300",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Confirmed => "border-green-300",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.InProgress => "border-purple-300",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Completed => "border-gray-300",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Cancelled => "border-red-300",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.NoShow => "border-orange-300",
            Gixat.Web.Modules.Appointments.Entities.AppointmentStatus.Rescheduled => "border-yellow-300",
            _ => "border-gray-300"
        };
    }

