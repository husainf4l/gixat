@page
@model Gixat.Pages.Legal.TermsOfServiceModel
@{
    ViewData["Title"] = "Terms of Service - Gixat";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        },
                        accent: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .fade-in {
            animation: fadeIn 0.6s ease-in;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .section-hover {
            transition: all 0.3s ease;
        }
        .section-hover:hover {
            transform: translateX(8px);
            background: linear-gradient(to right, #eff6ff, #f0f9ff);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-primary-50 via-white to-accent-50 min-h-screen scroll-smooth">
    <!-- Navigation -->
    <partial name="../Components/_Navbar" />

    <!-- Main Content -->
    <div class="pt-24 pb-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
            <div class="bg-white rounded-3xl shadow-2xl border border-gray-100 p-8 md:p-12 fade-in">
            <!-- Header -->
            <div class="text-center mb-12">
                <div class="w-20 h-20 bg-gradient-to-br from-primary-600 to-accent-600 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg transform hover:scale-110 transition-transform duration-300">
                    <i class="bi bi-file-text text-white text-4xl"></i>
                </div>
                <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-transparent mb-4">Terms of Service</h1>
                <div class="flex items-center justify-center gap-4 text-gray-600">
                    <span class="flex items-center gap-2">
                        <i class="bi bi-calendar-check text-primary-600"></i>
                        Last Updated: December 2025
                    </span>
                </div>
                <div class="mt-6 inline-flex items-center gap-2 px-4 py-2 bg-amber-50 border-2 border-amber-200 rounded-xl text-amber-800 text-sm">
                    <i class="bi bi-exclamation-triangle-fill text-amber-600"></i>
                    <span class="font-medium">Please read these terms carefully before using Gixat</span>
                </div>
            </div>

            <!-- Content -->
            <div class="prose prose-lg max-w-none">
                <!-- Agreement -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">1</span>
                        Agreement
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">
                        By using Gixat, you agree to these Terms of Service.
                    </p>
                    <p class="text-gray-700 leading-relaxed">
                        If you do not agree, you must stop using the platform.
                    </p>
                </section>

                <!-- Service Description -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">2</span>
                        Service Description
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">Gixat provides digital tools for:</p>
                    <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4 mb-4">
                        <li>Garage workflow tracking</li>
                        <li>Appointments & schedule management</li>
                        <li>Client & vehicle databases</li>
                        <li>Service sessions & job cards</li>
                        <li>Invoicing & payments</li>
                        <li>Inventory management</li>
                        <li>Reporting & analytics</li>
                    </ul>
                    <p class="text-gray-700 leading-relaxed">
                        We may improve, update, or modify features at any time.
                    </p>
                </section>

                <!-- User Accounts -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">3</span>
                        User Accounts
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">You are responsible for:</p>
                    <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4 mb-4">
                        <li>Providing accurate registration details</li>
                        <li>Keeping login credentials secure</li>
                        <li>Immediately notifying us of unauthorized access</li>
                        <li>All activities performed under your account</li>
                    </ul>
                    <p class="text-gray-700 leading-relaxed">
                        We may suspend accounts for policy violations.
                    </p>
                </section>

                <!-- Acceptable Use -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">4</span>
                        Acceptable Use
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">You may not:</p>
                    <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
                        <li>Use Gixat for unlawful activities</li>
                        <li>Interfere with platform operations</li>
                        <li>Upload malicious code</li>
                        <li>Reverse engineer or bypass security</li>
                        <li>Abuse customer or vehicle data</li>
                        <li>Resell or sublicense the platform without permission</li>
                    </ul>
                </section>

                <!-- Payments & Subscriptions -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">5</span>
                        Payments & Subscriptions
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">Applicable for paid plans:</p>
                    <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
                        <li>Fees are billed according to your subscription</li>
                        <li>Payments renew automatically unless canceled</li>
                        <li>Fees are non-refundable (unless required by law)</li>
                        <li>Failure to pay may result in account suspension</li>
                    </ul>
                </section>

                <!-- Intellectual Property -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">6</span>
                        Intellectual Property
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">
                        All Gixat software components, designs, trademarks, and content belong to Gixat.
                    </p>
                    <p class="text-gray-700 leading-relaxed">
                        You may not copy or reproduce them without written permission.
                    </p>
                </section>

                <!-- Data Ownership -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">7</span>
                        Data Ownership
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">You own all data entered into Gixat:</p>
                    <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4 mb-4">
                        <li>Clients</li>
                        <li>Vehicles</li>
                        <li>Sessions</li>
                        <li>Invoices</li>
                        <li>Inventory</li>
                    </ul>
                    <p class="text-gray-700 leading-relaxed">
                        You may export or delete your data at any time.
                    </p>
                </section>

                <!-- Termination -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">8</span>
                        Termination
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">We may suspend or terminate accounts for:</p>
                    <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4 mb-4">
                        <li>Violating Terms</li>
                        <li>Non-payment</li>
                        <li>Fraud or abuse</li>
                    </ul>
                    <p class="text-gray-700 leading-relaxed">
                        You may cancel your account whenever you choose.
                    </p>
                </section>

                <!-- Disclaimer -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">9</span>
                        Disclaimer
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">
                        Gixat is provided "as is" without warranties.
                    </p>
                    <p class="text-gray-700 leading-relaxed mb-3">We are not liable for:</p>
                    <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4 mb-4">
                        <li>Lost profits</li>
                        <li>Data loss</li>
                        <li>Downtime</li>
                        <li>Business losses</li>
                    </ul>
                    <p class="text-gray-700 leading-relaxed">
                        Our maximum liability is limited to subscription fees paid in the last 6 months.
                    </p>
                </section>

                <!-- Governing Law -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">10</span>
                        Governing Law
                    </h2>
                    <p class="text-gray-700 leading-relaxed">
                        These Terms are governed by the laws of Jordan.
                    </p>
                </section>

                <!-- Changes -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">11</span>
                        Changes
                    </h2>
                    <p class="text-gray-700 leading-relaxed mb-3">
                        We may modify these Terms at any time.
                    </p>
                    <p class="text-gray-700 leading-relaxed">
                        Continued use means acceptance.
                    </p>
                </section>

                <!-- Contact -->
                <section class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
                        <span class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600 text-sm font-bold">12</span>
                        Contact
                    </h2>
                    <div class="bg-primary-50 border-2 border-primary-200 rounded-2xl p-6">
                        <p class="text-gray-800">
                            <i class="bi bi-envelope-fill text-primary-600 mr-2"></i>
                            <strong>Email:</strong> support@gixat.com
                        </p>
                    </div>
                </section>
            </div>

            <!-- Footer -->
            <div class="mt-12 pt-8 border-t border-gray-200">
                <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                    <a href="/" class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-semibold transition-colors group">
                        <i class="bi bi-arrow-left transform group-hover:-translate-x-1 transition-transform"></i>
                        Back to Home
                    </a>
                    <div class="flex items-center gap-4">
                        <a href="/Legal/PrivacyPolicy" class="text-sm text-gray-600 hover:text-primary-600 transition-colors">Privacy Policy</a>
                        <span class="text-gray-300">|</span>
                        <a href="/Legal/CookiePolicy" class="text-sm text-gray-600 hover:text-primary-600 transition-colors">Cookie Policy</a>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

    <!-- Scroll to Top Button -->
    <button id="scrollTop" class="fixed bottom-8 right-8 w-12 h-12 bg-gradient-to-br from-primary-600 to-accent-600 text-white rounded-full shadow-lg opacity-0 pointer-events-none transition-all duration-300 hover:scale-110 flex items-center justify-center z-40">
        <i class="bi bi-arrow-up text-xl"></i>
    </button>

    <script>
        // Scroll to Top Button
        window.addEventListener('scroll', () => {
            const scrollTop = document.getElementById('scrollTop');
            if (window.pageYOffset > 300) {
                scrollTop.classList.remove('opacity-0', 'pointer-events-none');
            } else {
                scrollTop.classList.add('opacity-0', 'pointer-events-none');
            }
        });

        document.getElementById('scrollTop').addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
</body>
</html>
