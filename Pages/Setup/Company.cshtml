                        </div>
                        <div>
                            <label asp-for="Input.ServiceBays" class="block text-sm font-bold text-gray-800 mb-2">Number of Service Bays</label>
                            <div class="relative">
                                <i class="bi bi-car-front absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <input asp-for="Input.ServiceBays" type="number" min="1" class="input-setup pl-12" placeholder="e.g., 5" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="animate-slide-up" style="animation-delay: 0.45s">
                    <button type="submit" class="w-full py-5 px-8 text-lg font-bold text-white bg-gradient-to-r from-primary-600 to-accent-600 border-none rounded-2xl cursor-pointer hover:from-primary-700 hover:to-accent-700 hover:shadow-xl hover:shadow-primary-200 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 flex items-center justify-center gap-3">
                        <i class="bi bi-rocket-takeoff text-xl"></i>
                        Create My Garage
                        <i class="bi bi-arrow-right text-xl"></i>
                    </button>
                </div>

                <p class="text-center text-sm text-gray-600 mt-6 animate-slide-up" style="animation-delay: 0.5s">
