@page "/Setup/Company"
@model Gixat.Web.Pages.Setup.CompanyModel
@{
    ViewData["Title"] = "Setup Your Garage";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gixat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        },
                        accent: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .input-setup {
            width: 100%;
            padding: 0.875rem 1.125rem;
            font-size: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.875rem;
            background-color: white;
            color: #1f2937;
            outline: none;
            transition: all 0.2s;
        }
        .input-setup::placeholder { color: #9ca3af; }
        .input-setup:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
            background-color: white;
        }
        .input-setup:hover {
            border-color: #cbd5e1;
        }
        @@keyframes fade-in { from { opacity: 0; } to { opacity: 1; } }
        @@keyframes slide-up { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        .animate-fade-in { animation: fade-in 0.6s ease-out; }
        .animate-slide-up { animation: slide-up 0.6s ease-out forwards; opacity: 0; }
    </style>
</head>
<body class="bg-gradient-to-br from-primary-50 via-white to-accent-50 min-h-screen flex flex-col antialiased">
    <!-- Decorative elements -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-primary-400/20 to-accent-400/20 rounded-full blur-3xl"></div>
        <div class="absolute top-1/3 -left-40 w-96 h-96 bg-gradient-to-tr from-accent-400/20 to-primary-400/20 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-gradient-to-r from-primary-300/10 to-accent-300/10 rounded-full blur-3xl"></div>
    </div>

    <div class="flex-1 flex items-center justify-center p-6 relative z-10">
        <div class="bg-white rounded-3xl shadow-2xl border border-gray-100 p-12 w-full max-w-3xl animate-fade-in">
            <!-- Step Indicator -->
            <div class="flex justify-center items-center mb-10 animate-slide-up" style="animation-delay: 0.1s">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary-600 to-accent-600 rounded-full flex items-center justify-center text-white font-bold shadow-lg shadow-primary-200">1</div>
                    <div class="w-20 h-1.5 bg-gradient-to-r from-primary-200 to-gray-200 mx-3 rounded-full"></div>
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-gray-400 font-bold">2</div>
                    <div class="w-20 h-1.5 bg-gray-200 mx-3 rounded-full"></div>
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-gray-400 font-bold">3</div>
                </div>
            </div>

            <!-- Brand Icon & Header -->
            <div class="text-center mb-10 animate-slide-up" style="animation-delay: 0.15s">
                <div class="w-24 h-24 bg-gradient-to-br from-primary-600 to-accent-600 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-xl shadow-primary-200">
                    <i class="bi bi-building-gear text-white text-5xl"></i>
                </div>
                <h1 class="text-4xl font-bold text-gray-900 tracking-tight mb-3">Setup Your Garage</h1>
                <p class="text-gray-600 text-lg">Let's get your garage management system ready</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="bg-red-50 border-2 border-red-200 text-red-700 px-6 py-4 rounded-2xl mb-8 text-sm flex items-center gap-3 animate-slide-up shadow-sm" style="animation-delay: 0.2s">
                    <i class="bi bi-exclamation-triangle-fill text-lg"></i>
                    <span class="font-medium">@Model.ErrorMessage</span>
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()

                <!-- Basic Information Section -->
                <div class="mb-10 animate-slide-up" style="animation-delay: 0.25s">
                    <div class="flex items-center gap-3 mb-6 pb-3 border-b-2 border-primary-100">
                        <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center shadow-sm">
                            <i class="bi bi-info-circle text-primary-600 text-lg"></i>
                        </div>
                        <h2 class="text-lg font-bold text-primary-700">Basic Information</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Input.Name" class="block text-sm font-bold text-gray-800 mb-2">Garage Name <span class="text-red-500">*</span></label>
                            <input asp-for="Input.Name" class="input-setup" placeholder="e.g., AutoCare Pro" />
                            <span asp-validation-for="Input.Name" class="text-red-500 text-sm mt-1 block font-medium"></span>
                        </div>
                        <div>
                            <label asp-for="Input.TradeName" class="block text-sm font-bold text-gray-800 mb-2">Trade Name</label>
                            <input asp-for="Input.TradeName" class="input-setup" placeholder="Optional trade name" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-5">
                        <div>
                            <label asp-for="Input.Email" class="block text-sm font-bold text-gray-800 mb-2">Business Email <span class="text-red-500">*</span></label>
                            <div class="relative">
                                <i class="bi bi-envelope absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <input asp-for="Input.Email" type="email" class="input-setup pl-12" placeholder="garage@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-red-500 text-sm mt-1 block font-medium"></span>
                        </div>
                        <div>
                            <label asp-for="Input.Phone" class="block text-sm font-bold text-gray-800 mb-2">Phone Number</label>
                            <div class="relative">
                                <i class="bi bi-telephone absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <input asp-for="Input.Phone" class="input-setup pl-12" placeholder="+1 (555) 123-4567" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Location Section -->
                <div class="mb-10 animate-slide-up" style="animation-delay: 0.3s">
                    <div class="flex items-center gap-3 mb-6 pb-3 border-b-2 border-accent-100">
                        <div class="w-10 h-10 bg-accent-100 rounded-xl flex items-center justify-center shadow-sm">
                            <i class="bi bi-geo-alt text-accent-600 text-lg"></i>
                        </div>
                        <h2 class="text-lg font-bold text-accent-700">Location</h2>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Input.Address" class="block text-sm font-bold text-gray-800 mb-2">Street Address</label>
                        <div class="relative">
                            <i class="bi bi-pin-map absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <input asp-for="Input.Address" class="input-setup pl-12" placeholder="123 Main Street" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                        <div>
                            <label asp-for="Input.City" class="block text-sm font-bold text-gray-800 mb-2">City</label>
                            <input asp-for="Input.City" class="input-setup" placeholder="City" />
                        </div>
                        <div>
                            <label asp-for="Input.State" class="block text-sm font-bold text-gray-800 mb-2">State/Province</label>
                            <input asp-for="Input.State" class="input-setup" placeholder="State" />
                        </div>
                        <div>
                            <label asp-for="Input.PostalCode" class="block text-sm font-bold text-gray-800 mb-2">Postal Code</label>
