                    <div class="mt-4">
                        <label asp-for="Input.Website" class="block text-sm font-medium text-apple-dark mb-2">Website</label>
                        <div class="relative">
                            <i class="bi bi-link-45deg absolute left-4 top-1/2 -translate-y-1/2 text-apple-gray"></i>
                            <input asp-for="Input.Website" class="input-setup pl-11" placeholder="https://www.yourgarage.com" />
                        </div>
                    </div>
                </div>

                <!-- Main Branch Section -->
                <div class="mb-8 animate-slide-up" style="animation-delay: 0.35s">
                    <div class="flex items-center gap-2 mb-4 pb-2 border-b border-gray-200">
