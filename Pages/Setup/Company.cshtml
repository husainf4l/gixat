                    </div>
                </div>

                <!-- Business Details Section -->
                <div class="mb-10 animate-slide-up" style="animation-delay: 0.35s">
                    <div class="flex items-center gap-3 mb-6 pb-3 border-b-2 border-primary-100">
                        <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center shadow-sm">
                            <i class="bi bi-briefcase text-primary-600 text-lg"></i>
                        </div>
                        <h2 class="text-lg font-bold text-primary-700">Business Details</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Input.TaxId" class="block text-sm font-bold text-gray-800 mb-2">Tax ID / VAT Number</label>
                            <input asp-for="Input.TaxId" class="input-setup" placeholder="Tax identification number" />
                        </div>
                        <div>
                            <label asp-for="Input.RegistrationNumber" class="block text-sm font-bold text-gray-800 mb-2">Business Registration #</label>
                            <input asp-for="Input.RegistrationNumber" class="input-setup" placeholder="Registration number" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-5">
                        <div>
