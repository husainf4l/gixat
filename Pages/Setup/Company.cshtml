                                <option value="Asia/Kuwait">ğŸ‡°ğŸ‡¼ Kuwait</option>
                            </select>
                        </div>
                    </div>

                    <div class="mt-5">
                        <label asp-for="Input.Website" class="block text-sm font-bold text-gray-800 mb-2">Website</label>
                        <div class="relative">
                            <i class="bi bi-link-45deg absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <input asp-for="Input.Website" class="input-setup pl-12" placeholder="https://www.yourgarage.com" />
                        </div>
                    </div>
                </div>

                <!-- Main Branch Section -->
                <div class="mb-10 animate-slide-up" style="animation-delay: 0.4s">
                    <div class="flex items-center gap-3 mb-6 pb-3 border-b-2 border-accent-100">
                        <div class="w-10 h-10 bg-accent-100 rounded-xl flex items-center justify-center shadow-sm">
                            <i class="bi bi-shop text-accent-600 text-lg"></i>
                        </div>
                        <h2 class="text-lg font-bold text-accent-700">Main Branch</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Input.BranchName" class="block text-sm font-bold text-gray-800 mb-2">Branch Name <span class="text-red-500">*</span></label>
                            <input asp-for="Input.BranchName" class="input-setup" placeholder="e.g., Main Location" />
