@page
@model Gixat.Web.Pages.JobCards.IndexModel
@{
    ViewData["Title"] = "Job Cards";
    Layout = "_AppLayout";
}

<!-- Header -->
<div class="mb-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-slate-900 via-blue-900 to-slate-900 bg-clip-text text-transparent mb-2">Job Cards</h1>
            <p class="text-slate-600 flex items-center gap-2">
                <i class="bi bi-wrench-adjustable text-sm"></i>
                <span>Manage work orders and service tasks</span>
            </p>
        </div>
        <a href="/Sessions" class="inline-flex items-center justify-center gap-2 px-6 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]">
            <i class="bi bi-plus-circle-fill text-lg"></i>
            <span>New Job Card</span>
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="apple-card p-6">
        <div class="flex items-center justify-between mb-2">
            <p class="text-sm text-gray-500 font-medium">Total Active</p>
            <i class="bi bi-file-earmark-text text-blue-500"></i>
        </div>
        <p class="text-3xl font-semibold text-gray-900">@Model.TotalActive</p>
    </div>

    <div class="apple-card p-6">
        <div class="flex items-center justify-between mb-2">
            <p class="text-sm text-gray-500 font-medium">In Progress</p>
            <i class="bi bi-lightning text-green-500"></i>
        </div>
        <p class="text-3xl font-semibold text-gray-900">@Model.InProgress</p>
    </div>

    <div class="apple-card p-6">
        <div class="flex items-center justify-between mb-2">
            <p class="text-sm text-gray-500 font-medium">On Hold</p>
            <i class="bi bi-clock text-orange-500"></i>
        </div>
        <p class="text-3xl font-semibold text-gray-900">@Model.WaitingParts</p>
    </div>

    <div class="apple-card p-6">
        <div class="flex items-center justify-between mb-2">
            <p class="text-sm text-gray-500 font-medium">Completed Today</p>
            <i class="bi bi-check-circle text-purple-500"></i>
        </div>
        <p class="text-3xl font-semibold text-gray-900">@Model.CompletedToday</p>
    </div>
</div>

<!-- Kanban Board -->
<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Draft Column -->
    <div class="bg-slate-50 rounded-2xl p-5 min-h-[600px]">
        <div class="flex items-center justify-between mb-6">
            <h3 class="font-bold text-slate-900 text-lg">Draft</h3>
            <span class="px-3 py-1.5 text-xs font-semibold text-slate-700 bg-slate-200 rounded-full ring-1 ring-slate-300">
                @Model.JobCards.Count(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.Draft)
            </span>
        </div>
        <div class="space-y-4">
            @foreach (var job in Model.JobCards.Where(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.Draft))
            {
                <a href="/JobCards/Details?id=@job.Id" class="block bg-white rounded-xl p-5 shadow-sm hover:shadow-lg transition-all duration-200 border border-slate-100 hover:border-slate-200 group">
                    <div class="flex items-start justify-between mb-3">
                        <span class="text-xs font-mono text-slate-500 font-semibold">#@job.JobCardNumber</span>
                        <span class="px-2.5 py-1 text-xs font-semibold @GetPriorityBadge(job.Priority) rounded-full ring-1">
                            @job.Priority
                        </span>
                    </div>
                    <h4 class="font-semibold text-slate-900 text-sm mb-4 group-hover:text-blue-600 transition-colors">@job.Title</h4>
                    <div class="flex items-center text-xs text-slate-600 mb-3 gap-1">
                        <i class="bi bi-clock"></i>
                        <span class="font-medium">@job.EstimatedHours hrs</span>
                    </div>
                    <div class="flex items-center text-xs text-slate-500 gap-1">
                        <i class="bi bi-list-check"></i>
                        <span>@job.Items.Count() tasks</span>
                    </div>
                </a>
            }
        </div>
    </div>

    <!-- In Progress Column -->
    <div class="bg-blue-50 rounded-2xl p-5 min-h-[600px]">
        <div class="flex items-center justify-between mb-6">
            <h3 class="font-bold text-slate-900 text-lg">In Progress</h3>
            <span class="px-3 py-1.5 text-xs font-semibold text-blue-700 bg-blue-200 rounded-full ring-1 ring-blue-300">
                @Model.JobCards.Count(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.InProgress)
            </span>
        </div>
        <div class="space-y-4">
            @foreach (var job in Model.JobCards.Where(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.InProgress))
            {
                <a href="/JobCards/Details?id=@job.Id" class="block bg-white rounded-xl p-5 shadow-sm hover:shadow-lg transition-all duration-200 border-l-4 border-blue-500 group">
                    <div class="flex items-start justify-between mb-3">
                        <span class="text-xs font-mono text-slate-500 font-semibold">#@job.JobCardNumber</span>
                        <span class="px-2.5 py-1 text-xs font-semibold @GetPriorityBadge(job.Priority) rounded-full ring-1">
                            @job.Priority
                        </span>
                    </div>
                    <h4 class="font-semibold text-slate-900 text-sm mb-4 group-hover:text-blue-600 transition-colors">@job.Title</h4>
                    <div class="flex items-center text-xs text-slate-600 mb-3 gap-1">
                        <i class="bi bi-clock"></i>
                        <span class="font-medium">@job.ActualHours / @job.EstimatedHours hrs</span>
                    </div>
                    <div class="flex items-center text-xs text-slate-500 gap-1">
                        <i class="bi bi-check-circle"></i>
                        <span>@job.Items.Count(i => i.Status == Gixat.Web.Modules.Sessions.Enums.TaskStatus.Completed) / @job.Items.Count() complete</span>
                    </div>
                </a>
            }
        </div>
    </div>

    <!-- Waiting Parts Column -->
    <div class="kanban-column">
        <div class="flex items-center justify-between mb-4">
            <h3 class="font-semibold text-gray-900">Waiting Parts</h3>
            <span class="px-2.5 py-1 text-xs font-medium text-orange-600 bg-orange-100 rounded-full">
                @Model.JobCards.Count(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.OnHold)
            </span>
        </div>
        <div class="space-y-3">
            @foreach (var job in Model.JobCards.Where(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.OnHold))
            {
                <a href="/JobCards/Details?id=@job.Id" class="job-card block border-l-4 border-orange-500">
                    <div class="flex items-start justify-between mb-2">
                        <span class="text-xs font-mono text-gray-500">@job.JobCardNumber</span>
                        <span class="px-2 py-1 text-xs font-medium @GetPriorityBadge(job.Priority) rounded-full">
                            @job.Priority
                        </span>
                    </div>
                    <h4 class="font-medium text-gray-900 text-sm mb-3">@job.Title</h4>
                    <div class="flex items-center text-xs text-gray-600">
                        <i class="bi bi-box-seam mr-1"></i>
                        Waiting for parts
                    </div>
                </a>
            }
        </div>
    </div>

    <!-- Completed Column -->
    <div class="kanban-column">
        <div class="flex items-center justify-between mb-4">
            <h3 class="font-semibold text-gray-900">Quality Check</h3>
            <span class="px-2.5 py-1 text-xs font-medium text-purple-600 bg-purple-100 rounded-full">
                @Model.JobCards.Count(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.Approved || j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.Completed)
            </span>
        </div>
        <div class="space-y-3">
            @foreach (var job in Model.JobCards.Where(j => j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.Approved || j.Status == Gixat.Web.Modules.Sessions.Enums.JobCardStatus.Completed))
            {
                <a href="/JobCards/Details?id=@job.Id" class="job-card block border-l-4 border-purple-500">
                    <div class="flex items-start justify-between mb-2">
                        <span class="text-xs font-mono text-gray-500">@job.JobCardNumber</span>
                        <span class="px-2 py-1 text-xs font-medium @GetPriorityBadge(job.Priority) rounded-full">
                            @job.Priority
                        </span>
                    </div>
                    <h4 class="font-medium text-gray-900 text-sm mb-3">@job.Title</h4>
                    <div class="flex items-center text-xs text-gray-600">
                        <i class="bi bi-check-circle text-green-600 mr-1"></i>
                        @job.Status
                    </div>
                </a>
            }
        </div>
    </div>
</div>


@functions {
    string GetPriorityBadge(Gixat.Web.Modules.Sessions.Enums.Priority priority)
    {
        return priority switch
        {
            Gixat.Web.Modules.Sessions.Enums.Priority.High => "bg-red-100 text-red-700",
            Gixat.Web.Modules.Sessions.Enums.Priority.Normal => "bg-blue-100 text-blue-700",
            Gixat.Web.Modules.Sessions.Enums.Priority.Low => "bg-gray-100 text-gray-700",
            _ => "bg-gray-100 text-gray-700"
        };
    }
}
